<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/flip_screen_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:orientation="horizontal"
            android:visibility="gone">

            <ViewFlipper
                android:id="@+id/view_flipper"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:singleLine="true"
                        android:textColor="@color/highlighter"
                        android:textSize="@dimen/font_medium"></TextView>

                    <Button
                        android:id="@+id/btn_search"
                        android:layout_width="@dimen/filter_icon"
                        android:layout_height="@dimen/filter_icon"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_vector_search" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white">

                    <Button
                        android:id="@+id/btn_filter_popup"
                        android:layout_width="@dimen/filter_icon"
                        android:layout_height="@dimen/filter_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="2dp"
                        android:background="@drawable/btn_productfilter_"
                        android:padding="2dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="@android:color/white"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <EditText
                            android:id="@+id/edt_searchproductName"
                            android:layout_width="0dip"
                            android:layout_height="@dimen/filter_icon"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="left"
                            android:imeOptions="actionDone"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/highlighter"></EditText>

                        <Button
                            android:id="@+id/btn_clear"
                            android:layout_width="@dimen/filter_icon"
                            android:layout_height="@dimen/filter_icon"
                            android:background="@drawable/btn_productfilter_clear"
                            android:padding="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </ViewFlipper>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/parent_order_id_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:textSize="@dimen/font_small"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />

            <TextView
                style="?attr/customListTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"

                android:paddingRight="2dp"
                android:text="@string/base_order_number_label" />

            <TextView
                android:id="@+id/base_order_number_text_view"
                android:textSize="@dimen/font_small"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:gravity="center"
                android:paddingLeft="2dp" />

            <TextView
                android:textSize="@dimen/font_small"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/parent_container"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/parent_container_order_id_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/base_order_number_text_veiw11"
                    android:textSize="@dimen/font_small"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/base_order_number_label" />

                <TextView
                    android:textSize="@dimen/font_small"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="normal layout"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/parent"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:padding="2dp">

                <LinearLayout
                    android:id="@+id/parent_root11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="23"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingRight="2dp"
                        android:visibility="gone">
                        <!--
                         <Button
                           android:id="@+id/select_all_button"
                           style="@style/ButtonListMenu"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center_vertical"
                           android:gravity="center"

                           android:text="@string/all_label" /> -->
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/parent_root1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:background="@color/white_box_end"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:id="@+id/root1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            >
                            <!--
                                        <LinearLayout
                                            android:id="@+id/container_all_button"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1.5"
                                            android:paddingLeft="4dp"
                                            android:paddingRight="4dp" >

                                            <Button
                                                android:id="@+id/select_all_button"
                                                style="@style/Button"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:gravity="center"
                                                android:text="@string/all_label" />

                                        </LinearLayout> -->

                            <LinearLayout
                                android:id="@+id/container_all_button"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_weight="1.5"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/select_all_button"

                                    android:layout_width="fill_parent"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"

                                    android:text="@string/all_label" />

                            </LinearLayout>

                            <TextView
                                style="?attr/customListTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.5"

                                android:visibility="gone" />

                            <TextView
                                style="?attr/customListTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="6"

                                android:text="@string/sku_code_label" />

                            <TextView
                                android:id="@+id/description_heading"
                                style="?attr/customListTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="9.5"

                                android:text="@string/description_label" />

                            <TextView
                                style="?attr/customListTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="2.5"

                                android:text="@string/oc_label" />

                            <TextView
                                style="?attr/customListTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="2.5"

                                android:text="@string/op_label" />
                        </LinearLayout>

                        <!--        <ListView
                                    android:id="@+id/listView1"
                                    android:layout_width="match_parent"
                                    android:layout_height="fill_parent"
                                    android:cacheColorHint="@android:color/transparent"
                                    android:divider="@android:color/transparent"
                                    android:dividerHeight="10dp"> -->

                        <ListView
                            android:id="@+id/listView1"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="2dp"

                            android:cacheColorHint="@android:color/transparent"
                            android:divider="@color/white_box_end"
                            android:dividerHeight="2dp">

                        </ListView>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/parent_root2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/split_btn"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"

                        android:text="@string/split_button_label" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/parent_root3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:layout_weight="9"
                    android:background="@color/white_box_end"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/root3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <TextView
                            style="?attr/customListTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:layout_weight="1.5"
                            android:text=""
                            android:visibility="gone" />

                        <TextView
                            style="?attr/customListTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:layout_weight="3.5"
                            android:text="@string/order_split_label" />

                        <TextView
                            style="?attr/customListTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:layout_weight="3"
                            android:text="@string/n_sku_label" />

                        <TextView
                            style="?attr/customListTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:layout_weight="2"
                            android:text="" />
                    </LinearLayout>

                    <!--
                    <ListView
                      android:id="@+id/right_listView1"
                      android:layout_width="match_parent"
                         android:layout_height="fill_parent"
                      android:cacheColorHint="@android:color/transparent"
                      android:divider="@android:color/transparent"
                      android:dividerHeight="10dp"
                      android:layout_margin="10dp"
                      /> -->


                    <ListView
                        android:id="@+id/right_listView1"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:layout_marginBottom="2dp"

                        android:cacheColorHint="@android:color/transparent"
                        android:divider="@color/white_box_end"
                        android:dividerHeight="2dp"


                        />

                    <Button
                        android:id="@+id/add_new_splitting_master_btn"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="@string/add_label" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/right_drawer"
        android:layout_width="@dimen/filter_slider_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/background_noise" />

</android.support.v4.widget.DrawerLayout>