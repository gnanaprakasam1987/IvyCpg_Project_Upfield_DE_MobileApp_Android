    <style name="MyButtonBlue" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/ripple_blue</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">?attr/accentcolor</item>
        <item name="borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <!-- To apply theme for dialogs
           colorAccent: To apply theme color accent to progress bar spinner, check boxes, Edittexts,....
           windowBackground: To avoid two alert dialog frames in prelollipop devices
           buttonStyle: To apply theme button style to custon buttons in Dialog Fragment-->
    <style name="DialogStyleBlue" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?attr/accentcolor</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:buttonStyle">@style/MyButtonBlue</item>
    </style>

    <style name="ButtonSmallRoundCornerBlue_enabled" parent="@style/ButtonSmall">
        <item name="android:background">@drawable/button_rounded_corner_blue</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="ButtonNormalRoundCornerBlue_enabled" parent="@style/ButtonNormal">
        <item name="android:background">@drawable/button_rounded_corner_blue</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="ButtonSmallRoundCornerBlue_disabled" parent="@style/ButtonSmall">
        <item name="android:background">@drawable/button_rounded_corner_blue</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="ButtonNormalRoundCornerBlue_disabled" parent="@style/ButtonNormal">
        <item name="android:background">@drawable/button_rounded_corner_blue</item>
        <item name="android:enabled">false</item>
