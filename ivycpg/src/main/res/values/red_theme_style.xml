    <style name="MyButtonRed" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/ripple_red</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <!-- To apply theme for dialogs
           colorAccent: To apply theme color accent to progress bar spinner, check boxes, Edittexts,....
           windowBackground: To avoid two alert dialog frames in prelollipop devices
           buttonStyle: To apply theme button style to custon buttons in Dialog Fragment-->
    <style name="DialogStyleRed" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccentRed</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="buttonStyle">@style/MyButtonRed</item>
    </style>

