<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- To apply theme to dialogs
           buttonBarButonStyle: to apply theme accent color to default OK(positive) and CANCEL(Negative) buttons in api 24
            colorAccent: To apply color accent to progress bar spinner, check boxes, Edittexts,....
            buttonStyle: To apply theme button style to custon buttons in Dialog Fragment-->
    <style name="DialogStyleBlue" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/DialogButtonStyleBlue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/MyButtonBlue</item>
    </style>

    <style name="DialogButtonStyleBlue" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


