<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:minHeight="@dimen/list_card_height">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/type_img_view"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="?attr/circleBackground"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_announcement_24dp" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/announcement_tv"
        style="@style/TextViewListItemPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_toEndOf="@+id/type_img_view"
        android:text="@string/enter_deviate_reason_to_plan_this_retailer_for_today" />

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/announcement_tv"
        android:layout_alignStart="@+id/announcement_tv"
        android:background="@color/light_gray" />-->
</RelativeLayout>