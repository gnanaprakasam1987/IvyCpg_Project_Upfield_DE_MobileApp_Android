<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_time_slot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_transparent"
    android:minHeight="@dimen/dimen_80dp"
    android:padding="@dimen/dimen_4dp">

    <TextView
        android:id="@+id/tv_time_slot"
        style="@style/TextViewListItemPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginEnd="@dimen/dimen_4dp"
        android:layout_marginRight="@dimen/dimen_4dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_retailer_name"
        style="@style/TextViewListItemPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/tv_time_slot"
        android:layout_toRightOf="@+id/tv_time_slot"
        android:textColor="?attr/primarycolor" />

</RelativeLayout>

