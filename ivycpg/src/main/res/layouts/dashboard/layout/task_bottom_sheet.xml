<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curve_top_white"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/dimen_0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/TextViewNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:text="@string/sort_by"
            android:textAlignment="textStart" />
    </LinearLayout>

    <TextView
        android:id="@+id/asc_ord_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_gravity="start|center"
        android:drawableStart="@drawable/ic_sort_by_alpha_black_24dp"
        android:drawableLeft="@drawable/ic_sort_by_alpha_black_24dp"
        android:drawablePadding="@dimen/_15sdp"
        android:gravity="start|center"
        android:padding="@dimen/_10sdp"
        android:text="@string/asc_order" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/desc_ord_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:drawableStart="@drawable/ic_sort_by_alpha_black_24dp"
        android:drawableLeft="@drawable/ic_sort_by_alpha_black_24dp"
        android:drawablePadding="@dimen/_15sdp"
        android:gravity="start|center"
        android:padding="@dimen/_10sdp"
        android:text="@string/desc_order" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/level_ord_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:drawableStart="@drawable/ic_tag_black_24dp"
        android:drawableLeft="@drawable/btn_productfilter_"
        android:drawablePadding="@dimen/_15sdp"
        android:gravity="start|center"
        android:padding="@dimen/_10sdp"
        android:text="@string/category" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/due_date_ord_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:drawableStart="@drawable/ic_date_picker"
        android:drawableLeft="@drawable/ic_date_picker"
        android:drawablePadding="@dimen/_15sdp"
        android:gravity="start|center"
        android:padding="@dimen/_10sdp"
        android:text="@string/due_date" />

