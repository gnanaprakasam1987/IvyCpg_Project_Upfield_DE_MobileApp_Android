<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_noise"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include
            android:id="@+id/toolbar"
            layout="@layout/material_tool_bar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_asset_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_toolbar"
        android:layout_marginEnd="@dimen/dimens_10dp"
        android:layout_marginLeft="@dimen/dimens_10dp"
        android:layout_marginRight="@dimen/dimens_10dp"
        android:layout_marginStart="@dimen/dimens_10dp"
        android:layout_marginTop="@dimen/dimens_40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_asset_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dimens_10dp"
                android:layout_marginRight="@dimen/dimens_10dp"
                android:layout_weight="2.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_asset_type"
                    style="@style/TextViewCaptionNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="asset_type"
                    android:text="@string/type" />

                <Spinner
                    android:id="@+id/spinner_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spinner_height"
                    android:background="@android:color/transparent"
                    android:overlapAnchor="false" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_asset_model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.5"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_marginStart="@dimen/dimens_10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_asset_model"
                    style="@style/TextViewCaptionNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="asset_model"
                    android:text="@string/model" />

                <Spinner
                    android:id="@+id/spinner_model"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spinner_height"
                    android:background="@android:color/transparent"
                    android:overlapAnchor="false" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_asset_vendor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.5"
                android:layout_marginEnd="@dimen/dimens_10dp"
                android:layout_marginRight="@dimen/dimens_10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_asset_vendor"
                    style="@style/TextViewCaptionNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="asset_vendor"
                    android:text="@string/vendor" />

                <Spinner
                    android:id="@+id/spinner_vendor"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spinner_height"
                    android:background="@android:color/transparent"
                    android:overlapAnchor="false" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_asset_capacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.5"
                android:layout_marginStart="@dimen/dimens_10dp"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_asset_capacity"
                    style="@style/TextViewCaptionNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="asset_capacity"
                    android:text="@string/capacity" />

                <Spinner
                    android:id="@+id/spinner_capcity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spinner_height"
                    android:background="@android:color/transparent"
                    android:overlapAnchor="false" />

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_text"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_asset_date_sno_nfc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_asset_filters"
        android:layout_marginEnd="@dimen/dimens_10dp"
        android:layout_marginLeft="@dimen/dimens_10dp"
        android:layout_marginRight="@dimen/dimens_10dp"
        android:layout_marginStart="@dimen/dimens_10dp"
        android:layout_marginTop="@dimen/dimens_40dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:layout_marginEnd="@dimen/dimens_10dp"
                android:layout_marginRight="@dimen/dimens_10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewCaptionNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/addasset" />

                <Spinner
                    android:id="@+id/spinner_asset"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spinner_height"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:overlapAnchor="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:layout_marginStart="@dimen/dimens_10dp"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/TextViewCaptionNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/addassetinstall" />

                <Button
                    android:id="@+id/date_button"
                    style="@style/datePickerButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/servicedate" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:layout_marginEnd="@dimen/dimens_10dp"
                android:layout_marginRight="@dimen/dimens_10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label_scan"
                    style="@style/TextViewCaptionNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="asset_serialno"
                    android:text="@string/addassetsno" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/etxt_sno"
                        style="@style/EditText_ListItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_toLeftOf="@+id/imageView_barcode_scan"
                        android:layout_toStartOf="@+id/imageView_barcode_scan"
                        android:cursorVisible="true"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789/._"
                        android:hint="@string/zero"
                        android:maxLength="50"
                        android:paddingBottom="10dp" />

                    <ImageView
                        android:id="@+id/imageView_barcode_scan"
                        android:layout_width="@dimen/dimens_40dp"
                        android:layout_height="@dimen/dimens_40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/barcode_scan_black" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimens_10dp"
                android:layout_marginStart="@dimen/dimens_10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNFCLabel"
                    style="@style/TextViewCaptionNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="asset_nfcno"
                    android:text="@string/enter_nfc_number" />

                <EditText
                    android:id="@+id/etxt_nfc_number"
                    style="@style/EditText_ListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="true"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789/._"
                    android:hint="@string/zero"
                    android:maxLength="50" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llnewassetPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewCaptionNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/asset_image" />

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="@dimen/dimens_40dp"
                android:layout_height="@dimen/dimens_40dp"
                android:layout_margin="@dimen/dimen_5dp"
                android:src="@drawable/ic_photo_camera_blue_24dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimens_12dp"
        android:layout_marginTop="@dimen/dimens_12dp">

        <include
            android:id="@+id/keypad"
            layout="@layout/keypad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:layout_alignParentBottom="true"
        android:background="@color/footer_bg_color"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="@dimen/footer_padding">


        <Button
            android:id="@+id/btn_save"
            style="?attr/roundedCustomButtonSmall"
            android:text="@string/save"
            android:textAllCaps="false" />

    </LinearLayout>
</RelativeLayout>

