<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_noise"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include
            android:id="@+id/toolbar"
            layout="@layout/material_tool_bar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_toolbar"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:orientation="horizontal"
        android:padding="@dimen/dimens_16dp">

        <TextView
            style="@style/TextViewCaption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:text="@string/addasset" />

        <TextView
            style="@style/TextViewCaption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:text="@string/enter_nfc_number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_one"
        android:orientation="horizontal"
        android:padding="@dimen/dimens_16dp"
        android:weightSum="2.05">

        <Spinner
            android:id="@+id/spinner_asset"
            android:layout_width="0dp"
            android:layout_height="@dimen/spinner_height"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:overlapAnchor="false" />

        <EditText
            android:id="@+id/etxt_nfc_number"
            style="@style/EditText_ListItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:cursorVisible="true"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
            android:hint="@string/zero"
            android:maxLength="50"
            android:paddingBottom="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_two"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:orientation="horizontal"
        android:padding="@dimen/dimens_16dp">

        <TextView
            android:id="@+id/label_scan"
            style="@style/TextViewCaption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:text="@string/addassetsno" />

        <TextView
            style="@style/TextViewCaption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:text="@string/addassetinstall" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_three"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dimens_16dp"
        android:weightSum="5">

        <EditText
            android:id="@+id/etxt_sno"
            style="@style/EditText_ListItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="2"
            android:cursorVisible="true"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
            android:hint="@string/zero"
            android:maxLength="50"
            android:paddingBottom="10dp" />

        <ImageView
            android:id="@+id/imageView_barcode_scan"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_weight=".5"
            android:src="@drawable/barcode_scan_black" />

        <Button
            android:id="@+id/date_button"
            style="@style/datePickerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="@string/servicedate" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llnewassetPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_four"
        android:orientation="vertical"
        android:padding="@dimen/dimens_16dp">

        <TextView
            style="@style/TextViewCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:fontFamily="@font/roboto_light"
            android:text="@string/asset_image" />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:src="@drawable/ic_photo_camera_blue_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_12dp"
        android:layout_marginBottom="@dimen/dimens_12dp">

        <include
            android:id="@+id/keypad"
            layout="@layout/keypad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:layout_alignParentBottom="true"
        android:background="@color/footer_bg_color"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="@dimen/footer_padding">


        <Button
            android:id="@+id/btn_save"
            style="?attr/roundedCustomButtonSmall"
            android:text="@string/save"
            android:textAllCaps="false" />

    </LinearLayout>
</RelativeLayout>

