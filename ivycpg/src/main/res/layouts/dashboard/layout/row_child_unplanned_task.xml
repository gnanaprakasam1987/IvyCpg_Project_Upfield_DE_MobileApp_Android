<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/curve_bottom_white"
        android:padding="@dimen/_6sdp"
        tools:ignore="UselessParent">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/task_name_tv"
            style="@style/TextViewListItemSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/heading_bg_color_red"
            android:paddingStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:text="@string/task"
            android:textAllCaps="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/task_due_date_tv"
            style="@style/TextViewListTitleSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/task_name_tv"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toEndOf="@+id/task_name_tv"
            android:paddingStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:text="@string/due_date"
            android:textColor="@color/red_week_background" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/task_title_tv"
            style="@style/TextViewListItemSecondary"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_due_date_tv"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="@dimen/_4sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:paddingBottom="@dimen/_4sdp"
            android:text="@string/title" />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/task_title_tv"
            android:layout_marginBottom="@dimen/_4sdp"
            android:background="@color/light_gray"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
