<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:gravity="center_vertical"
    android:padding="@dimen/dimen_5dp">

    <TextView
        android:id="@+id/textview_company_name"
        style="@style/TextViewListItemPrimary"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:text="company"
        android:fontFamily="@font/roboto_medium"
        android:layout_weight="6"/>

    <LinearLayout
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:weightSum="10"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/image_plus"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="30dp"
            android:src="@drawable/plus_new"
            android:layout_weight="2"/>
        <EditText
            android:id="@+id/image_quantity"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_weight="4"
            android:background="@drawable/rounded_corner_black"
            android:inputType="number"
            android:text="@string/zero"
            android:gravity="center"
            android:clickable="false"/>

        <ImageView
            android:id="@+id/imiage_minus"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="30dp"
            android:src="@drawable/minus_new"
            android:layout_weight="2"/>

    </LinearLayout>
</LinearLayout>
