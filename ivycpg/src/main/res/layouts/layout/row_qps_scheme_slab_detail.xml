<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lnrSchemeHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_schemetype"
                    style="?attr/customListItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/list_margin"
                    android:layout_marginRight="@dimen/list_margin"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:text="Status Inclusing Current Order" />

                <TextView
                    android:id="@+id/tv_current_cumulative_purchase"
                    style="?attr/customListItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/list_margin"
                    android:layout_marginRight="@dimen/list_margin"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    android:id="@+id/tv_current_cumulative_scheme_discount"
                    style="?attr/customListItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/list_margin"
                    android:layout_marginRight="@dimen/list_margin"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    android:id="@+id/tv_current_scheme_per_amt"
                    style="?attr/customListItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/list_margin"
                    android:layout_marginRight="@dimen/list_margin"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    android:id="@+id/tv_current_balance_to_nextslab"
                    style="?attr/customListItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/list_margin"
                    android:layout_marginRight="@dimen/list_margin"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@color/black_bg1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_header_productName"
                    style="?attr/customListTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/list_margin"
                    android:layout_marginRight="@dimen/list_margin"
                    android:layout_weight="0.90"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:text="Product Name" />

                <TextView
                    android:id="@+id/tv_header_pcs_ordered_qty"
                    style="?attr/customListTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/list_margin"
                    android:layout_marginRight="@dimen/list_margin"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="Ordered Qty(Pcs)" />

                <TextView
                    android:id="@+id/tv_header_cases_ordered_qty"
                    style="?attr/customListTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/list_margin"
                    android:layout_marginRight="@dimen/list_margin"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="Ordered Qty(Cases)" />

                <TextView
                    android:id="@+id/tv_header_uom"
                    style="?attr/customListTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/list_margin"
                    android:layout_marginRight="@dimen/list_margin"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="UOM" />

                <TextView
                    android:id="@+id/tv_header_pcs_final_qty"
                    style="?attr/customListTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/list_margin"
                    android:layout_marginRight="@dimen/list_margin"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="Final Qty(Pcs)" />

                <TextView
                    android:id="@+id/tv_header_cases_final_qty"
                    style="?attr/customListTitle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/list_margin"
                    android:layout_marginRight="@dimen/list_margin"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="Final Qty(Cases)" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_productName"
                style="?attr/customListItemPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/list_margin"
                android:layout_marginRight="@dimen/list_margin"
                android:layout_weight="0.9"
                android:gravity="left"
                android:paddingLeft="@dimen/dimen_5dp"
                android:text="Product Name" />

            <TextView
                android:id="@+id/tv_pcs_ordered_qty"
                style="?attr/customListItemPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/list_margin"
                android:layout_marginRight="@dimen/list_margin"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/tv_cases_ordered_qty"
                style="?attr/customListItemPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/list_margin"
                android:layout_marginRight="@dimen/list_margin"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="0" />

            <TextView
                android:id="@+id/tv_uom"
                style="?attr/customListItemPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/list_margin"
                android:layout_marginRight="@dimen/list_margin"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="0" />

            <EditText
                android:id="@+id/tv_pcs_final_qty"
                style="?attr/customListItemPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/list_margin"
                android:layout_marginRight="@dimen/list_margin"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="0" />

            <EditText
                android:id="@+id/tv_cases_final_qty"
                style="?attr/customListItemPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/list_margin"
                android:layout_marginRight="@dimen/list_margin"
                android:layout_weight="0.25"
                android:gravity="center"
                android:text="0" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
