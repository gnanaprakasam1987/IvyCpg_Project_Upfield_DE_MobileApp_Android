<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_title_salesReturn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/padding_normal"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_normal"
        android:text="Sales Return Delivery Details" />

    <LinearLayout
        android:id="@+id/container_titles"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/txt_title_salesReturn"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/Product_details" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/Black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="Return Case Quantity" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="@color/Black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="Return Piece Quantity" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="@color/Black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="Actual Case Quantity" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:background="@color/Black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="Actual Piece Quantity" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/SalesReturn_Details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/filter_level_height"
        android:layout_below="@+id/container_titles"
        android:layout_margin="@dimen/padding_normal">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>