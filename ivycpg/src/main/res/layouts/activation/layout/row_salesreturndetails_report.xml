<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/list_margin">


    <TextView
        android:id="@+id/text_productName"
        style="?attr/customListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:text="@string/product_name"
        android:textColor="@color/black_bg1"
        android:textSize="@dimen/list_item_primary_text_size" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="8">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <TextView
                android:id="@+id/text_reason"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical|left"
                android:layout_marginRight="@dimen/dimen_4dp"
                android:gravity="center_vertical|left"
                android:textSize="@dimen/font_nano_small" />

            <TextView
                android:id="@+id/text_divider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginRight="@dimen/dimen_4dp"
                android:layout_toRightOf="@+id/text_reason"
                android:gravity="center_vertical|center_horizontal"
                android:text="-" />

            <TextView
                android:id="@+id/text_reasonType"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_toRightOf="@+id/text_divider"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="@dimen/font_nano_small" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_caseQty"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" />


        <TextView
            android:id="@+id/text_pieceQty"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:id="@+id/text_outerQty"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="0" />

        <TextView
            android:id="@+id/text_value"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" />


    </LinearLayout>

</LinearLayout>