<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ivy.cpg.view.collection.NoCollectionReasonActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/material_tool_bar" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_margin="@dimen/list_margin"
        card_view:cardBackgroundColor="@color/WHITE"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="5dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="0dp"
        android:paddingBottom="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/topic_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/screen_title_height"
                android:background="?customLayoutBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/invoice_no"
                    style="?attr/customListTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.35"
                    android:gravity="start|center_vertical"
                    android:text="@string/invoice_no"
                    android:textColor="@color/white"
                    android:textSize="@dimen/list_item_primary_text_size" />

                <TextView
                    android:id="@+id/invoice_date"
                    style="?attr/customListTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.15"
                    android:gravity="start|center_vertical"
                    android:text="@string/inv_date"
                    android:textColor="@color/white"
                    android:textSize="@dimen/list_item_primary_text_size" />

                <TextView
                    android:id="@+id/invoice_amount"
                    style="?attr/customListTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.15"
                    android:gravity="end|center_vertical"
                    android:text="@string/inv_amt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/list_item_primary_text_size" />

                <TextView
                    android:id="@+id/invoice_reason"
                    style="?attr/customListTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.35"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/reason"
                    android:textColor="@color/white"
                    android:textSize="@dimen/list_item_primary_text_size" />


            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/invoice_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/topic_layout"
                android:layout_marginEnd="@dimen/list_margin"
                android:layout_marginStart="@dimen/list_margin"
                android:scrollbars="none"
                android:layout_above="@+id/done_btn"/>

            <Button
                android:id="@+id/done_btn"
                style="?attr/roundedCustomButtonSmall"
                android:text="@string/done"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textSize="@dimen/font_micro_small"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
