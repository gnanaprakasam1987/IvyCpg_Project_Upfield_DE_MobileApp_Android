<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270" 
                android:endColor="@color/blue_btn_normal_start"
                android:startColor="@color/blue_btn_normal_end" 
                />

            <corners android:radius="0dp" />

            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="2dp" />

            <stroke
                android:width="1dp"
                android:color="@color/blue_btn_normal_border" />
        </shape>
    </item>

</layer-list>