<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/_10sdp" />
            <gradient
                android:startColor="#c2defa"
                android:centerColor="#c2defa"
                android:centerY="0.75"
                android:endColor="#c2defa"
                android:angle="270"
                />
        </shape>
    </item>


    <item
        android:id="@android:id/progress"
        >
        <clip>
            <shape>
                <corners
                    android:radius="@dimen/_10sdp" />
                <gradient
                    android:startColor="#4a90e2"
                    android:endColor="#4a90e2"
                    android:angle="270" />
            </shape>
        </clip>
    </item>

</layer-list>