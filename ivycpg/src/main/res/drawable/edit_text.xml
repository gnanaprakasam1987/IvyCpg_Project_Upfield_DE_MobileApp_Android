<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="@android:color/white" android:endColor="@color/light_grey" android:gradientRadius="20" android:startColor="@color/light_grey" />

            <stroke android:width="1dp" android:color="@color/blue_btn_normal_border" />

            <corners android:radius="2dp" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="@android:color/white" android:endColor="@color/light_grey" android:gradientRadius="20" android:startColor="@color/light_grey" />

            <stroke android:width="1dp" android:color="@color/blue_btn_normal_border" />

            <corners android:radius="2dp" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:centerColor="@android:color/white" android:endColor="@color/light_grey" android:startColor="@color/light_grey" />

            <stroke android:width="1dp" android:color="@color/GRAY" />

            <corners android:radius="2dp" />

            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape></item>

</selector>