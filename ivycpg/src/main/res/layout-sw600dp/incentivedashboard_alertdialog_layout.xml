<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height='@dimen/height_list_row'
        android:background="?attr/primarycolor"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/tv_sfactor"
            style="?attr/customListTitle"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.40"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/factor_InscDash"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/tv_starget"
            style="?attr/customListTitle"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/target"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_sachived"
            style="?attr/customListTitle"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/achived"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_sachper"
            style="?attr/customListTitle"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.60"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/ach"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_spayout_earned"
            style="?attr/customListTitle"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/payout_earned"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_smax_possible"
            style="?attr/customListTitle"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/max_possible"
            android:textColor="@color/white" />


    </LinearLayout>


    <ListView
        android:id="@+id/lv_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_parent"></ListView>


</RelativeLayout>
