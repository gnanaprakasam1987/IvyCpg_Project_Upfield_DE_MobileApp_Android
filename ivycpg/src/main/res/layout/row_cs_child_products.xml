<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/list_padding_left_n_right"
    android:paddingRight="@dimen/list_padding_left_n_right"

    android:gravity="center_vertical">
    <!--android:weightSum="10"-->
    <LinearLayout
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <TextView
            style="?attr/customListItemPrimary"
            android:id="@+id/stock_and_order_listview_productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:text="@string/product_name"
            />
        <TextView
            android:id="@+id/tv_barcode"
            style="?attr/customListItemSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/dimen_2dp"
            android:maxLines="1"
            android:text="@string/barcode"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/stock_and_order_listview_pcs_qty"
        style="@style/EditTextDoubleLine"
        android:layout_width="@dimen/dimen_0dp"
        android:text="@string/zero"
        android:layout_weight="1.1"/>

    <EditText
        android:id="@+id/tv_free_pcs"
        style="@style/EditTextDoubleLine"
        android:layout_width="@dimen/dimen_0dp"
        android:text="@string/zero"
        android:layout_weight="1.1"
        />
    <TextView
        android:id="@+id/txt_sih"
        style="@style/TextViewListItem"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/zero"
        android:layout_weight="1.1"/>
    <TextView
        android:id="@+id/txt_free_sih"
        style="@style/TextViewListItem"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/zero"
        android:layout_weight="1.1"/>
    <TextView
        android:id="@+id/txt_mrp"
        style="@style/TextViewListItem"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/zero"
        android:layout_weight="1.3"/>
    <TextView
        android:id="@+id/txt_total"
        style="@style/TextViewListItem"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/zero"
        android:layout_weight="1.3"/>


</LinearLayout>
