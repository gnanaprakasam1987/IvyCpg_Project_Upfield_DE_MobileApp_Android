<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orderScreenListRow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/list_item_padding_top_nd_bottom"
    android:paddingLeft="@dimen/list_padding_left_n_right"
    android:paddingRight="@dimen/list_padding_left_n_right"
    android:paddingTop="@dimen/list_item_padding_top_nd_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/stock_and_order_listview_productname"
                style="?attr/customListItemPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:gravity="left|center"
                android:maxLines="1"
                android:text="@string/product_name" />

            <TextView
                android:id="@+id/stock_and_order_listview_mrp"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/stock_and_order_listview_productname"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:maxLines="1"
                android:text="@string/mrp"
                android:visibility="gone" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_stock_and_order_listview_cb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center">

            <TextView
                android:id="@+id/stock_check_sih"
                style="?attr/customListItemValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zero" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5">

            <EditText
                android:id="@+id/stock_and_order_listview_sp_qty"
                style="@style/EditText_ListItem"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:layout_weight="1"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/stock_check_listview_variance"
            style="?attr/customListItemValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/zero" />
        <TextView
            android:id="@+id/stock_check_listview_mrp"
            style="?attr/customListItemValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/zero" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <Spinner
            android:id="@+id/reason"
            android:background="@android:color/transparent"
            android:overlapAnchor="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>