<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_noise">

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <include
            layout="@layout/keypad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/footer_bg">

            <LinearLayout
                android:id="@+id/initAll_LL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_initiave_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:visibility="visible">

                    <TextView
                        android:id="@+id/txt_init_value_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:text="@string/initiative_target"
                        android:textColor="?attr/accentcolor"
                        android:textSize="@dimen/greyed_text_size" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_init_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:text="0"
                            android:textColor="@color/WHITE"
                            android:textSize="@dimen/highlight_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="/"
                            android:textColor="@color/WHITE"
                            android:textSize="@dimen/highlight_small" />

                        <TextView
                            android:id="@+id/txt_init_value_suffix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/WHITE"
                            android:textSize="@dimen/footer_lbl_text_size"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/initQty_LL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/widget63"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:singleLine="true"
                            android:text="@string/init_qty"
                            android:textColor="?attr/accentcolor"
                            android:textSize="@dimen/greyed_text_size"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="/"
                            android:textColor="?attr/accentcolor"
                            android:textSize="@dimen/greyed_text_size" />

                        <TextView
                            android:id="@+id/widget65"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:singleLine="true"
                            android:text="@string/tot_qty"
                            android:textColor="?attr/accentcolor"
                            android:textSize="@dimen/greyed_text_size"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/initQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/WHITE"
                            android:textSize="@dimen/highlight_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="/"
                            android:textColor="@color/WHITE"
                            android:textSize="@dimen/highlight_small" />

                        <TextView
                            android:id="@+id/totalQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/WHITE"
                            android:textSize="@dimen/footer_lbl_text_size"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/initValue_LL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/initvalue_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:singleLine="true"
                            android:text="@string/value"
                            android:textColor="?attr/accentcolor"
                            android:textSize="@dimen/greyed_text_size"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="/"
                            android:textColor="?attr/accentcolor"
                            android:textSize="@dimen/greyed_text_size" />

                        <TextView
                            android:id="@+id/totalVolume_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:singleLine="true"
                            android:text="@string/value"
                            android:textColor="?attr/accentcolor"
                            android:textSize="@dimen/greyed_text_size"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/initValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/WHITE"
                            android:textSize="@dimen/highlight_small"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="/"
                            android:textColor="@color/WHITE"
                            android:textSize="@dimen/highlight_small" />

                        <TextView
                            android:id="@+id/totalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/WHITE"
                            android:textSize="@dimen/footer_lbl_text_size"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_done"
                style="?attr/roundedCustomButtonSmall"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/done"
                android:textAllCaps="false"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/material_tool_bar" />

            <TextView
                android:id="@+id/productName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:gravity="start"
                android:padding="4dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/highlighter"
                android:textSize="@dimen/font_small"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/list_title_height"
                        android:background="@color/list_title_bg_color"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/productBarcodetitle"
                            style="?attr/customListTitle"
                            android:layout_width="@dimen/order_stock_list_barcode"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/barcode"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/productnametitle"
                            style="?attr/customListTitle"
                            android:layout_width="@dimen/list_product_name_width_init"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/product_name" />

                        <TextView
                            style="?attr/customListTitle"
                            android:layout_width="@dimen/list_item_width_medium"
                            android:layout_height="wrap_content"

                            android:text="@string/ou"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/caseTitle"
                            style="?attr/customListTitle"
                            android:layout_width="@dimen/order_stock_list_item_width"
                            android:layout_height="wrap_content"

                            android:tag="item_case"
                            android:text="@string/item_case" />

                        <TextView
                            android:id="@+id/outercaseTitle"
                            style="?attr/customListTitle"
                            android:layout_width="@dimen/order_stock_list_item_width"
                            android:layout_height="wrap_content"

                            android:text="@string/item_outer" />

                        <TextView
                            android:id="@+id/pcsTitle"
                            style="?attr/customListTitle"
                            android:layout_width="@dimen/order_stock_list_item_width"
                            android:layout_height="wrap_content"

                            android:tag="item_piece"
                            android:text="@string/item_piece" />

                        <TextView
                            android:id="@+id/sihtitle"
                            style="?attr/customListTitle"
                            android:layout_width="@dimen/visit_scree_list_two_row"
                            android:layout_height="wrap_content"

                            android:tag="sih_piece"
                            android:text="@string/sih" />

                        <TextView
                            android:id="@+id/totaltitle"
                            style="?attr/customListTitle"
                            android:layout_width="@dimen/visit_scree_list_two_row"
                            android:layout_height="wrap_content"

                            android:text="@string/total" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/list"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:cacheColorHint="@null"
                        android:divider="@android:color/white"
                        android:dividerHeight="1dp"
                        android:fitsSystemWindows="true"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:scrollbarAlwaysDrawVerticalTrack="true"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>