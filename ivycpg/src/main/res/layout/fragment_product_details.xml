<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TabHost01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/product_tab_widget"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="@dimen/dimens_4dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/product_info_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_60dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dimens_4dp"
                android:text="productname"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/product_details_recycview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dimens_2dp"
                android:scrollbars="vertical" />
            <LinearLayout
                android:id="@+id/ll_sao_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/sku_mixture_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_50dp"
                    android:layout_gravity="center"
                    android:background="@android:color/white"
                    android:gravity="center|left"
                    android:tag="sku_mixture_title"
                    android:paddingLeft="@dimen/dimens_4dp"
                    android:text="SKU Mixture product name"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/ll_sku_mixture_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_60dp"
                    android:layout_gravity="center"
                    android:background="@android:color/white"
                    android:gravity="center|left"
                    android:paddingLeft="@dimen/dimens_4dp"
                    android:orientation="vertical"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>