
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimens_4dp">

            <TextView
                android:id="@+id/product_info_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_60dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:gravity="center|start"
                android:paddingStart="@dimen/dimens_4dp"
                android:paddingEnd="@dimen/dimens_4dp"
                android:paddingRight="@dimen/dimens_4dp"
                android:text="@string/product_name"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:paddingLeft="@dimen/dimens_4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/product_details_recycview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dimens_2dp"
                android:scrollbars="vertical" />

            <LinearLayout
                android:id="@+id/ll_sao_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sku_mixture_title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_50dp"
                    android:layout_gravity="center"
                    android:background="@android:color/white"
                    android:gravity="center|start"
                    android:tag="sku_mixture_title"
                    android:paddingStart="@dimen/dimens_4dp"
                    android:paddingEnd="@dimen/dimens_4dp"
                    android:paddingRight="@dimen/dimens_4dp"
                    android:text="SKU Mixture product name"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/dimens_4dp" />

                <LinearLayout
                    android:id="@+id/ll_sku_mixture_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/white"
                    android:gravity="center|start"
                    android:paddingStart="@dimen/dimens_4dp"
                    android:paddingEnd="@dimen/dimens_4dp"
                    android:paddingRight="@dimen/dimens_4dp"
                    android:orientation="vertical"
                    android:textColor="@android:color/black"
                    android:paddingLeft="@dimen/dimens_4dp" />
            </LinearLayout>


        </LinearLayout>
</androidx.core.widget.NestedScrollView>