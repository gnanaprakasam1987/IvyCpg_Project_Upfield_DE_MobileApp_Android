<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/store_margin_top"
            android:layout_marginLeft="@dimen/store_margin_top">

            <TextView
                android:id="@+id/PRDNAME1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/divder_margin"
                android:padding="@dimen/dimen_2dp"
                android:text="@string/product_name"

                android:textColor="@color/black_bg1"
                android:textSize="@dimen/text_size_primary" />

            <TextView
                android:id="@+id/product_code"
                style="@style/TextViewCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/PRDNAME1"
                android:layout_marginBottom="@dimen/icons_top_margin"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/dimen_2dp"
                android:text="@string/prod_code" />

            <TextView
                android:id="@+id/prdbatchid"
                style="@style/TextViewCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/PRDNAME1"
                android:layout_marginBottom="@dimen/icons_top_margin"
                android:layout_toEndOf="@+id/product_code"
                android:layout_toRightOf="@+id/product_code"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/dimen_2dp"
                android:text="@string/batch_no" />

            <TextView
                android:id="@+id/prdweight"
                style="@style/TextViewCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/PRDNAME1"
                android:layout_marginBottom="@dimen/icons_top_margin"
                android:layout_toEndOf="@+id/prdbatchid"
                android:layout_toRightOf="@+id/prdbatchid"
                android:gravity="center"
                android:padding="@dimen/dimen_2dp"
                android:singleLine="true"
                android:tag="sih"
                android:text="" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/PRDCASEQTY"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/item_case"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_small" />

    <TextView
        android:id="@+id/PRDOUTERQTY"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/item_outer"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_primary" />

    <TextView
        android:id="@+id/PRDQTY"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="center"
        android:maxLines="1"
        android:tag="sih_piece"
        android:text="@string/sih"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_primary" />

    <TextView
        android:id="@+id/PRDVAL"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/value"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_primary" />


</LinearLayout>