<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/asset_name"
                android:textColor="@color/history_label_color"
                android:textSize="@dimen/text_size_secondary"/>
            <TextView
                android:id="@+id/txt_history_assetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asset_name"
                android:textColor="?attr/primarycolor"
                android:textSize="@dimen/text_size_primary" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/serial_no"
                android:textColor="@color/history_label_color"
                android:textSize="@dimen/text_size_secondary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/serial_no"
                android:id="@+id/txt_history_serialNo"
                android:textColor="@color/history_date_color"
                android:textSize="@dimen/text_size_primary" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_label"
                android:textColor="@color/history_label_color"
                android:textSize="@dimen/text_size_secondary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_label"
                android:id="@+id/txt_history_date"
                android:textColor="@color/history_date_color"
                android:textSize="@dimen/text_size_primary" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>