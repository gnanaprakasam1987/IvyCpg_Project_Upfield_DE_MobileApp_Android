<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/dummy_tab_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.design.widget.TabLayout>

        <HorizontalScrollView
            android:id="@+id/hscrl_spl_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="?attr/primarycolor"
            android:fillViewport="true"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_spl_filter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/special_filter_height"

                    android:orientation="horizontal" />
                <!--android:gravity="center_vertical"-->
                <LinearLayout
                    android:id="@+id/ll_tab_selection"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tab_indicator_height"
                    android:orientation="horizontal">
                    <!--android:layout_height="@dimen/tab_selection_identifier_height"-->
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/footer"
            android:layout_below="@+id/hscrl_spl_filter"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/filterscreenlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/search_edt_margin_bottom"
                android:layout_marginLeft="@dimen/search_edt_margin_left_n_right"
                android:layout_marginRight="@dimen/search_edt_margin_left_n_right"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="vertical">

                <ViewFlipper
                    android:id="@+id/view_flipper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white">

                        <TextView
                            android:id="@+id/productName"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/list_margin"
                            android:gravity="left"
                            android:maxLines="1"
                            android:textColor="?attr/primarycolor"
                            android:textSize="@dimen/font_nano_small" />

                        <Button
                            android:id="@+id/btn_search"
                            android:layout_width="@dimen/filter_icon"
                            android:layout_height="@dimen/filter_icon"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="2dp"
                            android:background="@drawable/ic_vector_search" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white">

                        <Button
                            android:id="@+id/btn_filter_popup"
                            android:layout_width="@dimen/filter_icon"
                            android:layout_height="@dimen/filter_icon"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/btn_productfilter_" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_searchproductName"
                                android:layout_width="0dip"
                                android:layout_height="@dimen/filter_icon"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:gravity="left|center_vertical"
                                android:maxLines="1"
                                android:inputType="text"
                                android:text=""
                                android:textColor="@color/GRAY_TEXT"
                                android:textSize="@dimen/font_nano_small" />

                            <Button
                                android:id="@+id/btn_clear"
                                android:layout_width="@dimen/filter_icon"
                                android:layout_height="@dimen/filter_icon"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:background="@drawable/ic_vector_action_clear_grey" />
                        </LinearLayout>
                    </LinearLayout>

                </ViewFlipper>
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/list_margin"
                app:cardBackgroundColor="@android:color/transparent">

                <RelativeLayout
                    android:id="@+id/prod"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_list_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/ll_keypad"
                        android:layout_alignParentTop="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ListHeader"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/list_header_height"
                            android:background="@color/list_title_bg_color"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/list_padding_left_n_right"
                            android:paddingRight="@dimen/list_padding_left_n_right"
                            android:weightSum="10">

                            <TextView
                                android:id="@+id/audit"
                                style="?attr/customListTitle"
                                android:layout_width="@dimen/audit_width"
                                android:layout_height="match_parent"
                                android:text="@string/audit"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tvProductNameTitle"
                                style="?attr/customListTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="left|center_vertical"
                                android:text="@string/product_name" />

                            <TextView
                                android:id="@+id/shelfPcsCB"
                                style="?attr/customListTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/avail" />


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:id="@+id/shelf_layout"
                                android:weightSum="10">

                                <TextView
                                    style="?attr/customListTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    android:text="@string/label_shelf" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/shelfCaseTitle"
                                        style="?attr/customListTitleSecondary"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:tag="shelf_case"
                                        android:text="@string/sc" />

                                    <TextView
                                        android:id="@+id/shelfOuterTitle"
                                        style="?attr/customListTitleSecondary"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:tag="shelf_outer"
                                        android:text="@string/souter" />

                                    <TextView
                                        android:id="@+id/shelfPcsTitle"
                                        style="?attr/customListTitleSecondary"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:tag="shelf_piece"
                                        android:text="@string/sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/et_facingQty"
                                style="?attr/customListTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:tag="item_exp_facing"
                                android:text="@string/facing" />

                            <TextView
                                android:id="@+id/exp_stktotalTitle"
                                style="?attr/customListTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:tag="total_stock"
                                android:text="@string/total" />


                        </LinearLayout>

                        <ListView
                            android:id="@+id/lvwplist"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:cacheColorHint="@null"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0dp"
                            android:padding="@dimen/dimen_1dp"
                            android:fitsSystemWindows="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_keypad"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/keypad"
                            layout="@layout/keypad"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/footer_height"
            android:layout_alignParentBottom="true"
            android:background="@color/footer_bg"
            android:orientation="horizontal"
            android:padding="@dimen/footer_padding">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_stockCheckedProductscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textColor="@color/footer_value_text_color"
                    android:textSize="@dimen/highlight_small" />

                <TextView
                    android:id="@+id/tv_productsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/zero"
                    android:textColor="@color/footer_lbl_text_color"
                    android:textSize="@dimen/footer_lbl_text_size" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                style="?attr/roundedCustomButtonSmall"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/save"
                android:textAllCaps="false" />
        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/right_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/background_noise" />

</android.support.v4.widget.DrawerLayout>