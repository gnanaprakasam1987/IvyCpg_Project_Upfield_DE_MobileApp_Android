<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/WHITE"
    android:orientation="vertical"
    android:padding="@dimen/dimens_6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimens_2dp">

        <CheckBox
            android:id="@+id/creditNoteCheckBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimens_4dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_2dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="@dimen/dimens_4dp">

            <TextView
                android:id="@+id/refNoTxt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/stock_screen_txtview_height"
                android:layout_gravity="center"
                android:maxLines="1"
                android:textColor="@color/store_title"
                android:textSize="@dimen/font_micro_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_16dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:maxLines="1"
                android:text="Ref No"
                android:textColor="@color/Black"
                android:textSize="@dimen/font_nano_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:padding="@dimen/dimens_4dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/totcrdNoteAmtTxt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/stock_screen_txtview_height"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingRight="@dimen/dimens_10dp"
                android:textColor="@color/store_title"
                android:textSize="@dimen/font_micro_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_16dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="TotalValue"
                android:textColor="@color/Black"
                android:textSize="@dimen/font_nano_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.7"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimens_4dp">

            <TextView
                android:id="@+id/crdNoteAmtTxt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/stock_screen_txtview_height"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:maxLines="1"
                android:paddingRight="@dimen/dimens_10dp"
                android:textColor="@color/store_title"
                android:textSize="@dimen/font_micro_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="Balance "
                android:textColor="@color/Black"
                android:textSize="@dimen/font_nano_small" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>