<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dimens_6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimens_2dp">

        <CheckBox
            android:id="@+id/creditNoteCheckBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimens_4dp"
            android:layout_marginLeft="@dimen/dimens_4dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_2dp"
            android:layout_marginLeft="@dimen/dimens_2dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="@dimen/dimens_4dp">

            <TextView
                style="@style/TextViewCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:maxLines="1"
                android:text="@string/ref_no" />

            <TextView
                android:id="@+id/refNoTxt"
                style="@style/TextViewListItemValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:padding="@dimen/dimens_4dp"
            android:visibility="visible">


            <TextView
                style="@style/TextViewCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/total_value" />

            <TextView
                android:id="@+id/totcrdNoteAmtTxt"
                style="@style/TextViewListItemValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingEnd="@dimen/dimens_10dp"
                android:paddingRight="@dimen/dimens_10dp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.7"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimens_4dp">

            <TextView
                style="@style/TextViewCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:maxLines="1"
                android:text="@string/balance" />


            <TextView
                android:id="@+id/crdNoteAmtTxt"
                style="@style/TextViewListItemValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:maxLines="1"
                android:paddingEnd="@dimen/dimens_10dp"
                android:paddingRight="@dimen/dimens_10dp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>