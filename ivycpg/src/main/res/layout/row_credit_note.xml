<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/dimens_6dp">

    <CheckBox
        android:id="@+id/creditNoteCheckBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimens_4dp"
        android:layout_marginStart="@dimen/dimens_4dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_5dp"
        android:paddingLeft="@dimen/dimen_5dp"
        android:paddingStart="@dimen/dimen_5dp"
        android:paddingTop="@dimen/dimen_5dp">

        <LinearLayout
            android:id="@+id/id_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:gravity="start|top"
                android:tag="invoice_history_label"
                android:text="@string/id"
                android:textColor="@color/FullBlack"
                android:textSize="@dimen/text_size_primary" />

            <TextView
                android:id="@+id/creditNoteIDTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:gravity="bottom|start"
                android:text="Dummy Text"
                android:textColor="?attr/primarycolor"
                android:textSize="@dimen/text_size_secondary" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/profile_history_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimens_2dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_2dp"
                android:layout_marginStart="@dimen/dimens_2dp"
                android:layout_weight="3"
                android:orientation="vertical"
                android:padding="@dimen/dimens_4dp">

                <TextView
                    android:id="@+id/refNoTxt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/stock_screen_txtview_height"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/FullBlack"
                    android:textSize="@dimen/text_size_primary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_16dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:maxLines="1"
                    android:text="Ref No"
                    android:textColor="@color/half_Black"
                    android:textSize="@dimen/text_size_secondary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:orientation="vertical"
                android:padding="@dimen/dimens_4dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/totcrdNoteAmtTxt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/stock_screen_txtview_height"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/dimens_10dp"
                    android:paddingRight="@dimen/dimens_10dp"
                    android:textColor="@color/FullBlack"
                    android:textSize="@dimen/text_size_primary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_16dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="TotalValue"
                    android:textColor="@color/half_Black"
                    android:textSize="@dimen/text_size_secondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.7"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dimens_4dp">

                <TextView
                    android:id="@+id/crdNoteAmtTxt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/stock_screen_txtview_height"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/dimens_10dp"
                    android:paddingRight="@dimen/dimens_10dp"
                    android:textColor="@color/FullBlack"
                    android:textSize="@dimen/text_size_primary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:text="Balance "
                    android:textColor="@color/half_Black"
                    android:textSize="@dimen/text_size_secondary" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>