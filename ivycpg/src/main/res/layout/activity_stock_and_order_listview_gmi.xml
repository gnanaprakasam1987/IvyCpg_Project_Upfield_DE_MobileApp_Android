<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="5dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:id="@+id/stock_and_order_listview_productname"
                    style="@style/TextViewListItemPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/list_margin"
                    android:layout_marginRight="@dimen/list_margin"
                    android:layout_weight="1"
                    android:text="@string/product_name" />

                <TextView
                    android:id="@+id/stock_and_order_listview_productbarcode"
                    style="@style/TextViewListItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="end|center"
                    android:gravity="start|center"
                    android:maxLines="1"
                    android:text="@string/barcode"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:id="@+id/stock_and_order_listview_srp"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:text="@string/srp" />

                <TextView
                    android:id="@+id/stock_and_order_listview_ppq"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:text="@string/ou" />

                <TextView
                    android:id="@+id/stock_and_order_listview_mrp"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:text="@string/mrp" />

                <TextView
                    android:id="@+id/stock_and_order_listview_msq"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:text="@string/msq"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/stock_and_order_listview_psq"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:text="@string/psq"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/stock_and_order_listview_moq"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:tag="moq"
                    android:text="@string/moq"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/stock_and_order_listview_wsih"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/outlet_left_margin"
                    android:layout_marginLeft="@dimen/outlet_left_margin"
                    android:maxLines="1"
                    android:tag="dist_inv"
                    android:text="@string/dist_inv" />


                <TextView
                    android:id="@+id/stock_and_order_listview_sih_case"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:tag="sih_case"
                    android:text="@string/sih_case" />


                <TextView
                    android:id="@+id/stock_and_order_listview_sih_outer"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:tag="sih_outer"
                    android:text="@string/sih_outer" />


                <TextView
                    android:id="@+id/stock_and_order_listview_sih"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:tag="sih_piece"
                    android:text="@string/sih" />

                <TextView
                    android:id="@+id/indicativeOrder_oc"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:tag="io_case"
                    android:text="@string/io" />

                <TextView
                    android:id="@+id/cleanedOrder_oc"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:tag="co_case"
                    android:text="@string/co" />

                <TextView
                    android:id="@+id/stock_and_order_listview_socs"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:tag="so_case"
                    android:text="@string/so_case" />


                <TextView
                    android:id="@+id/stock_and_order_listview_so"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:tag="so_piece"
                    android:text="@string/so" />


                <TextView
                    android:id="@+id/rep_case"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:tag="item_sr_case"
                    android:text="@string/rep_case" />


                <TextView
                    android:id="@+id/rep_outer"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:tag="item_sr_outer"
                    android:text="@string/rep_outer" />

                <TextView
                    android:id="@+id/rep_pcs"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:tag="item_sr_piece"
                    android:text="@string/rep_pcs" />

                <TextView
                    android:id="@+id/text_stock"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5px"
                    android:layout_marginLeft="@dimen/margin_5px"
                    android:maxLines="1"
                    android:tag="item_sr_piece"
                    android:text="@string/zero" />

            </LinearLayout>

            <View
                android:id="@+id/view_dotted_line"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:background="@drawable/line_dotted" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="3dp">

                <LinearLayout
                    android:id="@+id/lleditLaouyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toStartOf="@+id/lltotwight"
                    android:layout_toLeftOf="@+id/lltotwight"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <LinearLayout
                        android:id="@+id/llAvail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/shelfPcsCB"
                            style="@style/TextViewListItemCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/avail" />

                        <CheckBox
                            android:id="@+id/stock_and_order_listview_cb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llShelfCase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/shelfCaseTitle"
                            style="@style/TextViewListItemCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="shelf_case"
                            android:text="@string/sc" />

                        <EditText
                            android:id="@+id/stock_and_order_listview_sc_qty"
                            style="@style/EditText_ListItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llShelfOuter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/shelfOuterTitle"
                            style="@style/TextViewListItemCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="shelf_outer"
                            android:text="@string/souter" />

                        <EditText
                            android:id="@+id/stock_and_order_listview_shelfouter_qty"
                            style="@style/EditText_ListItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llShelfPc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/shelfPcsTitle"
                            style="@style/TextViewListItemCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="shelf_piece"
                            android:text="@string/sp" />

                        <EditText
                            android:id="@+id/stock_and_order_listview_sp_qty"
                            style="@style/EditText_ListItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llOuter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/outercaseTitle"
                            style="@style/TextViewListItemCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="item_outer"
                            android:text="@string/item_outer" />

                        <EditText
                            android:id="@+id/stock_and_order_listview_outer_case_qty"
                            style="@style/EditText_ListItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/zero" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llSrpEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/srpeditTitle"
                            style="@style/TextViewListItemCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="srp"
                            android:text="@string/srp" />

                        <EditText
                            android:id="@+id/stock_and_order_listview_srpedit"
                            style="@style/EditText_ListItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:maxLength="8"
                            android:text="@string/zero" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lltotwight"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/lleditLaouyt"
                    android:layout_alignBottom="@+id/lleditLaouyt"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="@dimen/list_margin"
                    android:layout_marginRight="@dimen/list_margin"
                    android:gravity="top">


                    <LinearLayout
                        android:id="@+id/llWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/weight"
                            style="@style/TextViewListItemCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="weighttitle"
                            android:text="@string/weight" />


                        <TextView
                            android:id="@+id/stock_and_order_listview_weight"
                            style="@style/TextViewListItemCaption"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center|end"
                            android:text="@string/zero"
                            android:textColor="@color/black_bg1"
                            android:textSize="@dimen/text_size_primary" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/llCase"
                android:layout_width="@dimen/widht_medium"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/caseTitle"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="item_case"
                    android:text="@string/item_case" />

                <EditText
                    android:id="@+id/stock_and_order_listview_case_qty"
                    style="@style/EditText_ListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/zero" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPcs"
                android:layout_width="@dimen/widht_medium"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pcsTitle"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="item_piece"
                    android:text="@string/item_piece" />

                <EditText
                    android:id="@+id/stock_and_order_listview_pcs_qty"
                    style="@style/EditText_ListItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:maxLength="5"
                    android:text="@string/zero" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTotal"
                android:layout_width="@dimen/widht_medium"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/list_margin"
                android:layout_marginRight="@dimen/list_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/totalTitle"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:tag="totaltitle"
                    android:text="@string/total" />


                <TextView
                    android:id="@+id/stock_and_order_listview_total"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:gravity="center|end"
                    android:text="@string/zero"
                    android:textColor="@color/black_bg1"
                    android:textSize="@dimen/text_size_primary" />
            </LinearLayout>

            <com.ivy.sd.png.view.SlantView
                android:id="@+id/slant_view_bg"
                android:layout_width="@dimen/info_icon"
                android:layout_height="@dimen/info_icon"
                android:background="@color/RED"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>