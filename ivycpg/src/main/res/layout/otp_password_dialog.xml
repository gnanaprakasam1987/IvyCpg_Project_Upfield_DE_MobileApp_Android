<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleBar"
        style="?attr/textTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:text=""
        android:textSize="@dimen/font_large" />

    <TextView
        android:id="@+id/messageTv"
        style="?attr/textFieldStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="@dimen/list_margin"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:text=""
        android:textColor="@color/RED" />
    <!--android:layout_marginBottom="8dp"-->
    <!--android:layout_marginTop="8dp"-->

    <EditText
        android:id="@+id/passwordEditText"
        style="@style/EditText_ListItem"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="@dimen/list_margin"
        android:gravity="start"
        android:hint="@string/enter_otp"
        android:inputType="number"
        android:paddingStart="6dp"
        android:maxLength="10"
        android:paddingEnd="6dp"
        android:visibility="gone">

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_margin"
        android:visibility="gone" />

    <TextView
        android:id="@+id/contactnoTxtView"
        style="?attr/textFieldStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="@dimen/list_margin"
        android:layout_marginTop="1dp"
        android:padding="4dp"
        android:text="@string/admin_contact_no"
        android:textColor="?attr/primarycolor" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_location_color" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <!--android:padding="4dp"-->

        <!--android:layout_marginTop="5dp"-->

        <!--android:layout_marginBottom="5dp"-->
        <Button
            android:id="@+id/btn_cancel"
            style="?attr/roundedCustomButtonSmallGrey"
            android:layout_margin="10dp"
            android:text="@string/cancel"
            android:textColor="@color/black_bg1" />

        <Button
            android:id="@+id/btn_ok"
            style="?attr/roundedCustomButtonSmall"
            android:layout_margin="10dp"
            android:layout_marginStart="15dp"
            android:text="@string/ok" />
    </LinearLayout>

</LinearLayout>