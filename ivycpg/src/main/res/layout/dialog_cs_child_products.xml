<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/material_tool_bar" />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/include1"
        android:layout_below="@+id/toolbar"
        android:layout_margin="@dimen/list_margin"
        card_view:cardBackgroundColor="@color/WHITE"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="5dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ListHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/list_title_bg_color"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/list_padding_left_n_right"
                android:paddingRight="@dimen/list_padding_left_n_right"

                android:gravity="center_vertical">
                <!--android:weightSum="10"-->
                <TextView
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="@string/product_name"
                    android:layout_weight="4"/>


                <TextView
                    android:id="@+id/pcsTitle"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:tag="item_piece"
                    android:text="@string/item_piece"
                    android:layout_weight="1.1"/>


                <TextView
                    android:id="@+id/freePcsTitle"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:tag="free"
                    android:text="@string/free"
                    android:layout_weight="1.1"
                    />

                <TextView
                    android:id="@+id/sihTitle"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:tag="sih"
                    android:text="@string/sih"
                    android:layout_weight="1.1"/>
                <TextView
                    android:id="@+id/free_sihTitle"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:tag="sih"
                    android:text="@string/free_sih"
                    android:layout_weight="1.1"/>
                <TextView
                    android:id="@+id/mrpTitle"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:tag="mrp"
                    android:text="MRP"
                    android:layout_weight="1.3"/>
                <TextView
                    android:id="@+id/totalTitle"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:tag="total"
                    android:text="Total"
                    android:layout_weight="1.3"/>

            </LinearLayout>

            <ListView
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:cacheColorHint="@null"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <include
        android:id="@+id/include1"
        layout="@layout/keypad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:background="@color/screen_bg_color"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">

        <Button
            android:id="@+id/btn_done"
            style="?attr/roundedCustomButtonNormal"
            android:layout_margin="4dp"
            android:text="@string/done" />
    </LinearLayout>

</RelativeLayout>
