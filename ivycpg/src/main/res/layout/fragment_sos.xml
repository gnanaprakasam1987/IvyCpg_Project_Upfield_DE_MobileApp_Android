<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:windowSoftInputMode="stateAlwaysHidden">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/footer"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/list_margin"
            card_view:cardBackgroundColor="@color/WHITE"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="5dp"
            card_view:cardPreventCornerOverlap="true"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_header_height"
                    android:background="@color/store_title"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/audit"
                        style="?attr/customListTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/audit"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/levelName"
                        style="?attr/customListTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/target_top_margin"
                        android:layout_weight="3"
                        android:tag="level_name"
                        android:gravity="center|left"
                        android:text="@string/brand"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/hTotal"
                        style="?attr/customListTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:gravity="center"
                        android:tag="item_htotal"
                        android:text="@string/total"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hlength"
                            style="?attr/customListTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/s_length"
                            android:tag="item_slength"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hlengthacttar"
                            style="?attr/customListTitleSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/act_tar" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hpercent"
                            style="?attr/customListTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tag="item_spercent"
                            android:text="@string/s_percent"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hpercentacttar"
                            style="?attr/customListTitleSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/act_tar" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/hGap"
                        style="?attr/customListTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:tag="item_hgap"
                        android:text="@string/gap"
                        android:textStyle="bold" />

                </LinearLayout>


                <ListView
                    android:id="@+id/lvwplist"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/header"
                    android:background="@android:color/transparent"
                    android:cacheColorHint="@null"
                    android:divider="@android:color/white"
                    android:dividerHeight="1dp"
                    android:fitsSystemWindows="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/footer_bg"
            android:orientation="horizontal"
            android:gravity="center|right">

            <Button
                android:id="@+id/btn_save"
                style="?attr/roundedCustomButtonSmall"
                android:text="@string/save"
                android:layout_margin="@dimen/target_top_margin"
                android:layout_gravity="center_vertical"
                android:textAllCaps="false" />
        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/right_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/background_noise" />

</android.support.v4.widget.DrawerLayout>