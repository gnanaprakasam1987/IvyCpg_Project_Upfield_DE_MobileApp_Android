<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ivy.sd.png.view.InvoicePrintZebra" >

    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/volumelayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/sno_width"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/no" >
                </TextView>

                <TextView
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/product_name_twenty_five_character"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/retailername" >
                </TextView>

                <TextView
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/eighteen_characters_width"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/AP3M" >
                </TextView>

                <TextView
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/eighteen_characters_width"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/v_target" >
                </TextView>

                <TextView
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/eighteen_characters_width"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="@string/v_actual" >
                </TextView>
            </LinearLayout>

            <ListView
                android:id="@+id/list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/base"
                android:layout_below="@+id/header"
                android:cacheColorHint="@null"
                android:divider="@android:color/white"
                android:dividerHeight="1dp"
                android:drawSelectorOnTop="false"
                android:fitsSystemWindows="true"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:scrollbarAlwaysDrawVerticalTrack="true" >
            </ListView>

            <LinearLayout
                android:id="@+id/base"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/lpc_title"

                    android:textColor="@android:color/black"
                    android:layout_width="@dimen/report_base_sbd"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="@string/total"
                    android:textSize="@dimen/font_small">
                </TextView>

                <TextView
                    android:id="@+id/ap3mtotal"
                    android:textSize="@dimen/font_small"
                    android:textColor="@android:color/black"
                    android:layout_width="@dimen/eighteen_characters_width"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="" >
                </TextView>

                <TextView
                    android:id="@+id/vtargettotal"
                    android:textSize="@dimen/font_small"
                    android:textColor="@android:color/black"
                    android:layout_width="@dimen/eighteen_characters_width"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="" >
                </TextView>

                <TextView
                    android:id="@+id/vactualtotal"
                    android:textSize="@dimen/font_small"
                    android:textColor="@android:color/black"
                    android:layout_width="@dimen/eighteen_characters_width"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="" >
                </TextView>
            </LinearLayout>
        </RelativeLayout>
    </HorizontalScrollView>

</RelativeLayout>