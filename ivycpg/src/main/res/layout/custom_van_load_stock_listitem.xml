<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_list"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/retake_img_wd_ht"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/order_stock_list_product_name_width_xlarge"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/list_padding_left_n_right"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/stock_apply_listview_cb"
            android:layout_width="@dimen/order_stock_list_item_width_small"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left|center"
           ></android.support.v7.widget.AppCompatCheckBox>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_minus20dp"
            android:gravity="left|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vanLoad_no_list"
                style="?attr/customListItemPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:gravity="left|center"
                android:text="@string/zero" />

            <TextView
                android:id="@+id/vanLoad_date"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:gravity="left|center"
                android:text=" " />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/inv_view_layout"
        android:layout_width="@dimen/list_item_width_medium"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total_lines_txt"
            style="?attr/customListItemPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/list_item_secondary_text_color"
            android:gravity="center"
            android:text="@string/zero"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/list_item_width_medium"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="right|center"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/inv_view_btn"
            android:layout_width="@dimen/profile_history_20dp"
            android:layout_height="@dimen/profile_history_25dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/profile_history_10dp"
            android:src="@drawable/activity_icon_next"
            android:tint="@color/new_grey"
            android:gravity="right|center"
            />
    </LinearLayout>

</LinearLayout>