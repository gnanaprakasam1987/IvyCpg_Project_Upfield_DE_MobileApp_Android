<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/list_item_height_double_line"
    android:orientation="horizontal"
    android:paddingStart="@dimen/list_padding_left_n_right"
    android:paddingTop="@dimen/target_top_margin"
    android:paddingEnd="@dimen/list_padding_left_n_right"
    android:paddingBottom="@dimen/target_top_margin">


    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/stock_apply_listview_cb"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="start|center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="7"
        android:gravity="start|center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/vanLoad_no_list"
            style="@style/TextViewListItemPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:gravity="start|center"
            android:maxLines="1"
            android:text="@string/zero" />

        <TextView
            android:id="@+id/vanLoad_date"
            style="@style/TextViewListItemSecondaryHighlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:gravity="start|center"
            android:text="@string/date_label" />
    </LinearLayout>


    <TextView
        android:id="@+id/total_lines_txt"
        style="@style/TextViewListItemValues"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/zero"
        android:visibility="visible" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="end|center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/inv_view_btn"
            android:layout_width="@dimen/profile_history_20dp"
            android:layout_height="@dimen/profile_history_25dp"
            android:layout_gravity="end|center"
            android:layout_marginEnd="@dimen/profile_history_10dp"
            android:layout_marginRight="@dimen/profile_history_10dp"
            android:gravity="end|center"
            android:src="@drawable/activity_icon_next"
            android:tint="@color/light_gray" />
    </LinearLayout>

</LinearLayout>