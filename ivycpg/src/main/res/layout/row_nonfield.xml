<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/month_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/readiness_btn_height"
        android:orientation="vertical"
        android:padding="@dimen/space_between_edt">

        <ImageView
            android:id="@+id/top_line"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layerType="software"
            android:src="@drawable/dashed_line" />

        <TextView
            android:id="@+id/txt_monthName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#80262626"
            android:textSize="@dimen/font_micro_small" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layerType="software"
            android:src="@drawable/dashed_line" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/space_between_edt"
        android:text="@string/username"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/font_nano_small" />

    <LinearLayout
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/can_ok_btn_h"
        android:orientation="horizontal"
        android:paddingStart="@dimen/space_between_edt"
        android:paddingLeft="@dimen/space_between_edt">

        <CheckBox
            android:id="@+id/chk_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_reason"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="Working"
                android:textColor="#262626"
                android:textSize="@dimen/font_nano_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_timespent"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".6"
                android:textSize="@dimen/font_nano_small" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_frmDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="03/12/2017"
            android:textColor="#cc262626"
            android:textSize="@dimen/font_nano_small" />

        <TextView
            android:id="@+id/txt_toDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="03/12/2017"
            android:textColor="#cc262626"
            android:textSize="@dimen/font_nano_small" />

        <TextView
            android:id="@+id/txt_session"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:textSize="@dimen/font_nano_small"
            android:visibility="gone" />


        <TextView
            android:id="@+id/txt_descrp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:paddingStart="@dimen/space_between_edt"
            android:text="Accepted"
            android:textColor="#cc262626"
            android:textSize="@dimen/font_nano_small"
            android:paddingLeft="@dimen/space_between_edt" />

    </LinearLayout>
</LinearLayout>