<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/asset_dailog_ListRow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/list_padding_left_n_right"
    android:paddingTop="@dimen/list_item_padding_top_nd_bottom"
    android:paddingEnd="@dimen/list_padding_left_n_right"
    android:paddingBottom="@dimen/list_item_padding_top_nd_bottom">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <CheckBox
            android:id="@+id/chk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/checkBox_for_remove_asset_Style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_lt_assetname"
            style="@style/TextViewListItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/tv_lt_sno"
            style="@style/TextViewListItemSecondaryHighlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingEnd="2dp"
            android:paddingRight="2dp"
            android:text="@string/app_name" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_lt_install"
        style="@style/TextViewListItemValues"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/app_name"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/sp_remove_reason"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:overlapAnchor="false" />


</LinearLayout>