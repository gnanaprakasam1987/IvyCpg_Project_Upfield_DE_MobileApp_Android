<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:gravity="center_vertical"
card_view:cardBackgroundColor="@color/white"
card_view:cardCornerRadius="0dp"
card_view:cardElevation="5dp"
card_view:cardPreventCornerOverlap="true"
card_view:cardUseCompatPadding="true"
card_view:contentPadding="5dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="3dp">

        <TextView
            android:id="@+id/stock_and_order_listview_productname"
            style="@style/TextViewListItemPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/list_margin"
            android:layout_marginRight="@dimen/list_margin"
            android:layout_toLeftOf="@+id/ivInfoicon"
            android:layout_toStartOf="@+id/ivInfoicon"
            android:maxLines="1"
            android:text="@string/product_name" />

    </RelativeLayout>

    <View
        android:id="@+id/view_dotted_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:background="@drawable/line_dotted" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="3dp"
        android:weightSum="10">


        <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="4"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/ll_case"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_case_Title"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="totaltitle"
                    android:text="@string/item_case" />


                <TextView
                    android:id="@+id/tv_case"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="@dimen/meter_text_width"
                    android:layout_height="match_parent"
                    android:gravity="center|end"
                    android:text="@string/zero"
                    android:textColor="@color/black_bg1"
                    android:textSize="@dimen/text_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_outer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_outer_Title"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="totaltitle"
                    android:text="@string/item_outer" />


                <TextView
                    android:id="@+id/tv_outer"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="@dimen/meter_text_width"
                    android:layout_height="match_parent"
                    android:gravity="center|end"
                    android:text="@string/zero"
                    android:textColor="@color/black_bg1"
                    android:textSize="@dimen/text_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pcs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pcs_Title"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="totaltitle"
                    android:text="@string/item_piece" />


                <TextView
                    android:id="@+id/tv_pcs"
                    style="@style/TextViewListItemCaption"
                    android:layout_width="@dimen/meter_text_width"
                    android:layout_height="match_parent"
                    android:gravity="center|end"
                    android:text="@string/zero"
                    android:textColor="@color/black_bg1"
                    android:textSize="@dimen/text_size_primary" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>


</androidx.cardview.widget.CardView>