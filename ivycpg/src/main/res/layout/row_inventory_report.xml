<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/target_top_margin"
    android:paddingStart="@dimen/list_padding_left_n_right"
    android:paddingEnd="@dimen/list_padding_left_n_right"
    android:paddingTop="@dimen/target_top_margin">

    <TextView
        android:id="@+id/tv_productname"
        style="?attr/customListItemPrimary"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_2dp"
        android:gravity="start|center"
        android:maxLines="1"
        android:text="@string/product_name"
        android:layout_weight="4"
        android:layout_marginRight="@dimen/dimen_2dp" />

    <TextView
        android:id="@+id/tv_availability"
        style="?attr/customListItemCaption"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stock_and_order_listview_productname"
        android:layout_marginEnd="@dimen/dimen_2dp"
        android:maxLines="1"
        android:text="@string/zero"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/dimen_2dp" />

    <TextView
        android:id="@+id/tv_reason"
        style="?attr/customListItemCaption"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stock_and_order_listview_productname"
        android:layout_marginEnd="@dimen/dimen_2dp"
        android:layout_toEndOf="@+id/stock_and_order_listview_mrp"
        android:maxLines="1"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_marginRight="@dimen/dimen_2dp"
        android:layout_toRightOf="@+id/stock_and_order_listview_mrp" />

</LinearLayout>
