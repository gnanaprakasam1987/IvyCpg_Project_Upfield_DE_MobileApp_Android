<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_span="3"
        android:gravity="start"
        android:padding="@dimen/dimen_4dp"
        android:text=""
        style="?textFieldStyle"
        android:textSize="@dimen/font_small">
    </TextView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/activty_sub_list_bg_color"
                android:layout_height="wrap_content" >

                <TextView
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/list_product_name_width"
                    android:layout_height="wrap_content"
                    android:text="@string/product_name" />

               
                <TextView
                    android:id="@+id/caseTitle"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/list_item_width_medium"
                    android:layout_height="wrap_content"
                    android:tag="item_case"
                    android:text="@string/item_case" />

                <TextView
                    android:id="@+id/outerTitle"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/list_item_width_medium"
                    android:layout_height="wrap_content"
                    android:text="@string/item_outer" />

                <TextView
                    android:id="@+id/pcsTitle"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/list_item_width_medium"
                    android:layout_height="wrap_content"
                    android:tag="item_piece"
                    android:text="@string/item_piece" />

                <TextView
                    android:id="@+id/totaltitle"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/meter_value_width_large"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="totaltitle"
                    android:text="@string/total" />
            </LinearLayout>

            <ListView
                android:id="@+id/list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="1dp"
                android:cacheColorHint="@null"
                android:divider="@android:color/white"
                android:dividerHeight="1dp"
                android:fitsSystemWindows="true"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:scrollbarAlwaysDrawVerticalTrack="true" >
            </ListView>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>