<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.ivy.cpg.view.sync.catalogdownload.CatalogImagesDownlaod">

    <include
        android:id="@+id/toolbar"
        layout="@layout/material_tool_bar" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="@dimen/list_margin"
        android:layout_marginEnd="@dimen/list_margin"
        android:cacheColorHint="@null"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dp"
        android:fitsSystemWindows="true" />


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1dp"
        android:layout_above="@+id/footer"
        android:background="@color/light_gray"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="?attr/customFooterBackgroundColor"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_save"
            style="?attr/roundedCustomButtonSmall"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/target_top_margin"
            android:layout_marginRight="@dimen/target_top_margin"
            android:text="@string/save"
            android:textAllCaps="false" />
    </RelativeLayout>

</RelativeLayout>
