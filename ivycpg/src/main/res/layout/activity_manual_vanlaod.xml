<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/material_tool_bar" />

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/root"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/filterscreenlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/list_margin"
                    android:layout_marginEnd="@dimen/list_margin"
                    android:layout_marginTop="@dimen/list_margin"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <ViewFlipper
                        android:id="@+id/view_flipper"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:padding="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white">

                            <TextView
                                android:id="@+id/productName"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/list_margin"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:maxLines="1"
                                android:textColor="?attr/primarycolor"
                                android:textSize="@dimen/font_nano_small" />

                            <Button
                                android:id="@+id/btn_search"
                                android:layout_width="@dimen/filter_icon"
                                android:layout_height="@dimen/filter_icon"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:background="@drawable/ic_vector_search" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white">

                            <Button
                                android:id="@+id/btn_filter_popup"
                                android:layout_width="@dimen/filter_icon"
                                android:layout_height="@dimen/filter_icon"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/btn_productfilter_" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/white"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edt_searchproductName"
                                    android:layout_width="0dip"
                                    android:layout_height="@dimen/filter_icon"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:gravity="start|center_vertical"
                                    android:maxLines="1"
                                    android:inputType="text"
                                    android:text=""
                                    android:textColor="@color/GRAY_TEXT"
                                    android:textSize="@dimen/font_nano_small" />

                                <Button
                                    android:id="@+id/btn_clear"
                                    android:layout_width="@dimen/filter_icon"
                                    android:layout_height="@dimen/filter_icon"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/ic_vector_action_clear_grey" />
                            </LinearLayout>
                        </LinearLayout>

                    </ViewFlipper>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_depot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/profile_history_10dp"
                    android:layout_marginEnd="@dimen/profile_history_10dp"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/feedbck_edit_margintopbtm"
                    android:paddingEnd="@dimen/feedbck_edit_margintopbtm"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_subdepot"
                        style="?textFieldStyle"
                        android:layout_width="@dimen/order_stock_list_product_name_width"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/subdepot"
                        android:visibility="gone" />

                    <com.ivy.sd.png.commons.MaterialSpinner
                        android:id="@+id/sp_subdepot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overlapAnchor="false"
                        app:ms_arrowColor="@color/FullBlack" />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/footer_height"
                    android:layout_marginStart="@dimen/profile_history_10dp"
                    android:layout_marginEnd="@dimen/profile_history_10dp"
                    android:orientation="vertical"
                    app:cardCornerRadius="@dimen/dimen_2dp"
                    app:cardElevation="@dimen/dimen_4dp">

                    <RelativeLayout
                        android:id="@+id/prod"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_list_content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/ll_keypad"
                            android:layout_alignParentTop="true"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ListHeader"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/list_header_height"
                                android:background="@color/list_title_bg_color"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvSkuName"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/order_stock_list_product_name_width_xlarge"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="start|center"
                                    android:layout_marginStart="@dimen/skuwise_right_margin"
                                    android:layout_weight="1"
                                    android:gravity="start|center"
                                    android:text="@string/product_name"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/sihTitle"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/list_item_width_medium"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:tag="sih_piece"
                                    android:text="@string/sih"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/itemcasetitle"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/list_item_width_medium"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:tag="item_case"
                                    android:text="@string/item_case"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/outeritemcasetitle"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/list_item_width_medium"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@string/item_outer"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/itempiecetitle"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/list_item_width_medium"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:tag="item_piece"
                                    android:text="@string/item_piece"
                                    android:textStyle="bold"
                                    android:visibility="gone" />


                                <TextView
                                    android:id="@+id/qtyTitle"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/list_item_width_medium"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:tag="tot_qty"
                                    android:text="@string/tot_qty"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/viewTitle"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/list_item_width_medium"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:tag="tot_qty"
                                    android:text=""
                                    android:textStyle="bold"
                                    android:visibility="gone" />


                            </LinearLayout>

                            <ListView
                                android:id="@+id/list"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@android:color/transparent"
                                android:cacheColorHint="@null"
                                android:divider="@android:color/white"
                                android:dividerHeight="1dp"
                                android:fitsSystemWindows="true"
                                android:scrollbars="none" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_keypad"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <include
                                android:id="@+id/keypad"
                                layout="@layout/keypad"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/profile_history_10dp"
                android:orientation="vertical">

                <View
                    android:id="@+id/reason_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_above="@+id/reason_btns"
                    android:layout_gravity="center"
                    android:background="@color/GRAY"
                    android:src="@drawable/downloadsuccess" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/footer_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/bottom_bg"
                    android:gravity="bottom|center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/van_btn_save"
                        style="?attr/roundedCustomButtonNormal"
                        android:layout_marginTop="@dimen/profile_history_10dp"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:text="@string/save"
                        android:textAllCaps="false"
                        android:visibility="visible" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/right_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/background_noise" />

    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>