<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:paddingTop="2dp" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/non_visit_list_item_height_width"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/outlet_iv"
            android:layout_width="@dimen/visit_lst_img_width"
            android:layout_height="@dimen/visit_lst_img_width"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:src="@drawable/icon_outlet_normal" />

        <ImageView
            android:id="@+id/outlet"
            android:layout_width="@dimen/visit_lst_img_width"
            android:layout_height="@dimen/visit_lst_img_width"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/outlet_iv"
            android:gravity="center" />

        <TextView
            android:id="@+id/outletName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/outlet_iv"
            android:layout_toRightOf="@+id/outlet_iv"
            android:singleLine="true"
            android:text="@string/dummy_txt"
            android:textColor="@color/Black"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/visit_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/outletName_tv"
            android:layout_alignBottom="@+id/outletName_tv"
            android:layout_toRightOf="@+id/outletName_tv"
            android:singleLine="true"
            android:text="@string/visit_frequency"
            android:textColor="@color/blue_btn_txt"
            android:textSize="@dimen/font_small" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/non_visit_list_item_height_width"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:gravity="center|right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/info_iv"
            android:layout_width="@dimen/visit_info_img_width"
            android:layout_height="@dimen/visit_info_img_width"
            android:gravity="center"
            android:src="@drawable/ic_info_new" />
    </LinearLayout>

</RelativeLayout>