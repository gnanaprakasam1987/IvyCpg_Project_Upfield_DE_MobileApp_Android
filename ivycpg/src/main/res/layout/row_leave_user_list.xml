<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true">
    <!--card_view:cardElevation="5dp"-->
    <!--android:layout_margin="8dp"-->

    <LinearLayout
        android:id="@+id/ll_userLeaves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_userinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--android:layout_height="@dimen/height_list_row"-->
            <!--android:background="@color/blue_btn_selected_start"-->

            <TextView
                android:id="@+id/tvusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="wewewewe"
                android:textColor="@color/half_Black"
                android:textSize="@dimen/font_small"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dimen_10dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/tvusername"
                android:layerType="software"
                android:src="@drawable/dotted_line" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_leaveperiod_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:singleLine="true"
                android:text="@string/text_leave_period"
                android:textColor="#616161"
                android:textSize="@dimen/text_size_caption" />
            <!--android:layout_height="@dimen/dimens_16dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:textColor="@color/half_Black"-->
            <!--android:textSize="@dimen/medium_text_Size"-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text=":"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_small" />
            <!--android:layout_height="@dimen/dimens_16dp"-->
            <TextView
                android:id="@+id/tv_leaveperiod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_6dp"
                android:layout_weight="0.50"
                android:text=""
                android:textColor="#212121"
                android:textSize="@dimen/text_size_primary"
                android:layout_marginLeft="@dimen/dimen_6dp" />
            <!--android:layout_height="@dimen/dimens_22dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:textSize="@dimen/medium_text_Size"-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_leavetype_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:singleLine="true"
                android:text="@string/text_leave_type"
                android:textColor="#616161"
                android:textSize="@dimen/text_size_caption" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text=":"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/tv_leavetype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_6dp"
                android:layout_weight="0.50"
                android:text=""
                android:textColor="#212121"
                android:textSize="@dimen/text_size_primary"
                android:layout_marginLeft="@dimen/dimen_6dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--android:layout_margin="@dimen/dimen_8dp"-->
            <TextView
                android:id="@+id/tv_status_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:singleLine="true"
                android:text="@string/status"
                android:textColor="#616161"
                android:textSize="@dimen/text_size_caption" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text=":"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_6dp"
                android:layout_weight="0.50"
                android:text=""
                android:textColor="#212121"
                android:textSize="@dimen/text_size_primary"
                android:layout_marginLeft="@dimen/dimen_6dp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/sel_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/coll_tick"
        android:visibility="gone" />
</androidx.cardview.widget.CardView>