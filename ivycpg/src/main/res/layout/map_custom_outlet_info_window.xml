<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/_175sdp"
        android:layout_height="@dimen/_35sdp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:background="@drawable/outlet_info_window_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_usr_name"
                style="?attr/customListItemPrimary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:background="@color/white"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableRight="@drawable/info"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:maxLength="50"
                android:minWidth="@dimen/_50sdp"
                android:padding="@dimen/_2sdp"
                android:singleLine="true"
                android:text="Testing  dfbdbbdb sdbfbbdf sbfbb"
                android:textColor="#de000000"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tv_vivit_time"
                style="?attr/customListItemPrimary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_15sdp"
                android:layout_below="@+id/tv_usr_name"
                android:background="@color/white"
                android:ellipsize="middle"
                android:gravity="center_vertical"
                android:maxLength="50"
                android:minWidth="@dimen/_50sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:singleLine="true"
                android:text="Visiting Time : 10:12 AM"
                android:textColor="#4a90e2"
                android:textSize="@dimen/_10sdp" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
