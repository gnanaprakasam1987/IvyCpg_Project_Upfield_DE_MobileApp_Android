<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/material_tool_bar" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">


            <android.support.v7.widget.CardView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/list_padding_left_n_right"
                    android:paddingRight="@dimen/list_padding_left_n_right">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:orientation="vertical"
                            android:padding="@dimen/dimens_6dp">

                            <TextView
                                android:id="@+id/tv_receipt_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionDone"
                                android:text="@string/invoice_number"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/text_sz_small"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edit_receipt_no"
                                style="@style/EditText_ListItem"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/cheque_no_height"
                                android:inputType="text"
                                android:maxLength="16" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="@dimen/dimens_6dp"
                            android:paddingLeft="@dimen/list_padding_left_n_right"
                            android:paddingRight="@dimen/list_padding_left_n_right">

                            <TextView
                                android:id="@+id/tv_date_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@string/invoice_date"
                                android:textColor="@color/Black"
                                android:textSize="@dimen/text_sz_small"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <Button
                                    android:id="@+id/btn_datepicker"
                                    style="@style/datePickerButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/cheque_no_height"
                                    android:layout_gravity="left|center"
                                    android:gravity="center"
                                    android:textColor="?attr/primarycolor" />
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_6dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_stock_type"
                            android:layout_width="@dimen/cheque_no_width"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/type"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/text_sz_small"
                            android:textStyle="bold" />
                        <Spinner
                            android:id="@+id/spin_stock_type"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/spin_ht"
                            android:gravity="center"
                            android:overlapAnchor="false" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/filterscreenlayout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="@dimen/search_edt_margin_bottom"
                        android:layout_marginLeft="@dimen/search_edt_margin_left_n_right"
                        android:layout_marginRight="@dimen/search_edt_margin_left_n_right"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:orientation="vertical">

                        <ViewFlipper
                            android:id="@+id/view_flipper"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:padding="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/white">

                                <TextView
                                    android:id="@+id/productName"
                                    android:layout_width="0dip"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/list_margin"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:maxLines="1"
                                    android:textColor="?attr/primarycolor"
                                    android:textSize="@dimen/font_nano_small" />

                                <Button
                                    android:id="@+id/btn_search"
                                    android:layout_width="@dimen/filter_icon"
                                    android:layout_height="@dimen/filter_icon"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/ic_vector_search" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/white">

                                <Button
                                    android:id="@+id/btn_filter_popup"
                                    android:layout_width="@dimen/filter_icon"
                                    android:layout_height="@dimen/filter_icon"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/btn_productfilter_" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/white"
                                    android:orientation="horizontal">

                                    <EditText
                                        android:id="@+id/edt_searchproductName"
                                        android:layout_width="0dip"
                                        android:layout_height="@dimen/filter_icon"
                                        android:layout_gravity="center_vertical"
                                        android:layout_weight="1"
                                        android:background="@android:color/transparent"
                                        android:gravity="left|center_vertical"
                                        android:imeOptions="actionSearch"
                                        android:inputType="text"
                                        android:maxLines="1"
                                        android:text=""
                                        android:textColor="@color/GRAY_TEXT"
                                        android:textSize="@dimen/font_nano_small" />

                                    <Button
                                        android:id="@+id/btn_clear"
                                        android:layout_width="@dimen/filter_icon"
                                        android:layout_height="@dimen/filter_icon"
                                        android:layout_gravity="center_vertical"
                                        android:layout_margin="2dp"
                                        android:background="@drawable/ic_vector_action_clear_grey" />
                                </LinearLayout>
                            </LinearLayout>

                        </ViewFlipper>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/footer"
                android:layout_below="@id/header"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/list_margin">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_header"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/list_header_height"
                        android:layout_alignParentTop="true"
                        android:background="@color/list_title_bg_color"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/list_padding_left_n_right"
                        android:paddingRight="@dimen/list_padding_left_n_right">


                        <TextView
                            android:id="@+id/sku"
                            style="?attr/customListTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="left"
                            android:text="@string/product_name" />


                        <TextView
                            android:id="@+id/server_qty"
                            style="?attr/customListTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/qty" />

                        <TextView
                            android:id="@+id/damaged_qty"
                            style="?attr/customListTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:tag="compliance"
                            android:text="@string/damaged_qty" />

                        <TextView
                            android:id="@+id/balance"
                            style="?attr/customListTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:tag="compliance"
                            android:text="@string/balance" />
                        <TextView
                            android:id="@+id/mrp"
                            style="?attr/customListTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:tag="compliance"
                            android:text="@string/mrp" />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/lvwplist"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_above="@+id/ll_keypad"
                        android:layout_below="@+id/ll_header"
                        android:cacheColorHint="@null"
                        android:divider="@android:color/white"
                        android:dividerHeight="1dp"
                        android:fitsSystemWindows="true"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:scrollbarAlwaysDrawVerticalTrack="true" />

                    <LinearLayout
                        android:id="@+id/ll_keypad"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/keypad"
                            layout="@layout/keypad"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/footer"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/footer_height"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="@dimen/footer_padding">

                    <Button
                        android:id="@+id/btn_apply"
                        style="?attr/roundedCustomButtonNormal"
                        android:text="@string/Apply"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btn_reject"
                        style="?attr/roundedCustomButtonNormal"
                        android:layout_marginLeft="@dimen/profile_history_20dp"
                        android:layout_toRightOf="@id/btn_apply"
                        android:text="@string/reject"
                        android:textAllCaps="false" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/right_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/background_noise" />

    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>