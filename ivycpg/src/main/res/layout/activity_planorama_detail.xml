<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/toolbar_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/toolbar"
            layout="@layout/material_tool_bar" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_toolbar_selection"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <include
                android:id="@+id/toolbar_selection"
                layout="@layout/material_tool_bar_white_bg"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_2dp"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbar_frame"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            >
    <LinearLayout
        android:id="@+id/layout_photo_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:id="@+id/label_photo"
            style="@style/HeadingStyle"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:text="@string/photo"
            android:layout_weight="9"
            />
        <TextView
            android:id="@+id/label_no_of_photos"
            style="@style/HeadingStyle"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:text="@string/zero"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/layout_photo"
        android:layout_below="@+id/layout_photo_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:minHeight="@dimen/dimens_50dp"
        >
        <LinearLayout
            android:id="@+id/layout_image_captured"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        </LinearLayout>
    </HorizontalScrollView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/card_photo"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            >
    <TextView
        android:id="@+id/label_comments"
        style="@style/HeadingStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/comments"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/textView_comments"
        style="@style/TextViewCaptionNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/label_comments"
        android:layout_marginTop="@dimen/dimen_5dp"
        />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_load_analysis"
        style="?attr/roundedCustomButtonSmall"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dimen_6dp"
        android:gravity="center"
        android:text="@string/load_analysis"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"/>


</RelativeLayout>
