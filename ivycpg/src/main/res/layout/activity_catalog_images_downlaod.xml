<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.ivy.sd.png.view.CatalogImagesDownlaod">

    <include
        android:id="@+id/toolbar"
        layout="@layout/material_tool_bar" />

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/catalog_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/card_margin_lr"
        android:layout_marginRight="@dimen/card_margin_lr"
        android:layout_marginTop="@dimen/card_margin_top"
        card_view:cardBackgroundColor="@color/WHITE"
        card_view:cardCornerRadius="1dp"
        card_view:cardElevation="5dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_margin">

            <TextView
                android:id="@+id/tv_downloadStaus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/margin_left_retailer_name"
                android:layout_toLeftOf="@+id/refresh_catalog"
                android:text="@string/download"
                android:textColor="@color/Black"
                android:textSize="@dimen/font_micro_small" />

            <Button
                android:id="@+id/refresh_catalog"
                style="?attr/roundedCustomButtonNormal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Refresh" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
