<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleBar"
        style="?attr/textTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:padding="6dp"
        android:text="OTP Validation" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_20dp">

    <EditText
        android:id="@+id/et_otp"
        style="@style/EditText_ListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_otp"
        android:lines="1"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/tv_resend"
        android:layout_width="@dimen/forgot_text_width"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_otp"
        android:layout_alignBottom="@+id/et_otp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/black_bg1"
        android:textSize="@dimen/font_small"
        android:gravity="center"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:text="Resend"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/GRAY">
    </View>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel"
            style="?attr/roundedCustomButtonSmallGrey"
            android:layout_margin="10dp"
            android:text="@string/cancel"
            android:textColor="@color/black_bg1" />

        <Button
            android:id="@+id/btn_ok"
            style="?attr/roundedCustomButtonSmall"
            android:layout_margin="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:text="@string/verify" />
    </LinearLayout>

</LinearLayout>