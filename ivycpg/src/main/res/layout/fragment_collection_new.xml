<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimens_6dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="@dimen/dimens_6dp"
        app:cardBackgroundColor="@color/store_title"
        app:cardCornerRadius="@dimen/dimens_4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_80dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:elevation="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dimens_10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_tos_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5px"
                    android:gravity="center"
                    android:text="TOS Amount"
                    android:textColor="@color/collection_toptitle_color"
                    android:textSize="@dimen/text_sz_small" />

                <TextView
                    android:id="@+id/tv_tos_amount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tv_osamt_height"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen_8dp"
                    android:textColor="@color/collection_textlight_color"
                    android:textSize="@dimen/font_small" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimens_1dp"
                android:layout_height="@dimen/dimens_40dp"
                android:background="@color/GRAY_TEXT"
                android:padding="@dimen/dimens_4dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_pending_bills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5px"
                    android:gravity="center"
                    android:text="@string/PendingBills"
                    android:textColor="@color/collection_toptitle_color"
                    android:textSize="@dimen/text_sz_small" />

                <TextView
                    android:id="@+id/tv_pending_bills"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tv_osamt_height"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen_8dp"
                    android:textColor="@color/collection_textlight_color"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimens_1dp"
                android:layout_height="@dimen/dimens_40dp"
                android:background="@color/GRAY_TEXT"
                android:padding="@dimen/dimens_4dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title_due_bill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5px"
                    android:gravity="center"
                    android:text="Due Bills"
                    android:textColor="@color/collection_toptitle_color"
                    android:textSize="@dimen/text_sz_small" />

                <TextView
                    android:id="@+id/tv_due_bill"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tv_osamt_height"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimens_8dp"
                    android:text="0"
                    android:textColor="@color/collection_textlight_color"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <ListView
        android:id="@+id/lv_collection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/screen_bg_color"
        android:orientation="vertical">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_1dp"
            android:background="@color/GRAY"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_60dp"
            android:layout_below="@id/line"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/paybtn"
                style="?attr/roundedCustomButtonNormal"
                android:layout_margin="@dimen/target_top_margin"
                android:text="@string/next"
                android:textSize="@dimen/font_micro_small"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_close"
                style="?attr/roundedCustomButtonNormal"
                android:layout_margin="@dimen/target_top_margin"
                android:layout_toRightOf="@id/paybtn"
                android:text="@string/close"
                android:textSize="@dimen/font_micro_small"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/bottom_value_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_osamount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tv_osamt_height"
                    android:gravity="center"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/os_amt"
                    android:textSize="@dimen/text_sz_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_paidamt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tv_osamt_height"
                    android:gravity="center"
                    android:textSize="@dimen/font_medium" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Payable Amt"
                    android:textSize="@dimen/text_sz_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_disc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_disc_amt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tv_osamt_height"
                    android:gravity="center"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Disc Amt"
                    android:textSize="@dimen/text_sz_small" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/primarycolor"
        android:visibility="gone"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/collection_tab_indicateColor"
        app:tabSelectedTextColor="@color/WHITE"
        app:tabTextAppearance="@style/MineCustomTabText" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>