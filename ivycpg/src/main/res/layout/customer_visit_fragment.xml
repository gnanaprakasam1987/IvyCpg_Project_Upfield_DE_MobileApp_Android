<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_alignParentTop="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dimens_10dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="@dimen/dimens_10dp"
                app:cardBackgroundColor="@color/WHITE"
                app:cardCornerRadius="@dimen/dimens_8dp"
                app:contentPadding="@dimen/dimens_12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_6dp"
                        android:orientation="vertical"
                        android:padding="@dimen/dimens_6dp">

                        <TextView
                            android:id="@+id/txt_contactnum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/contact_no"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_micro_small"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_contactnum"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/cheque_no_height"
                                android:layout_weight="1"
                                android:inputType="number"
                                android:text=""
                                android:imeOptions="actionNext"/>

                            <ImageView
                                android:id="@+id/btn_history"
                                android:layout_width="@dimen/visit_info_img_width"
                                android:layout_height="@dimen/visit_info_img_width"
                                android:descendantFocusability="blocksDescendants"
                                android:paddingBottom="1dp"
                                android:paddingTop="2dp"
                                android:src="@drawable/ic_info_new" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dimens_6dp">

                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Name"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_micro_small"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edt_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/cheque_no_height"
                            android:layout_weight="1"
                            android:inputType="text"
                            android:imeOptions="actionNext"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dimens_6dp">

                        <TextView
                            android:id="@+id/txt_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/gender"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_micro_small"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <CheckBox
                                android:id="@+id/chk_male"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/cheque_no_height"
                                android:text="@string/male"
                                />
                            <CheckBox
                                android:id="@+id/chk_female"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/cheque_no_height"
                                android:text="@string/female"
                                android:checked="true"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dimens_6dp">

                        <TextView
                            android:id="@+id/txt_age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/age_group"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_micro_small"
                            />

                        <RadioGroup
                            android:id="@+id/radiogroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_6dp"
                        android:orientation="vertical"
                        android:padding="@dimen/dimens_6dp">

                        <TextView
                            android:id="@+id/txt_addr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Address"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_micro_small"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edt_addr"
                            style="@style/EditText_ListItem"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/competitor_edt_height"
                            android:layout_marginTop="@dimen/dimens_10dp"
                            android:background="@drawable/feedback_edit_selector"
                            android:cursorVisible="true"
                            android:gravity="left"
                            android:hint="@string/Address"
                            android:maxLength="250"
                            android:padding="@dimen/row_top_margin"
                            android:imeOptions="actionNext"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_6dp"
                        android:orientation="vertical"
                        android:padding="@dimen/dimens_6dp"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_6dp"
                            android:orientation="vertical"
                            android:padding="@dimen/dimens_6dp">

                            <TextView
                                android:id="@+id/txt_freq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/frq_of_visit"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/font_micro_small"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edt_freq"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/cheque_no_height"
                                android:layout_gravity="center|left"
                                android:gravity="center|left"
                                android:inputType="number"
                                android:imeOptions="actionNext"/>
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dimens_6dp">

                        <TextView
                            android:id="@+id/txt_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_micro_small"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/cheque_no_height"
                            android:layout_weight="1"
                            android:inputType="textEmailAddress"
                            android:imeOptions="actionDone"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_consulting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_2dp"
                android:layout_weight=".5"
                android:text="@string/consulting"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_freeSample"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_2dp"
                android:layout_weight=".5"
                android:text="@string/free_sample"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_apply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_2dp"
                android:layout_weight=".5"
                android:text="@string/apply_or_test"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_sale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_2dp"
                android:layout_weight=".5"
                android:text="@string/sales"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_feedback"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_2dp"
                android:text="@string/feedback"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
