<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginBottom="@dimen/dimen_4dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:background="@color/list_menu_left_end" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/imp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:paddingLeft="@dimen/dimen_2dp"
                    android:text="*"
                    android:textColor="@color/RED"
                    android:textSize="@dimen/text_sz_medium"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/questionno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_sz_medium"
                    android:textStyle="bold"
                    android:visibility="gone"></TextView>

                <TextView
                    android:id="@+id/questionTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@+id/questionno"
                    android:textColor="@color/DependentBlack"
                    android:textSize="@dimen/text_sz_medium"></TextView>

            </LinearLayout>

            <!--<HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">-->

                <LinearLayout
                    android:id="@+id/answerLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <RadioGroup
                        android:id="@+id/radiogroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />
                </LinearLayout>
            <!-- </HorizontalScrollView>-->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/right_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingBottom="@dimen/side_layout_margin_bottom">

            <TextView
                android:id="@+id/scoreTV"
                android:layout_width="@dimen/main_photo_width"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="0"
                android:textSize="@dimen/highlight_normal" />

            <LinearLayout
                android:id="@+id/ll_photo"
                android:layout_width="@dimen/main_photo_width"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scoreTV"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/minphotoTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0 Photos Required"
                    android:textSize="@dimen/font_nano_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/icon_height"
                            android:layout_weight="6"
                            android:gravity="center|right">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/imgBtn"
                                    android:layout_width="@dimen/icon"
                                    android:layout_height="@dimen/icon"
                                    android:background="@null"
                                    android:padding="@dimen/dimen_0dp"
                                    android:scaleType="center"
                                    android:src="@drawable/ic_photo_camera" />

                                <TextView
                                    android:id="@+id/textOne"
                                    android:layout_width="20sp"
                                    android:layout_height="20sp"
                                    android:layout_alignRight="@id/imgBtn"
                                    android:layout_alignTop="@id/imgBtn"
                                    android:background="@drawable/badge_circle"
                                    android:gravity="center_horizontal|center_vertical|center"
                                    android:textColor="?attr/colorPrimary"
                                    android:textSize="@dimen/font_nano_small"
                                    android:textStyle="bold"
                                    android:visibility="gone" />


                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/one_dp_width"
                            android:layout_marginRight="@dimen/one_dp_width"
                            android:visibility="gone"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/dimen_1dp"
                                android:layout_height="20dp"
                                android:background="@color/new_grey"></View>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/icon_height"
                            android:layout_weight="6"
                            android:visibility="gone"
                            android:gravity="center|left">

                            <ImageView
                                android:id="@+id/photos"
                                android:layout_width="@dimen/icon"
                                android:layout_height="@dimen/icon"
                                android:background="@null"
                                android:padding="@dimen/dimen_0dp"
                                android:scaleType="center"
                                android:src="@drawable/camera_new" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subqLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>