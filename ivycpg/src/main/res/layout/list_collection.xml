<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/dimens_6dp"
    app:cardElevation="3dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimens_10dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_14dp"
            android:layout_marginLeft="@dimen/dimens_14dp"
            android:layout_weight="6">

            <TextView
                android:id="@+id/tv_invoiceno_title"
                style="@style/TextViewListItemCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="start|center_vertical"
                android:text="@string/invoice_no" />

            <TextView
                android:id="@+id/tv_invoice_no"
                style="@style/TextViewListItemValues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_invoiceno_title"
                android:gravity="start|center_vertical"
                android:text="@string/zero" />

            <TextView
                android:id="@+id/tv_invoicedate_title"
                style="@style/TextViewListItemCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_invoice_no"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="start|center_vertical"
                android:text="@string/invoice_date" />


            <RelativeLayout
                android:id="@+id/rl_invoice_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_invoicedate_title">

                <TextView
                    android:id="@+id/tv_invoice_date"
                    style="@style/TextViewListItemValues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:text="asdlfjasdf" />

                <TextView
                    android:id="@+id/tv_age"
                    style="@style/TextViewListItemValues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tv_invoice_date"
                    android:layout_toRightOf="@+id/tv_invoice_date"
                    android:gravity="start|center"
                    android:text="asdlfjasdf" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_osamt_title"
                style="@style/TextViewListItemCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_invoice_date"
                android:gravity="start|center_vertical"
                android:text="@string/os_amt" />

            <TextView
                android:id="@+id/tv_osamt"
                style="@style/TextViewListItemValues"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_22dp"
                android:layout_below="@+id/tv_osamt_title"
                android:gravity="start|center_vertical"
                android:text="@string/value" />

            <TextView
                android:id="@+id/tv_payableamt_title"
                style="@style/TextViewListItemCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_osamt"
                android:gravity="start|center_vertical"
                android:text="@string/payment_amount"

                />


            <TextView
                android:id="@+id/tv_payableamt"
                style="@style/TextViewListItemValues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_payableamt_title"
                android:gravity="start|center_vertical"
                android:text="@string/zero" />

            <TextView
                android:id="@+id/tv_comments_title"
                style="@style/TextViewListItemCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_payableamt"
                android:gravity="start|center_vertical"
                android:tag="refno"
                android:text="@string/comments"

                />


            <TextView
                android:id="@+id/tv_comments"
                style="@style/TextViewListItemValues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_comments_title"
                android:gravity="start|center_vertical"
                android:text="" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:id="@+id/tv_duedate_title"
                style="@style/TextViewListItemCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="@string/due_date" />

            <TextView
                android:id="@+id/tv_duedate"
                style="@style/TextViewListItemValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_duedate_title"
                android:gravity="start|center_vertical" />

            <TextView
                android:id="@+id/tv_invamt_title"
                style="@style/TextViewListItemCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_duedate"
                android:gravity="start|center_vertical"
                android:text="@string/invoiceamt" />

            <TextView
                android:id="@+id/tv_invamt"
                style="@style/TextViewListItemValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_invamt_title"
                android:gravity="start|center_vertical"
                android:text="@string/zero" />

            <TextView
                android:id="@+id/tv_received_title"
                style="@style/TextViewListItemCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_invamt"
                android:gravity="start|center_vertical"
                android:text="@string/received" />


            <TextView
                android:id="@+id/tv_received"
                style="@style/TextViewListItemValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_received_title"
                android:gravity="start|center_vertical"
                android:text="@string/zero" />

            <TextView
                android:id="@+id/tv_disc_title"
                style="@style/TextViewListItemCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_received"
                android:gravity="start|center_vertical"
                android:text="@string/disc_amt" />

            <TextView
                android:id="@+id/tv_disc"
                style="@style/TextViewListItemValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_disc_title"
                android:gravity="start|center_vertical"
                android:text="@string/zero" />

            <TextView
                android:id="@+id/tv_docRef_title"
                style="@style/TextViewListItemCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_disc"
                android:gravity="start|center_vertical"
                android:text="@string/docRefNo" />


            <TextView
                android:id="@+id/tv_docRef"
                style="@style/TextViewListItemValues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_docRef_title"
                android:gravity="start|center_vertical"
                android:text="@string/zero" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_check"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon"
                android:layout_gravity="center|center_horizontal"
                android:background="@drawable/coll_tick" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>