<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/orderScreenListRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/list_padding_left_n_right"
        android:paddingStart="@dimen/list_padding_left_n_right">
        <!--android:weightSum="6"-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_margin"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_weight="2.0"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPromoName"
                style="?attr/customListItemPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/column_padding"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="@dimen/column_padding"
                android:layout_marginStart="3dp"
                android:ellipsize="marquee"
                android:maxLines="3"
                android:text="@string/promotion" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_group_name_header"
                    style="?attr/customListItemSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingStart="4dp"
                    android:tag="promotion_type"
                    android:text="@string/group_name" />

                <TextView
                    android:id="@+id/tv_product_name"
                    style="?attr/customListItemSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:paddingEnd="4dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingStart="4dp"
                    android:tag="promotion_type"
                    android:visibility="gone"
                    android:text="@string/group_name" />

                <TextView
                    android:id="@+id/tv_group_name"
                    style="?attr/customListItemSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/executed_CB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/announced_CB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center" />

        <EditText
            android:id="@+id/et_promo_qty"
            style="@style/EditText_ListItem"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/column_padding"
            android:layout_marginRight="@dimen/column_padding"
            android:layout_weight="0.5"
            android:gravity="center"
            android:inputType="number"
            android:padding="3dp"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/spin_reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/column_padding"
            android:layout_marginRight="@dimen/column_padding"
            android:layout_weight="1.3"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:overlapAnchor="false"
            android:text="@string/reason"
            tools:ignore="UnusedAttribute" />

        <Spinner
            android:id="@+id/spin_rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/column_padding"
            android:layout_marginRight="@dimen/column_padding"
            android:layout_weight="1.3"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:overlapAnchor="false"
            android:text="@string/reason"
            tools:ignore="UnusedAttribute" />
        <!--android:layout_weight="1"-->

        <ImageView
            android:id="@+id/btn_photo"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/column_padding"
            android:layout_marginRight="@dimen/column_padding"
            android:layout_weight="0.7"
            android:contentDescription="@string/photo"
            android:gravity="center"
            android:src="@drawable/ic_photo_camera_blue_24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/skuPromolayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingEnd="@dimen/list_padding_left_n_right"
            android:paddingStart="@dimen/list_padding_left_n_right">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimens_6dp">

                <TextView
                    android:id="@+id/tv_from_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/fromdate"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/text_sz_small"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_fromdatepicker"
                        style="@style/datePickerButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/cheque_no_height"
                        android:layout_gravity="start|center"
                        android:gravity="center"
                        android:textColor="?attr/primarycolor" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimens_6dp">

                <TextView
                    android:id="@+id/tv_to_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/todate"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/text_sz_small"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_todatepicker"
                        style="@style/datePickerButton"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/cheque_no_height"
                        android:layout_gravity="start|center"
                        android:gravity="center"
                        android:textColor="?attr/primarycolor" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>