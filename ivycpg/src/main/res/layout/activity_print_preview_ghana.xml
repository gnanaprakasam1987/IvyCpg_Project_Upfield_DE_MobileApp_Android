<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/material_tool_bar" />

    <TextView
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <ImageView
            android:id="@+id/status_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/redball" />

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/status_iv"
            android:padding="4dp"
            android:text=""
            android:textColor="@color/RED" />

        <Spinner
            android:id="@+id/printcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:focusable="true"></Spinner>
    </RelativeLayout>

    <EditText
        android:id="@+id/et_mac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Enter Printer&apos;s MAC address \nex: 00:22:58:3C:B3:02" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_box_new"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/distname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp"></TextView>

                    <TextView
                        android:id="@+id/dist_tin_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp"></TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line_hr_dotted" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_invoice_no"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/invoice_no"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/invoiceno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/salesman"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/salesman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/sales_date"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/salesdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/customer"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/Address"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_telephone_no"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/tel"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/telno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:padding="5dp"
                        android:text="@string/tin"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tin_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line_hr_dotted" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/brand"
                                android:layout_width="@dimen/ppd_brand"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="@string/brand"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"></TextView>

                            <TextView
                                android:id="@+id/case1"
                                android:layout_width="@dimen/ppd_case"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:padding="5dp"
                                android:text="@string/case_u"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"></TextView>

                            <TextView
                                android:id="@+id/bottles"
                                android:layout_width="@dimen/ppd_bot"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:padding="5dp"
                                android:text="@string/bottle"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"></TextView>

                            <TextView
                                android:id="@+id/unitprice"
                                android:layout_width="@dimen/ppd_unit_price"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:padding="5dp"
                                android:text="@string/unit_price"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"></TextView>

                            <TextView
                                android:id="@+id/amount"
                                android:layout_width="@dimen/ppd_amount"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:padding="5dp"
                                android:text="@string/Amount"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/line_hr_dotted" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/product_container_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"></LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@drawable/line_hr_dotted" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fullstock"
                                android:layout_width="@dimen/ppd_brand"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="@string/total_stock_sold"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"></TextView>

                            <TextView
                                android:layout_width="@dimen/ppd_case"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="12sp"></TextView>

                            <TextView
                                android:id="@+id/fullstockbtl"
                                android:layout_width="@dimen/ppd_bot"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="12sp"></TextView>

                            <TextView
                                android:layout_width="@dimen/ppd_unit_price"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"></TextView>

                            <TextView
                                android:id="@+id/fullstockcstot"
                                android:layout_width="@dimen/ppd_amount"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="12sp"></TextView>
                        </LinearLayout>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/line_hr_dotted" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textview1"
                                android:layout_width="@dimen/ppd_brand"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="@string/total_exec_tax"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"></TextView>

                            <TextView
                                android:layout_width="@dimen/ppd_case"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="12sp"></TextView>

                            <TextView
                                android:layout_width="@dimen/ppd_bot"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="12sp"></TextView>

                            <TextView
                                android:layout_width="@dimen/ppd_unit_price"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="12sp"></TextView>

                            <TextView
                                android:id="@+id/tv_tax_amount"
                                android:layout_width="@dimen/ppd_amount"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="12sp"></TextView>
                        </LinearLayout>

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@drawable/line_hr_dotted" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_taxlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vatlabel"
                        android:layout_width="@dimen/ppd_brand"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/vat"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textview2"
                        android:layout_width="@dimen/ppd_case"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp"></TextView>

                    <TextView
                        android:id="@+id/textview3"
                        android:layout_width="@dimen/ppd_bot"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp"></TextView>

                    <TextView
                        android:layout_width="@dimen/ppd_unit_price"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"></TextView>

                    <TextView
                        android:id="@+id/vat_amount"
                        android:layout_width="@dimen/ppd_amount"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/line_hr_dotted" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nhllabel"
                        android:layout_width="@dimen/ppd_brand"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/vat"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textview21"
                        android:layout_width="@dimen/ppd_case"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp"></TextView>

                    <TextView
                        android:id="@+id/textview31"
                        android:layout_width="@dimen/ppd_bot"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:textSize="12sp"></TextView>

                    <TextView
                        android:id="@+id/textview41"
                        android:layout_width="@dimen/ppd_unit_price"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"></TextView>

                    <TextView
                        android:id="@+id/nhl_amount"
                        android:layout_width="@dimen/ppd_amount"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/line_hr_dotted" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/emp_product_container_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/line_hr_dotted" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_empty_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/ppd_brand"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text="@string/totempties"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp"></TextView>

                                <TextView
                                    android:layout_width="@dimen/ppd_case"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text=""
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp"></TextView>

                                <TextView
                                    android:layout_width="@dimen/ppd_bot"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text=""
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp"></TextView>

                                <TextView
                                    android:layout_width="@dimen/ppd_unit_price"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp"></TextView>

                                <TextView
                                    android:id="@+id/totalempbtltot"
                                    android:layout_width="@dimen/ppd_amount"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text=""
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp"></TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:background="@drawable/line_hr_dotted" />
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/totalemp"
                                    android:layout_width="@dimen/ppd_brand"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text="@string/total_amount_due"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp"></TextView>

                                <TextView
                                    android:id="@+id/fullstockcs"
                                    android:layout_width="@dimen/ppd_case"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text=""
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp"></TextView>

                                <TextView
                                    android:id="@+id/totalempbtl"
                                    android:layout_width="@dimen/ppd_bot"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text=""
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp"></TextView>

                                <TextView
                                    android:layout_width="@dimen/ppd_unit_price"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp"></TextView>

                                <TextView
                                    android:id="@+id/totalamountdue"
                                    android:layout_width="@dimen/ppd_amount"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:text=""
                                    android:textColor="@android:color/black"
                                    android:textSize="12sp"></TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:background="@drawable/line_hr_dotted" />
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_layout_cash"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="horizontal">

