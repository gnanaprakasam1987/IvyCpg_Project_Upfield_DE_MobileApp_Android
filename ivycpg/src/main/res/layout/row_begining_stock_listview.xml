<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp" >

    <TextView
        android:id="@+id/productname"
        android:textSize="@dimen/font_small"
        android:textColor="@android:color/black"
        android:layout_width="@dimen/list_product_name_width"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_height="@dimen/stock_screen_txtview_height"
        android:singleLine="true"
        android:text="@string/product_name" />


    <TextView
        android:id="@+id/caseqty"
        android:textSize="@dimen/font_small"
        android:textColor="@android:color/black"
        android:layout_width="@dimen/list_item_width_medium"
        android:layout_height="@dimen/stock_screen_txtview_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/zero" />

    <TextView
        android:id="@+id/outerqty"
        android:textSize="@dimen/font_small"
        android:textColor="@android:color/black"
        android:layout_width="@dimen/list_item_width_medium"
        android:layout_height="@dimen/stock_screen_txtview_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/zero" />

    <TextView
        android:id="@+id/pieceqty"
        android:textSize="@dimen/font_small"
        android:textColor="@android:color/black"
        android:layout_width="@dimen/list_item_width_medium"
        android:layout_height="@dimen/stock_screen_txtview_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/zero" />

    <TextView
        android:id="@+id/lineValue"
        android:textSize="@dimen/font_small"
        android:textColor="@android:color/black"
        android:layout_width="@dimen/meter_value_width_large"
        android:layout_height="@dimen/stock_screen_txtview_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/zero" />

</LinearLayout>