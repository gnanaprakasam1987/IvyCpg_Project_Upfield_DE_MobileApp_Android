<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="40dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/dimens_6dp">


        <TextView
            android:id="@+id/tv_trackinglist"
            style="@style/TextViewListItemPrimary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:gravity="start|center"
            android:maxLines="1"
            android:text="@string/brand" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/chk_comp_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <EditText
            android:id="@+id/et_qty"
            style="@style/EditText_ListItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:text="@string/zero" />

        <LinearLayout
            android:id="@+id/ll_photoView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn_photo"
                android:layout_width="@dimen/info_icon"
                android:layout_height="@dimen/info_icon"
                android:src="@drawable/ic_photo_camera" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimens_6dp">

        <LinearLayout
            android:id="@+id/ll_hg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/remark_tv_label"
                style="@style/TextViewCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/feedback" />


            <EditText
                android:id="@+id/edt_competitor_feedback"
                style="@style/EditText_ListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="center|start"
                android:hint="@string/feedback"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="50"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:overlapAnchor="false"
                android:textAlignment="textStart"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_from_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fromdate" />

            <Button
                android:id="@+id/btn_fromdate"
                style="@style/datePickerButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_item_date_picker_height"
                android:layout_marginEnd="@dimen/dimen_2dp"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:gravity="center|start"
                android:maxLines="1"
                android:text="@string/fromdate" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_to_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/todate" />

            <Button
                android:id="@+id/btn_todate"
                style="@style/datePickerButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_item_date_picker_height"
                android:layout_marginEnd="@dimen/dimen_2dp"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:gravity="center|start"
                android:maxLines="1"
                android:text="@string/todate" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/LL_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_qty"
                style="@style/TextViewCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qty" />

            <EditText
                android:id="@+id/et_qty1"
                style="@style/EditText_ListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:text="@string/zero" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_spin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/TextViewCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/dimens_6dp"
                android:layout_marginLeft="@dimen/dimens_6dp"
                android:text="@string/reason" />

            <Spinner
                android:id="@+id/spn_reason"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center|start"
                android:overlapAnchor="false"
                android:textAlignment="textStart"
                tools:ignore="UnusedAttribute" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>