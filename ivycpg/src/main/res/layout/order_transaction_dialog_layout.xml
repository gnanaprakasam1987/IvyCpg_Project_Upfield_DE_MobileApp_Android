<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/filter_slider_width"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transaction_list"
        android:layout_width="@dimen/filter_slider_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
    <!--android:layout_above="@+id/new_order_tv"-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_view_color" />
    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_10dp">

        <Button
            android:id="@+id/new_order_btn"
            style="?attr/roundedCustomButtonNormal"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dimen_2dp"
            android:text="@string/new_order"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/cancel_btn"
            style="?attr/roundedCustomButtonNormalTransparent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dimen_2dp"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/black_bg1" />
    </LinearLayout>
</LinearLayout>