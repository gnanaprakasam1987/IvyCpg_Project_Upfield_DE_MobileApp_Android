<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/cb_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="35435 45"
        android:textSize="@dimen/font_small"
        android:textColor="@color/FullBlack"
        android:buttonTint="?attr/colorAccent"
        android:padding="12dp" />

    <EditText
        android:id="@+id/edt_other_remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:textColor="@color/half_Black"
        android:textSize="@dimen/text_size_secondary"
        android:visibility="gone"
        tools:text="rg tgerg dfgdfgdf g"
        android:hint="@string/remark_hint"
        android:padding="12dp"
        android:layout_marginLeft="12dp" />

    <LinearLayout
        android:id="@+id/reasonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_marginBottom="@dimen/dimen_4dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/reasonSpinner"
            android:layout_width="@dimen/order_stock_list_product_name_width_xlarge"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:overlapAnchor="false" />

        <TextView
            android:layout_width="@dimen/order_stock_list_product_name_width_xlarge"
            android:layout_height="1dp"
            android:background="@color/light_gray" />
    </LinearLayout>
</LinearLayout>
