<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_5dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/txtProductName"
            style="?attr/customListTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/skuwise_right_margin"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/zero"
            android:textColor="?attr/primarycolor"
            android:textSize="@dimen/font_micro_small" />

        <TextView
            android:id="@+id/txtOrderedCases"
            style="?attr/customListTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/skuwise_right_margin"
            android:layout_weight="0.5"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="?attr/textColorSecondary"
            android:textSize="@dimen/font_micro_small" />

        <TextView
            android:id="@+id/txtOrderedPieces"
            style="?attr/customListTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/skuwise_right_margin"
            android:layout_weight="0.5"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="?attr/textColorSecondary"
            android:textSize="@dimen/font_micro_small" />

        <TextView
            android:id="@+id/txtFulfilledCases"
            style="?attr/customListTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="?attr/textColorSecondary"
            android:textSize="@dimen/font_micro_small" />

        <TextView
            android:id="@+id/txtFulfilledPieces"
            style="?attr/customListTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/skuwise_right_margin"
            android:layout_weight="0.5"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="0"
            android:textColor="?attr/textColorSecondary"
            android:textSize="@dimen/font_micro_small" />

    </LinearLayout>

</LinearLayout>