<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleBar"
        style="?attr/dialogTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:padding="6dp"
        android:text="@string/must_sell" />

    <TextView
        android:id="@+id/must_sell_message_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/fill_must_sell"
        android:textSize="@dimen/font_small" />

    <Spinner
        android:id="@+id/reason_spnr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/grey_odd" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_ok"
            style="?attr/roundedCustomButtonNormalTransparent"
            android:layout_margin="@dimen/target_top_margin"
            android:text="@string/cancel"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_continue"
            style="?attr/roundedCustomButtonNormal"
            android:layout_margin="@dimen/target_top_margin"
            android:text="@string/done"
            android:textAllCaps="false" />

    </LinearLayout>


</LinearLayout>