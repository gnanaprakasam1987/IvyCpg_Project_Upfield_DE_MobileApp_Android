<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_l"
    android:layout_marginRight="@dimen/padding_l"
    android:layout_marginTop="@dimen/dimen_5dp"
    android:layout_marginBottom="@dimen/dimen_5dp"
    app:cardElevation="@dimen/dimen_4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dimen_6dp"
        android:gravity="center_vertical"
        android:weightSum="1">

        <com.ivy.cpg.view.supervisor.helper.CircleImageView
            android:layout_width="@dimen/mvpbadgelayoutwidth"
            android:layout_height="@dimen/mvpbadgelayoutwidth"
            android:src="@drawable/user_default"
            android:padding="@dimen/dimen_5dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_weight="0.8">

            <TextView
                android:id="@+id/seller_name"
                style="?attr/customListItemSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimen_8dp"
                android:text="Sales Volume sfffsffs"
                android:textColor="#de000000"
                android:textSize="@dimen/dimen_16dp" />

            <TextView
                android:id="@+id/seller_position"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:maxLines="1"
                android:paddingLeft="@dimen/dimen_8dp"
                android:text="Sales Volume"
                android:textColor="#8b000000"
                android:textSize="@dimen/dimen_14dp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/progress_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circular_progress"
                android:indeterminate="false"
                android:max="100"
                android:progress="70"
                android:layout_centerInParent="true"
                android:progressDrawable="@drawable/circle_progress_rotate" />

            <TextView
                style="?attr/customListItemPrimary"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="70%"
                android:textColor="#262e4f"
                android:textSize="@dimen/dimen_14dp" />


        </RelativeLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>