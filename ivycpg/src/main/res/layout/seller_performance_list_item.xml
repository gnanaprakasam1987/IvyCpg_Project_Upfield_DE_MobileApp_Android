<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    app:cardElevation="@dimen/_1sdp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_6sdp"
        android:gravity="center_vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp">

            <com.ivy.cpg.view.supervisor.customviews.CircleImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="#61b9b9b9"/>

            <com.ivy.cpg.view.supervisor.customviews.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_default_user"/>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="0.8">

            <TextView
                android:id="@+id/seller_name"
                style="?attr/customListItemSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:maxLines="1"
                android:paddingLeft="@dimen/_8sdp"
                android:ellipsize="end"
                android:text=""
                android:textColor="#de000000"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/seller_position"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:maxLines="1"
                android:paddingLeft="@dimen/_8sdp"
                android:text="Productivity"
                android:textColor="#8b000000"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/progress_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:background="@drawable/circular_progress"
                android:indeterminate="false"
                android:max="100"
                android:progress="70"
                android:layout_centerInParent="true"
                android:progressDrawable="@drawable/circle_progress_rotate" />

            <TextView
                style="?attr/customListItemPrimary"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text=""
                android:textColor="#262e4f"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/seller_perform_percent"/>


        </RelativeLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>