<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/burger_menu_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="@dimen/settings_icon_height"
        android:layout_height="@dimen/settings_icon_height"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:backgroundTintMode="@color/user_name"
        android:src="@drawable/icon_settings"
        android:tint="@color/user_name" />

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"
        android:background="@drawable/burger_menu_overlay"
        android:orientation="vertical"
        android:paddingTop="@dimen/header_top_padding">

        <ImageView
            android:id="@+id/im_user"
            style="@style/userLogoImageView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:src="@drawable/face" />

        <TextView
            android:id="@+id/tv_username"
            style="@style/userNameTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:gravity="center_horizontal"
            android:text="@string/welcome" />

        <TextView
            android:id="@+id/tv_designation"
            style="@style/descriptionTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center_horizontal|top"
            android:text="@string/designation"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/ll_footer"
        android:layout_below="@+id/ll_header"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/list_view_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_6dp"
            android:layout_marginLeft="@dimen/dimen_6dp"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/img_chat"
                android:layout_width="@dimen/ret_card_image"
                android:layout_height="@dimen/ret_card_image"
                android:background="@drawable/ic_action_communication_comment"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/img_div_status"
                android:layout_width="@dimen/ret_card_image"
                android:layout_height="@dimen/ret_card_image"
                android:background="@drawable/ic_action_ic_action_collections_view_as_grid1"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/img_user_feedback"
                android:layout_width="@dimen/ret_card_image"
                android:layout_height="@dimen/ret_card_image"
                android:background="@drawable/ic_remark"
                android:visibility="gone" />

        </LinearLayout>


        <ListView
            android:id="@+id/listView1"
            android:layout_width="@dimen/list_view_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_6dp"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:fadingEdgeLength="0px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_10dp"
        android:paddingStart="@dimen/space_betwn_icon_and_text">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:paddingEnd="@dimen/space_betwn_icon_and_text"
            android:src="@drawable/line_burger" />

        <LinearLayout
            android:id="@+id/ll_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_10dp">

            <ImageView
                style="@style/menuIconImageView"
                android:src="@drawable/ic_vector_logout"
                android:tint="@color/white" />

            <TextView
                style="@style/menuLogoutTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_2dp"
                android:layout_marginStart="@dimen/space_betwn_icon_and_text"
                android:text="@string/log_out" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_top_padding"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/footer_menuIconImageView"
                android:src="@drawable/ic_vector_about"
                android:tint="@color/white" />

            <TextView
                style="@style/menuLogoutTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_2dp"
                android:layout_marginStart="@dimen/space_betwn_icon_and_text"
                android:text="@string/about" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>