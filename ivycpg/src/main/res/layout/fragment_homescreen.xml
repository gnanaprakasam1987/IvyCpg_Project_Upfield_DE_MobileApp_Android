<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/burger_menu_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="@dimen/settings_icon_height"
        android:layout_height="@dimen/settings_icon_height"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:src="@drawable/icon_settings"
        android:backgroundTintMode="@color/user_name"
        android:tint="@color/user_name"
        />

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:background="@drawable/burger_menu_overlay"
        android:paddingTop="@dimen/header_top_padding">

        <ImageView
            android:id="@+id/im_user"
            style="@style/userLogoImageView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:src="@drawable/face" />

        <TextView
            android:id="@+id/tv_username"
            style="@style/userNameTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/tv_designation"
            style="@style/descriptionTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/designation"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/ll_footer"
        android:layout_below="@+id/ll_header"
        android:gravity="center">

        <ListView
            android:id="@+id/listView1"
            android:layout_width="@dimen/list_view_width"
            android:layout_height="wrap_content"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:layout_marginBottom="@dimen/dimen_6dp"
            android:fadingEdgeLength="0px"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_betwn_icon_and_text"
        android:paddingBottom="@dimen/dimen_10dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:paddingRight="@dimen/space_betwn_icon_and_text"
            android:src="@drawable/line_burger" />

        <LinearLayout
            android:id="@+id/ll_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_10dp"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:focusable="false">

            <ImageView
                style="@style/menuIconImageView"
                android:src="@drawable/ic_vector_logout"
                android:tint="@color/white"/>

            <TextView
                style="@style/menuLogoutTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_betwn_icon_and_text"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:text="@string/log_out" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_top_padding"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:orientation="horizontal"
            >

            <ImageView
                style="@style/footer_menuIconImageView"
                android:src="@drawable/ic_vector_about"
                android:tint="@color/white"/>

            <TextView
                style="@style/menuLogoutTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_betwn_icon_and_text"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:text="@string/about" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>