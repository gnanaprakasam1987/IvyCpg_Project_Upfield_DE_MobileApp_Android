<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/ll_explist">

        <ListView
            android:id="@+id/creditnote_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="1dp"
            android:cacheColorHint="@null"
            android:divider="@android:color/white"
            android:dividerHeight="1dp"
            android:fitsSystemWindows="true"
            >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_explist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/FullBlack"
        android:gravity="center"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/print"
            style="?attr/roundedCustomButtonNormal"
            android:layout_margin="@dimen/target_top_margin"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_primary"
            android:gravity="center"
            android:text="@string/print"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>