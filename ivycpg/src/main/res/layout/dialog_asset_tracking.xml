<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_noise"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="@string/addnewasset"
        android:textAllCaps="true"
        android:textColor="?attr/primarycolor"
        android:textSize="@dimen/font_large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Equipment Type"
                android:id="@+id/input_equipment_type"
                android:textColor="@color/DependentBlack"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:textSize="@dimen/dimen_20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Serial Number"
                android:textStyle="normal"
                android:id="@+id/input_serialNo"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:textSize="@dimen/dimen_18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Outlet Code"
                android:id="@+id/input__outletcode"
                android:textStyle="normal"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:textSize="@dimen/dimen_16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reason"
                android:textStyle="normal"
                android:layout_margin="@dimen/dimen_5dp"
                android:textSize="@dimen/dimen_18dp" />

            <Spinner
                android:id="@+id/spinnerCustomDialog"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:layout_marginStart="@dimen/dimen_2dp"
                android:spinnerMode="dropdown" />
        </LinearLayout>


    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_dialog_description"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description"
            android:imeOptions="actionDone"
            android:minLines="2"
            android:lines="2"
            android:maxLines="3"
            android:inputType="text"
            android:maxLength="200" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_cancel"
            style="?attr/roundedCustomButtonNormalTransparent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_10dp"
            android:text="@string/cancel"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_dialog_save"
            style="?attr/roundedCustomButtonNormal"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_10dp"
            android:text="@string/save"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>
