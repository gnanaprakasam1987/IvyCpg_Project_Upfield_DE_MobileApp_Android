<?xml version="1.0" encoding="utf-8"?>

<com.ivy.ui.task.adapter.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_card_height"
    app:dragEdge="right">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|end"
            android:gravity="center"
            android:minHeight="@dimen/list_card_height"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/edit_button"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimaryDark"
                android:clickable="true"
                android:drawableTop="@drawable/task_edit"
                android:focusable="true"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:padding="@dimen/_14sdp"
                android:text="@string/edit"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_secondary" />


            <TextView
                android:id="@+id/delete_button"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/sdkOrange"
                android:clickable="true"
                android:drawableTop="@drawable/ic_delete_white_24dp"
                android:focusable="true"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:padding="@dimen/_14sdp"
                android:text="@string/delete"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_secondary" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/layoutBorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:baselineAligned="false"
            android:minHeight="@dimen/list_card_height"
            android:orientation="horizontal"
            android:paddingStart="@dimen/list_padding_left_n_right"
            android:paddingTop="@dimen/target_top_margin"
            android:paddingEnd="@dimen/list_padding_left_n_right"
            android:paddingBottom="@dimen/target_top_margin"
            tools:ignore="UselessParent">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/task_title_tv"
                    style="@style/TextViewListItemPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/dummy_txt"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/task_category_tv"
                    style="@style/TextViewListItemSecondaryHighlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_txt" />


                <RelativeLayout
                    android:id="@+id/rl_created_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/task_createdOn"
                        style="@style/TextViewListItemCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_txt"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/task_taskowner_label"
                        style="@style/TextViewListItemCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/task_createdOn"
                        android:layout_toRightOf="@+id/task_createdOn"
                        android:text="@string/created_by"
                        android:textStyle="italic" />


                    <TextView
                        android:id="@+id/task_taskowner"
                        style="@style/TextViewListItemCaption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/task_taskowner_label"
                        android:layout_toRightOf="@+id/task_taskowner_label"
                        android:gravity="start|center"
                        android:text="@string/dummy_txt"
                        android:textStyle="italic" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCB"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|start">

                <ImageButton
                    android:id="@+id/btn_attach_photo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|start"
                    android:layout_weight=".5"
                    android:background="@color/zxing_transparent"
                    android:contentDescription="@string/add_img_content_description"
                    android:rotation="45"
                    android:src="@drawable/ic_attach_file_black_24dp"
                    android:tint="?primarycolor" />

                <CheckBox
                    android:id="@+id/task_title_CB"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/main_photo_width"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight=".5"
                    android:text="" />
            </LinearLayout>


        </LinearLayout>
    </FrameLayout>
</com.ivy.ui.task.adapter.SwipeRevealLayout>