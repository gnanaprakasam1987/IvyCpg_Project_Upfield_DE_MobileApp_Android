<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutBorder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_10dp"
    android:minHeight="@dimen/list_item_height_double_line"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/layoutCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/dimens_10dp"
        android:layout_marginRight="@dimen/dimens_10dp"
        >

        <CheckBox
            android:id="@+id/task_title_CB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/task_title_tv"
            style="@style/TextViewListItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/dummy_txt"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/task_description_tv"
            style="@style/TextViewListItemSecondaryHighlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_title_tv"
            android:text="@string/dummy_txt" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_description_tv"
            android:layout_gravity="start|center"
            android:gravity="start|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_createdOn"
                style="@style/TextViewListItemCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_txt"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/task_taskowner_label"
                style="@style/TextViewListItemCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/task_createdOn"
                android:layout_toRightOf="@+id/task_createdOn"
                android:text="@string/created_by"
                android:textStyle="italic" />


            <TextView
                android:id="@+id/task_taskowner"
                style="@style/TextViewListItemCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/task_taskowner_label"
                android:layout_toRightOf="@+id/task_taskowner_label"
                android:gravity="start|center"
                android:text="@string/dummy_txt"
                android:textStyle="italic" />


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:padding="@dimen/dimen_10dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/light_gray" />


</LinearLayout>