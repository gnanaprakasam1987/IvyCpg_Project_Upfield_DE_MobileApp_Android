<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5dp"
        >
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ListHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/list_title_bg_color"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/list_padding_left_n_right"
            android:paddingRight="@dimen/list_padding_left_n_right"
            android:weightSum="10"
            android:gravity="center_vertical">

            <TextView
                style="?attr/customListTitle"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:text="@string/product_name"
                android:layout_weight="4"/>


            <TextView
                android:id="@+id/pcsTitle"
                style="?attr/customListTitle"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:tag="item_piece"
                android:text="@string/item_piece"
                android:layout_weight="1.2"/>


            <TextView
                android:id="@+id/caseTitle"
                style="?attr/customListTitle"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:tag="item_case"
                android:text="@string/item_case"
                android:layout_weight="1.2"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/outerTitle"
                style="?attr/customListTitle"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:tag="item_outer"
                android:text="@string/item_outer"
                android:layout_weight="1.2"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/priceTitle"
                style="?attr/customListTitle"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:tag="price"
                android:text="@string/price"
                android:layout_weight="1.3"/>
            <TextView
                android:id="@+id/valueTitle"
                style="?attr/customListTitle"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:tag="price"
                android:text="@string/value"
                android:layout_weight="1.3"/>

        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
