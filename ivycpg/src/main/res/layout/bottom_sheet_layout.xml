<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/dimen_40dp"
    android:gravity="center"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <ImageView
        android:id="@+id/up_arrow"
        android:layout_width="@dimen/dimens_50dp"
        android:layout_height="@dimen/dimens_50dp"
        android:src="@drawable/ic_up_arrow"
        android:tint="@color/FullBlack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_ttl_seller"
            app:cardBackgroundColor="@color/grey_odd"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="0dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_marginEnd="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/dimen_10dp">

                <TextView
                    android:id="@+id/tv_header_ttl_seller"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Total Seller"
                    android:gravity="center"
                    android:textColor="@color/RED"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_divider_height"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:background="@color/black_bg1" />

                <TextView
                    android:id="@+id/tv_total_seller"
                    style="?attr/customListItemValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="loading..."
                    android:gravity="center"
                    android:textSize="@dimen/dimen_18dp"
                    android:textStyle="bold"
                    android:textColor="@color/FullBlack"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_market_seller"
            app:cardBackgroundColor="@color/grey_odd"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="0dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/dimen_10dp">

                <TextView
                    android:id="@+id/tv_header_market_seller"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="In Market Seller"
                    android:gravity="center"
                    android:textColor="@color/RED"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_divider_height"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:background="@color/black_bg1" />

                <TextView
                    android:id="@+id/tv_market_seller"
                    style="?attr/customListItemValue"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="loading..."
                    android:textStyle="bold"
                    android:textColor="@color/FullBlack"
                    android:textSize="@dimen/dimen_18dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_absent_seller"
            app:cardBackgroundColor="@color/grey_odd"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="0dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_marginEnd="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/dimen_10dp">

                <TextView
                    android:id="@+id/tv_header_absent_seller"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Absent Sellers"
                    android:gravity="center"
                    android:textColor="@color/RED"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_divider_height"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:background="@color/black_bg1" />

                <TextView
                    android:id="@+id/tv_absent_seller"
                    style="?attr/customListItemValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="loading..."
                    android:gravity="center"
                    android:textSize="@dimen/dimen_18dp"
                    android:textStyle="bold"
                    android:textColor="@color/FullBlack"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_out_seller"
            app:cardBackgroundColor="@color/grey_odd"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="0dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/dimen_10dp">

                <TextView
                    android:id="@+id/tv_header_out_seller"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Out Sellers"
                    android:gravity="center"
                    android:textColor="@color/RED"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_divider_height"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:background="@color/black_bg1" />

                <TextView
                    android:id="@+id/tv_out_seller"
                    style="?attr/customListItemValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="loading..."
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="@dimen/dimen_18dp"
                    android:textColor="@color/FullBlack"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <ImageView
        android:id="@+id/down_arrow"
        android:layout_width="@dimen/dimens_50dp"
        android:layout_height="@dimen/dimens_50dp"
        android:src="@drawable/ic_down"
        android:visibility="invisible"
        android:tint="@color/FullBlack"/>

</LinearLayout>