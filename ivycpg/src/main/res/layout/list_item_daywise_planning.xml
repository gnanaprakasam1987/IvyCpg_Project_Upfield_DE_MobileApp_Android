<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTimeSlot"
        style="@style/TextViewListItemCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/ivEntityType"
        android:layout_width="@dimen/ret_image_size"
        android:layout_height="@dimen/ret_image_size"
        android:layout_below="@+id/tvTimeSlot"
        android:layout_margin="@dimen/dimen_8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@null"
        android:src="@drawable/ic_store_ofplan" />

    <TextView
        android:id="@+id/txt_retailerName"
        style="@style/TextViewListItemPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTimeSlot"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:layout_toStartOf="@+id/iv_delete"
        android:layout_toLeftOf="@+id/iv_delete"
        android:layout_toEndOf="@+id/ivEntityType"
        android:layout_toRightOf="@+id/ivEntityType"
        android:text="@string/retailer_name" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTimeSlot"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dimen_8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_delete_forever_black_24dp" />

</RelativeLayout>

