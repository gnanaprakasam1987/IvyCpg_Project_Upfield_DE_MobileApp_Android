<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orderScreenListRow"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/list_item_height_double_line"
    android:gravity="center_vertical"
    android:orientation="horizontal" >



    <RelativeLayout
        android:layout_width="@dimen/order_stock_list_product_name_width_xlarge"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="1dp">

        <TextView
            android:id="@+id/closePRODNAME"
            style="?attr/customListItemPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:gravity="left|center"
            android:maxLines="2"
            android:padding="3dp"
            android:text="@string/product_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/closePRODNAME"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/proposalQty"
            style="?attr/customListItemSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:maxLines="1"
            android:paddingLeft="@dimen/dimens_2dp"
            android:tag="so"
            android:text="@string/hvp3m"
           />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
        <TextView
            android:id="@+id/stock_and_order_listview_sih_case"
            style="?attr/customListItemSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/closePRODNAME"
            android:layout_toRightOf="@+id/proposalQty"
            android:paddingLeft="@dimen/dimens_2dp"
            android:maxLines="1"
            android:tag="sih_case"
            android:text="@string/sih_case"
           />
        <TextView
            android:id="@+id/stock_and_order_listview_sih_outer"
            style="?attr/customListItemSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/closePRODNAME"
            android:layout_toRightOf="@+id/stock_and_order_listview_sih_case"
            android:maxLines="1"
            android:tag="sih_outer"
            android:text="@string/sih_outer"
           />

        <TextView
            android:id="@+id/stock_and_order_listview_sih"
            style="?attr/customListItemSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/closePRODNAME"
            android:layout_toRightOf="@+id/stock_and_order_listview_sih_outer"
            android:maxLines="1"
            android:tag="sih_piece"
            android:text="@string/sih"
            />
            </LinearLayout>
        <TextView
            android:id="@+id/stock_and_order_listview_distinv"
            style="?attr/customListItemSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_below="@+id/closePRODNAME"
            android:layout_toRightOf="@+id/stock_and_order_listview_sih"
            android:maxLines="1"
            android:paddingLeft="@dimen/dimens_2dp"
            android:tag="dist_inv"
            android:text="@string/dist_inv"
            />

</LinearLayout>
    </RelativeLayout>



    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/productqtyCases"
        style="@style/EditText_ListItem"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="@dimen/order_stock_list_item_width_xlarge"
        android:text="@string/zero" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/outerproductqtyCases"
        style="@style/EditText_ListItem"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="@dimen/order_stock_list_item_width_xlarge"
        android:text="@string/zero" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/productqtyPieces"
        style="@style/EditText_ListItem"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="@dimen/order_stock_list_item_width_xlarge"
        android:text="@string/zero" />


    <TextView
        android:id="@+id/unitprice"
        android:layout_weight="1"
        android:layout_width="@dimen/list_item_width_medium"
        style="?attr/customListItemPrimary"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/zero" />

</LinearLayout>