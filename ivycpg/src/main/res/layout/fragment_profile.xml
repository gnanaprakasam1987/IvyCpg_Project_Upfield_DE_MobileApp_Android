        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/profile_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:clipChildren="false"
            android:clipToPadding="true"
            android:nestedScrollingEnabled="false"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:ignore="UnusedAttribute" />

        <LinearLayout
            android:id="@+id/ll_Deactivate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/dimen_5dp">

                <TextView
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:gravity="center_vertical"
                    android:text="@string/status"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/FullBlack"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ToggleButton
                    android:id="@+id/btn_Deactivate"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_round_corner_height"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:background="@drawable/button_rounded_corner_orange"
                    android:checked="false"
                    android:minWidth="@dimen/btn_round_corner_width"
                    android:paddingEnd="@dimen/dimen_5dp"
                    android:paddingStart="@dimen/dimen_5dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textOff="DeActivate"
                    android:textOn="Activate" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>


