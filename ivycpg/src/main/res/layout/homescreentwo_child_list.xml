<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ActivitySubListClickEffect"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sub_activity_list_height"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/activity_icon1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/activity_margin4"
        android:layout_marginLeft="@dimen/activity_margin4">

        <ImageView
            android:id="@+id/circle"
            android:layout_width="@dimen/sub_activity_list_icon_circle"
            android:layout_height="@dimen/sub_activity_list_icon_circle"
            android:layout_centerVertical="true"
            android:src="@drawable/activity_icon_bg_normal"
            android:tint="#000000" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="@dimen/activity_list_icon_size"
        android:layout_height="@dimen/activity_list_icon_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_margin3"
        android:layout_marginRight="@dimen/activity_margin3"
        android:src="@drawable/activity_icon_next"
        android:tint="#ffffff" />

    <TextView
        android:id="@+id/activityName"
        style="@style/SubActivityNameStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/activity_margin3"
        android:layout_marginEnd="@dimen/activity_margin3"
        android:layout_toStartOf="@id/img_arrow"
        android:layout_toLeftOf="@id/img_arrow"
        android:layout_toEndOf="@id/activity_icon1"
        android:layout_toRightOf="@id/activity_icon1" />

</RelativeLayout>