<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    app:cardBackgroundColor="@color/WHITE"
    app:cardElevation="@dimen/_4sdp"
    android:layout_below="@+id/chart_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/seller_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.ivy.cpg.view.supervisor.helper.CircleImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/user_default" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/seller_name"
                    style="?attr/customListItemSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_8sdp"
                    android:text="Sales Volume sfffsffs ffsff dvddv vdvdv"
                    android:textColor="#de000000"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/seller_position"
                    style="?attr/customListItemSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_8sdp"
                    android:text="Sales Volume"
                    android:textColor="#8b000000"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/progress_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circular_progress"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="70"
                    android:progressDrawable="@drawable/circle_progress_rotate" />

                <TextView
                    style="?attr/customListItemPrimary"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="170%"
                    android:textColor="#262e4f"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/seller_perform_percent"/>


            </RelativeLayout>


        </LinearLayout>

        <View
            android:id="@+id/line_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#23000000"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/seller_layout"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_below="@+id/line_view"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            app:tabGravity="fill"
            app:tabMaxWidth="0dp"
            app:tabIndicatorColor="@color/colorPrimary"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/colorPrimary"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:tabTextColor="#94B5D8">

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For the day"
                app:background="@color/white" />

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Month till date" />


        </android.support.design.widget.TabLayout>

        <LinearLayout
            android:id="@+id/outlet_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tab_layout"
            android:background="#EBEBEB"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:paddingTop="@dimen/_6sdp"
            android:weightSum="1">

            <TextView
                android:id="@+id/number_text"
                style="?attr/customListItemSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:maxLines="1"
                android:paddingLeft="@dimen/_8sdp"
                android:text="Sales Volume"
                android:textColor="#de000000"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/target_text"
                style="?attr/customListItemSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:gravity="center"
                android:maxLines="1"
                android:text="Target"
                android:textColor="#8b000000"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/actual_text"
                style="?attr/customListItemSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:gravity="center"
                android:maxLines="1"
                android:text="Actual"
                android:textColor="#8b000000"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/percent_text"
                style="?attr/customListItemSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.14"
                android:gravity="center"
                android:maxLines="1"
                android:text="%"
                android:textColor="#8b000000"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/value_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/outlet_header_layout"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:paddingTop="@dimen/_12sdp"
            android:weightSum="1">

            <TextView
                android:id="@+id/value_text"
                style="?attr/customListItemSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:maxLines="1"
                android:paddingLeft="@dimen/_8sdp"
                android:text="Value"
                android:textColor="#8b000000"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/value_target"
                style="?attr/customListItemSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:gravity="center"
                android:maxLines="1"
                android:text="1245678.21"
                android:textColor="#8b000000"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/value_actual"
                style="?attr/customListItemSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:gravity="center"
                android:maxLines="1"
                android:text="12457.23"
                android:textColor="#8b000000"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/value_percent"
                style="?attr/customListItemSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.16"
                android:gravity="center"
                android:maxLines="1"
                android:text="60%"
                android:textColor="#8b000000"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/coverage_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/value_layout"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:paddingTop="@dimen/_6sdp"
            android:weightSum="1">

            <TextView
                android:id="@+id/coverage_text"
                style="?attr/customListItemSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:maxLines="1"
                android:paddingLeft="@dimen/_8sdp"
                android:text="Coverage"
                android:textColor="#8b000000"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/coverage_target"
                style="?attr/customListItemSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:gravity="center"
                android:maxLines="1"
                android:text="1245678.21"
                android:textColor="#8b000000"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/coverage_actual"
                style="?attr/customListItemSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:gravity="center"
                android:maxLines="1"
                android:text="12457.23"
                android:textColor="#8b000000"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/coverage_percent"
                style="?attr/customListItemSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.16"
                android:gravity="center"
                android:maxLines="1"
                android:text="60%"
                android:textColor="#8b000000"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lines_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coverage_layout"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_12sdp"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:paddingTop="@dimen/_6sdp"
            android:weightSum="1">

            <TextView
                android:id="@+id/lines_text"
                style="?attr/customListItemSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:maxLines="1"
                android:paddingLeft="@dimen/_8sdp"
                android:text="Lines"
                android:textColor="#8b000000"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/lines_target"
                style="?attr/customListItemSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:gravity="center"
                android:maxLines="1"
                android:text="1245678.21"
                android:textColor="#8b000000"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/lines_actual"
                style="?attr/customListItemSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.23"
                android:gravity="center"
                android:maxLines="1"
                android:text="12457.23"
                android:textColor="#8b000000"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/lines_percent"
                style="?attr/customListItemSecondary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.16"
                android:gravity="center"
                android:maxLines="1"
                android:text="60%"
                android:textColor="#8b000000"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <TextView
            android:id="@+id/calls_status_text"
            style="?attr/customListItemSecondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lines_layout"
            android:background="#EBEBEB"
            android:maxLines="1"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="@dimen/_4sdp"
            android:paddingTop="@dimen/_6sdp"
            android:text="Calls Status"
            android:textColor="#de000000"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:id="@+id/call_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calls_status_text"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/planned_text"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Planned"
                    android:textColor="#8b000000"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/planned_value"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="50"
                    android:textColor="#4a90e2"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/deviated_text"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Deviated"
                    android:textColor="#8b000000"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/deviated_value"
                    style="?attr/customListItemPrimary"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="10"
                    android:textColor="#4a90e2"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/duration_text"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Duration"
                    android:textColor="#8b000000"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/duration_value"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="25"
                    android:textColor="#4a90e2"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productive_txt"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Productive"
                    android:textColor="#8b000000"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/productive_value"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="45"
                    android:textColor="#4a90e2"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_below="@+id/call_status_layout"
            android:id="@+id/bottom_outlet_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/total_seller_bg">

            <TextView
                android:id="@+id/seller_performance_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/_6sdp"
                android:paddingTop="@dimen/_6sdp"
                android:text="View Seller Performance Outlet wise"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp"
                android:drawableLeft="@drawable/ic_store_icon"
                android:paddingLeft="@dimen/_5sdp"
                android:drawablePadding="@dimen/_8sdp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>