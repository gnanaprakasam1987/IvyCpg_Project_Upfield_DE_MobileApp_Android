<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10"
    android:padding="@dimen/dimen_5dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_weight="4"
        >

        <TextView
            android:id="@+id/PRDNAME"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:textSize="@dimen/font_micro_small"
            />

        <TextView
            android:id="@+id/batch_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/customListItemSecondary"
            android:text=""
            android:gravity="center"
            />
        <TextView
            android:id="@+id/prdweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="sih"
            android:gravity="center"
            android:text="56656"
            style="?attr/customListItemSecondary"
            android:layout_marginBottom="@dimen/icons_top_margin"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/PRDQTY"
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="0"
        android:textSize="@dimen/font_micro_small"
        android:maxLines="1"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/PRDPCSQTY"
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:tag="sih_piece"
        android:text="0"
        android:textSize="@dimen/font_micro_small"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/outerCaseQty"
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:text="0"
        android:textSize="@dimen/font_micro_small"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/PRDVAL"
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:tag="sih_piece"
        android:gravity="center"
        android:text="5"
        android:layout_weight="2"
        android:textSize="@dimen/font_micro_small" />
    <!-- <TextView
         android:id="@+id/prdweight"
         android:textColor="@android:color/black"
         android:layout_width="@dimen/list_item_width_large"
         android:layout_height="match_parent"
         android:singleLine="true"
         android:tag="sih"
         android:gravity="center"
         android:text="56656"

         android:textSize="@dimen/font_micro_small" />-->

</LinearLayout>