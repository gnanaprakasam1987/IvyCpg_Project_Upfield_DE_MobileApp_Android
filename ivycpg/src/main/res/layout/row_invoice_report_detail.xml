<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_5dp"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/prd_nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_primary" />

        <TextView
            android:id="@+id/product_code"
            style="?attr/customListItemSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prd_nameTv"
            android:layout_marginRight="@dimen/dimens_2dp"
            android:gravity="center"
            android:text="@string/prod_code" />

        <TextView
            android:id="@+id/batch_no"
            style="?attr/customListItemSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prd_nameTv"
            android:layout_marginLeft="@dimen/dimens_2dp"
            android:layout_toEndOf="@+id/product_code"
            android:layout_toRightOf="@+id/product_code"
            android:gravity="center"
            android:text="@string/batch_no" />

        <TextView
            android:id="@+id/prdweight"
            style="?attr/customListItemSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_code"
            android:gravity="center"
            android:tag="sih"
            android:text="56656" />

    </RelativeLayout>

    <TextView
        android:id="@+id/PRDQTY"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:maxLines="1"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_primary" />

    <TextView
        android:id="@+id/PRDPCSQTY"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:tag="sih_piece"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_primary" />

    <TextView
        android:id="@+id/outerCaseQty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_primary" />

    <TextView
        android:id="@+id/PRDVAL"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:singleLine="true"
        android:tag="sih_piece"
        android:text="5"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_primary" />
    <!-- <TextView
         android:id="@+id/prdweight"
         android:textColor="@android:color/black"
         android:layout_width="@dimen/list_item_width_large"
         android:layout_height="match_parent"
         android:singleLine="true"
         android:tag="sih"
         android:gravity="center"
         android:text="56656"

         android:textSize="@dimen/text_size_primary" />-->

</LinearLayout>