<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#b1000000">

    <TextView
        android:id="@+id/tv_store_count"
        style="?attr/customListItemPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:gravity="center"
        android:text="Total Store 8"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dimen_18dp"
        android:padding="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_120dp"
        android:layout_marginBottom="@dimen/dimens_50dp"
        android:layout_above="@+id/dialog_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_store_count"
        android:layout_above="@+id/close_img"
        android:layout_marginBottom="@dimen/dimens_120dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/outlet_view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_30dp"/>

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_below="@+id/outlet_view_pager"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            app:ci_drawable="@drawable/dot_circle_green"
            app:ci_drawable_unselected="@drawable/dot_circle_blue" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/close_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_icon_white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimens_50dp"/>

</RelativeLayout>
