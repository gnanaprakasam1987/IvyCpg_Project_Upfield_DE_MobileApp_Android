<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_margin"
        android:paddingBottom="@dimen/target_top_margin"
        android:paddingLeft="@dimen/list_padding_left_n_right"
        android:paddingRight="@dimen/list_padding_left_n_right"
        android:paddingTop="@dimen/target_top_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_scheme_name"
                style="?attr/customListItemPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2" />

            <TextView
                android:id="@+id/text_scheme_desc"
                style="?attr/customListItemSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:gravity="start" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
