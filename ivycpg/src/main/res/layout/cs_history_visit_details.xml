<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/tv_name_header"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/Name"
                    android:textColor="@color/kpi_value_text_color"
                    android:textSize="@dimen/text_sz_small"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_address_header"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="@string/Address"
                    android:textColor="@color/kpi_value_text_color"
                    android:textSize="@dimen/text_sz_small"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_contact_header"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/contact_no"
                    android:textColor="@color/kpi_value_text_color"
                    android:textSize="@dimen/text_sz_small"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/FullBlack"
                    android:textSize="@dimen/font_small"

                    />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="@color/FullBlack"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/FullBlack"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>
            <View
                android:id="@+id/view_dotted_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_marginTop="@dimen/dimen_2dp"
                android:background="@drawable/line_dotted"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/tv_age_header"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@string/age_group"
                    android:textColor="@color/kpi_value_text_color"
                    android:textSize="@dimen/text_sz_small"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_gender_header"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/gender"
                    android:textColor="@color/kpi_value_text_color"
                    android:textSize="@dimen/text_sz_small"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_email_header"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="@string/email"
                    android:textColor="@color/kpi_value_text_color"
                    android:textSize="@dimen/text_sz_small"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/tv_ageGroup"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/FullBlack"
                    android:textSize="@dimen/font_small"

                    />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/FullBlack"
                    android:textSize="@dimen/font_small"

                    />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textColor="@color/FullBlack"
                    android:textSize="@dimen/font_small" />


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
