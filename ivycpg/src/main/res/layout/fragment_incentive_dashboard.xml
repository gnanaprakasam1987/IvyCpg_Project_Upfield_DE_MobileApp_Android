<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_odd"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_between_edt">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_first"
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_stock_list_barcode"
            android:layout_marginTop="@dimen/space_between_edt"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/ll_first"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_weight="0.70"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/selected_filter_image_size"
                        android:layout_weight="0.50"
                        android:src="@drawable/trophy" />

                    <LinearLayout
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1.2"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_0dp"
                            android:layout_weight="0.45"
                            android:gravity="center"
                            android:text="@string/total_payout_earned"
                            android:textSize="@dimen/text_size_primary"
                            android:textStyle="normal"
                            android:textColor="@color/FullBlack" />

                        <TextView
                            android:id="@+id/tv_fixed_totalPayoutEarned"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_0dp"
                            android:layout_weight="0.55"
                            android:gravity="center"
                            android:text=""
                            android:textSize="@dimen/value_text_size"
                            android:textColor="?attr/accentcolor"
                            android:textStyle="normal"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_0dp"
                            android:layout_weight="0.45"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_primary"
                            android:text="@string/max_possible_payout"
                            android:textStyle="normal"
                            android:textColor="@color/FullBlack" />

                        <TextView
                            android:id="@+id/tv_fixed_max_possible_payout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_0dp"
                            android:layout_weight="0.55"
                            android:gravity="center"
                            android:text=""
                            android:textSize="@dimen/value_text_size"
                            android:textStyle="normal"
                            android:textColor="?attr/accentcolor"
                            />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_weight="0.25"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:weightSum="5">


                    <ImageView
                        android:id="@+id/regularIncentiveImageView"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:clickable="true"
                        android:src="@drawable/barchart" />

                    <TextView
                        android:id="@+id/tv_textRegularIncentive"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.65"
                        android:clickable="true"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:gravity="center_vertical"
                        android:textStyle="normal"
                        android:textSize="@dimen/text_size_primary"
                        android:text="" />

                    <ImageView
                        android:id="@+id/regularIncentiveDetailsImageView"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:clickable="true"
                        android:textSize="@dimen/text_size_primary"
                        android:src="@drawable/info" />

                    <TextView
                        android:id="@+id/regularIncentiveDetailsTextView"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.65"
                        android:clickable="true"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:gravity="center_vertical"
                        android:textStyle="normal"
                        android:textSize="@dimen/text_size_primary"
                        android:text="DETAILS" />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_second"
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_stock_list_barcode"
            android:layout_below="@+id/cv_first"
            android:layout_marginTop="@dimen/space_between_edt"
            android:background="@color/white">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_weight="0.70"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/selected_filter_image_size"
                        android:layout_weight="0.50"
                        android:src="@drawable/trophy" />

                    <LinearLayout
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_0dp"
                            android:layout_weight="0.45"
                            android:gravity="center"
                            android:text="@string/total_payout_earned"
                            android:textStyle="normal"
                            android:textSize="@dimen/text_size_primary"
                            android:textColor="@color/FullBlack" />

                        <TextView
                            android:id="@+id/tv_topup_totalPayoutEarned"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_0dp"
                            android:layout_weight="0.55"
                            android:gravity="center"
                            android:text=""
                            android:textStyle="normal"
                            android:textColor="?attr/accentcolor"
                            android:textSize="@dimen/value_text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_0dp"
                            android:layout_weight="0.45"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_primary"
                            android:textStyle="normal"
                            android:text="@string/max_possible_payout"
                            android:textColor="@color/FullBlack" />

                        <TextView
                            android:id="@+id/tv_topup_max_possible_payout"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_0dp"
                            android:layout_weight="0.55"
                            android:gravity="center"
                            android:text=""
                            android:textStyle="normal"
                            android:textSize="@dimen/value_text_size"
                            android:textColor="?attr/accentcolor"
                            />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_weight="0.25"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:weightSum="5">


                    <ImageView
                        android:id="@+id/topupIncentiveImageview"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:layout_weight="0.25"
                        android:src="@drawable/barchart" />

                    <TextView
                        android:id="@+id/tv_TopupIncentive"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:layout_weight="1.65"
                        android:gravity="center_vertical"
                        android:textStyle="normal"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:textSize="@dimen/text_size_primary"
                        android:text="" />

                    <ImageView
                        android:id="@+id/topupIncentiveDetailImageView"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.25"
                        android:clickable="true"
                        android:src="@drawable/info" />

                    <TextView
                        android:id="@+id/topupIncentiveDetailTextView"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.60"
                        android:gravity="center_vertical"
                        android:textStyle="normal"
                        android:clickable="true"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:textSize="@dimen/text_size_primary"
                        android:text="DETAILS" />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/price_value"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:weightSum="5">

        <TextView
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:gravity="center"
            android:textSize="@dimen/text_size_primary"
            android:text="@string/total_payout"
            android:textStyle="normal"
            android:textColor="@color/FullBlack" />

        <TextView
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="normal"
            android:text="@string/total_payout_earned"
            android:textSize="@dimen/text_size_primary"
            android:textColor="@color/FullBlack" />

        <TextView
            android:id="@+id/tv_totalPayoutEarned"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.80"
            android:gravity="center"
            android:text=""
            android:textStyle="normal"
            android:textSize="@dimen/value_text_size"
            android:textColor="?attr/primarycolor"
            />

        <TextView
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/max_possible_payout"
            android:textStyle="normal"
            android:textSize="@dimen/text_size_primary"
            android:textColor="@color/FullBlack" />

        <TextView
            android:id="@+id/tv_maxPossiblepayout"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.90"
            android:gravity="center"
            android:text=""
            android:textColor="?attr/primarycolor"
            android:textStyle="normal"
            android:textSize="@dimen/value_text_size" />

    </LinearLayout>


</RelativeLayout>
