<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:id="@+id/ll_retailer_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/profile_history_20dp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/tv_retailername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/profile_history_20dp"
                android:layout_marginStart="@dimen/profile_history_20dp"
                android:text=""
                android:textColor="@color/FullBlack"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/tv_retaileraddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/profile_history_20dp"
                android:layout_marginStart="@dimen/profile_history_20dp"
                android:text="T Nagar"
                android:textColor="@color/GRAY_TEXT"
                android:textSize="@dimen/font_micro_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/profile_history_20dp"
            android:layout_marginRight="@dimen/profile_history_20dp"
            android:layout_weight="3"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/iv_edit"
                android:layout_width="@dimen/profile_floatingbtn_marginright"
                android:layout_height="@dimen/profile_floatingbtn_marginright"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/profile_history_10dp"
                android:layout_marginRight="@dimen/profile_history_10dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_edit"
                android:tint="@color/GRAY" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="@dimen/dialog_list_item_left_margin"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/profile_history_10dp"
                android:layout_marginRight="@dimen/profile_history_10dp"
                android:background="@color/GRAY" />

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="@dimen/profile_floatingbtn_marginright"
                android:layout_height="@dimen/profile_floatingbtn_marginright"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/profile_history_10dp"
                android:layout_marginRight="@dimen/profile_history_10dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_delete"
                android:tint="@color/GRAY" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
