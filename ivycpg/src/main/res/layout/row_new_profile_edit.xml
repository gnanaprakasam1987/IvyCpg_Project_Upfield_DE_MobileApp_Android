<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:id="@+id/ll_retailer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimens_10dp"
        android:weightSum="11">

        <LinearLayout
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_retailername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="left|center"
                android:layout_marginLeft="@dimen/dimens_2dp"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/FullBlack"
                android:textSize="@dimen/font_small" />

            <TextView
                android:id="@+id/tv_retaileraddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="left|center"
                android:layout_marginLeft="@dimen/dimens_2dp"
                android:text="T Nagar"
                android:textColor="@color/GRAY_TEXT"
                android:textSize="@dimen/font_micro_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dimens_8dp"
            android:layout_weight="4"
            android:gravity="end"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lay_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ImageButton
                    android:id="@+id/iv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_weight="1.2"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_edit"
                    android:tint="@color/competitor_brand" />
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="@dimen/dialog_list_item_left_margin"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimens_4dp"
                android:background="@color/competitor_brand" />

            <LinearLayout
                android:id="@+id/lay_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ImageButton
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_delete_white_24dp"
                    android:tint="@color/competitor_brand" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
