<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_space"
    android:paddingStart="@dimen/_24sdp"
    android:paddingEnd="@dimen/_24sdp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    >


    <TextView
        android:id="@+id/list_item_badge_view"
        android:layout_width="@dimen/_8sdp"
        android:layout_height="@dimen/_8sdp"
        android:layout_alignTop="@+id/list_item_icon_ib"
        android:layout_alignEnd="@+id/list_item_icon_ib"
        android:layout_gravity="top"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_corner_red"
        android:gravity="center" />

    <ImageView
        android:id="@+id/list_item_icon_ib"
        style="@style/menuIconImageView"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_call" />

    <TextView
        android:id="@+id/list_item_menu_tv_new"
        style="@style/menuNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_betwn_icon_and_text"
        android:layout_marginEnd="@dimen/dimen_2dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/list_item_icon_ib"
        android:gravity="center_vertical"
        android:textStyle="bold" />
</RelativeLayout>