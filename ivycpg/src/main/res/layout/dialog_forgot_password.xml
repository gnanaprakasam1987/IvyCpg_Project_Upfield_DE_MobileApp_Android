<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_forget_password"
    android:layout_width="@dimen/loginbox_width"
    android:layout_height="@dimen/loginbox_height"
    android:layout_centerHorizontal="true"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:elevation="@dimen/dimen_10dp">

    <RelativeLayout
        android:id="@+id/rl_forget_pswd_box"
        android:layout_width="@dimen/loginbox_width"
        android:layout_height="wrap_content"
        android:background="@color/screen_bg_color"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/resetbox_header_height"
            android:layout_alignParentTop="true"
            android:background="@color/WHITE">

            <TextView
                android:id="@+id/lbl_forget_pswd"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/header_image_height"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/lbl_forgot_pswd"
                android:textColor="?attr/primarycolor"
                android:textSize="@dimen/font_large" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_editbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_header"
            android:orientation="vertical"
            android:padding="@dimen/login_content_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtOtp"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/edittext_height"
                    android:contentDescription="@string/app_name"
                    android:hint="@string/enter_otp"
                    android:lines="1"
                    android:paddingStart="@dimen/dimen_10dp"
                    android:inputType="number"
                    android:paddingEnd="@dimen/forgot_text_width"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/login_edittext_text_size" />
            </RelativeLayout>

            <EditText
                android:id="@+id/edtNewPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:contentDescription="@string/app_name"
                android:hint="@string/enter_new_password"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingStart="@dimen/dimen_10dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/login_edittext_text_size" />

            <EditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:contentDescription="@string/app_name"
                android:hint="@string/cnfrm_pswd"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingStart="@dimen/dimen_10dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/login_edittext_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_footer"
            android:layout_below="@+id/ll_editbox"
            android:gravity="center">

            <Button
                android:id="@+id/btnSubmit"
                style="?attr/roundedCustomButtonNormal"
                android:onClick="onClick"
                android:text="@string/reset"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_footer"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/login_box_footer_height"
            android:layout_alignParentBottom="true"
            android:gravity="center">

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="?attr/accentcolor"
                android:textSize="@dimen/login_edittext_text_size" />/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>


