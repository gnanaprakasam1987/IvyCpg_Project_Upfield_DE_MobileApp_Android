<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_info_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:layout_marginBottom="@dimen/dimen_40dp"
    android:orientation="vertical"
    android:visibility="visible">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_ttl_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_10dp">

                <com.ivy.cpg.view.supervisor.CircleImageView
                    android:layout_width="@dimen/dimens_60dp"
                    android:layout_height="@dimen/dimens_60dp"
                    android:src="@drawable/face"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dimen_5dp">

                    <TextView
                        android:id="@+id/tv_user_name"
                        style="?attr/customListItemPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_2dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="#de000000"
                        android:textSize="@dimen/dimen_16dp"
                        android:text="Sandy" />

                    <TextView
                        android:id="@+id/tv_start_time"
                        style="?attr/customListItemSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_2dp"
                        android:layout_marginRight="@dimen/dimen_2dp"
                        android:maxLines="1"
                        android:textColor="#8b000000"
                        android:textSize="@dimen/dimen_12dp"
                        android:text="Day start : 09:35 AM" />

                    <TextView
                        android:id="@+id/tv_address"
                        style="?attr/customListItemSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_2dp"
                        android:layout_marginRight="@dimen/dimen_2dp"
                        android:layout_marginTop="@dimen/dimen_1dp"
                        android:maxLines="1"
                        android:textColor="#8b000000"
                        android:textSize="@dimen/dimen_12dp"
                        android:text="Last visit : ECR" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dimen_2dp"
                        android:layout_marginRight="@dimen/dimen_2dp"
                        android:layout_marginTop="@dimen/dimen_5dp">

                        <TextView
                            android:id="@+id/tv_target_outlet"
                            style="?attr/customListItemSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textColor="@color/WHITE"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:paddingRight="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:text="Targeted 05"
                            android:background="@drawable/target_bg_gradient"/>

                        <TextView
                            android:id="@+id/tv_outlet_covered"
                            style="?attr/customListItemSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textColor="@color/WHITE"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:paddingRight="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:text="Covered 05"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:background="@drawable/covered_bg_gradient"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="#1e000000" />

            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/white"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:paddingTop="@dimen/dimen_5dp">

                    <ImageView
                        android:layout_width="@dimen/dimen_20dp"
                        android:layout_height="@dimen/dimen_20dp"
                        android:layout_marginRight="@dimen/dimen_5dp"
                        android:src="@drawable/ic_email_dark" />

                    <TextView
                        android:id="@+id/tv_message"
                        style="?attr/customListItemPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLines="1"
                        android:text="Message"
                        android:textColor="#8a354667"
                        android:textSize="@dimen/dimen_16dp"
                        android:visibility="visible" />


                </LinearLayout>

                <View
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="match_parent"
                    android:background="#1e000000" />


                <LinearLayout
                    android:id="@+id/route_layout"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@color/white"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:paddingTop="@dimen/dimen_5dp">

                    <ImageView
                        android:layout_width="@dimen/dimen_20dp"
                        android:layout_height="@dimen/dimen_20dp"
                        android:layout_marginRight="@dimen/dimen_5dp"
                        android:src="@drawable/ic_location_icon" />

                    <TextView
                        android:id="@+id/tv_route"
                        style="?attr/customListItemPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLines="1"
                        android:text="Route"
                        android:textColor="#8a354667"
                        android:textSize="@dimen/dimen_16dp"
                        android:visibility="visible" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>