<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/screen_bg_color"
    android:orientation="vertical"
    tools:context="com.ivy.cpg.view.order.OrderSummary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_header_height"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/amt_split_up"
            android:textColor="?attr/textColorPrimary"
            android:textSize="@dimen/font_micro_small" />

        <ImageView
            android:id="@+id/closeBTN"
            android:layout_width="@dimen/info_icon"
            android:layout_height="@dimen/info_icon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/dimen_6dp"
            android:padding="@dimen/dimen_4dp"
            android:src="@drawable/close_popup" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin"
        android:orientation="horizontal"
        android:padding="@dimen/card_child_margin">

        <TextView
            android:id="@+id/lblOrderValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/card_margin"
            android:maxLines="1"
            android:text="@string/order_value"
            android:textColor="@color/GRAY_TEXT"
            android:textSize="@dimen/font_micro_small" />

        <TextView
            android:id="@+id/tvOrderValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/card_margin"
            android:maxLines="1"
            android:text="@string/zero"
            android:textColor="@color/black_bg1"
            android:textSize="@dimen/value_text_size" />
    </RelativeLayout>

    <View
        android:id="@+id/view_dotted_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:layout_marginStart="@dimen/card_margin"
        android:layout_marginEnd="@dimen/card_margin"
        android:layout_marginTop="@dimen/list_item_inter_margin"
        android:background="@drawable/line_dotted" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin"
        android:orientation="horizontal"
        android:padding="@dimen/card_child_margin">

        <TextView
            android:id="@+id/tvTitleDeduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/card_margin"
            android:maxLines="1"
            android:text="@string/deductions"
            android:textAllCaps="true"
            android:textColor="@color/black_bg1"
            android:textSize="@dimen/font_micro_small" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin"
        android:orientation="horizontal"
        android:padding="@dimen/card_child_margin">

        <TextView
            android:id="@+id/lbl_comy_disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/card_margin"
            android:maxLines="1"
            android:tag="comp_dis"
            android:text="Comp Disc"
            android:textColor="@color/GRAY_TEXT"
            android:textSize="@dimen/font_micro_small" />

        <TextView
            android:id="@+id/tv_comy_disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/card_margin"
            android:maxLines="1"
            android:text="@string/zero"
            android:textColor="@color/black_bg1"
            android:textSize="@dimen/value_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin"
        android:orientation="horizontal"
        android:padding="@dimen/card_child_margin">

        <TextView
            android:id="@+id/lbl_dist_disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/card_margin"
            android:maxLines="1"
            android:tag="dist_disc"
            android:text="Dist Disc"
            android:textColor="@color/GRAY_TEXT"
            android:textSize="@dimen/font_micro_small" />

        <TextView
            android:id="@+id/tv_dist_disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/card_margin"
            android:maxLines="1"
            android:text="@string/zero"
            android:textColor="@color/black_bg1"
            android:textSize="@dimen/value_text_size" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/card_margin"
        android:background="@color/black_bg1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin"
        android:orientation="horizontal"
        android:padding="@dimen/card_child_margin">

        <TextView
            android:id="@+id/lbl_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/card_margin"
            android:maxLines="1"
            android:tag="dist_disc"
            android:text="@string/total"
            android:textColor="@color/black_bg1"
            android:textSize="@dimen/font_micro_small" />

        <TextView
            android:id="@+id/tv_total_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/card_margin"
            android:layout_marginEnd="@dimen/card_margin"
            android:maxLines="1"
            android:text="@string/zero"
            android:textColor="@color/black_bg1"
            android:textSize="@dimen/value_text_size" />
    </RelativeLayout>
</LinearLayout>