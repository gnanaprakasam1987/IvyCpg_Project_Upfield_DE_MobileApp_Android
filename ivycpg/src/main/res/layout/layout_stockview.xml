<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/material_tool_bar" />

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/root"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/search_toolbar"
                    layout="@layout/search_bar"
                    android:visibility="visible" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/list_margin"
                    card_view:cardBackgroundColor="@color/WHITE"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="5dp"
                    card_view:cardPreventCornerOverlap="true"
                    card_view:cardUseCompatPadding="true"
                    card_view:contentPadding="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ListHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/list_title_bg_color"
                            android:minHeight="@dimen/list_header_height"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/product_name"
                                style="?attr/customListTitle"
                                android:layout_width="@dimen/order_stock_list_product_name_width_xlarge"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginLeft="@dimen/skuwise_right_margin"
                                android:layout_marginStart="@dimen/skuwise_right_margin"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:padding="3dp"
                                android:text="@string/product_name"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/sihCaseTitle"
                                style="?attr/customListTitle"
                                android:layout_width="@dimen/list_item_width_medium"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="3dp"
                                android:tag="sih_case"
                                android:text="@string/sih_case"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/sihOuterTitle"
                                style="?attr/customListTitle"
                                android:layout_width="@dimen/list_item_width_medium"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="3dp"
                                android:tag="sih_outer"
                                android:text="@string/sih_outer"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/sihTitle"
                                style="?attr/customListTitle"
                                android:layout_width="@dimen/list_item_width_medium"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="3dp"
                                android:tag="sih_piece"
                                android:text="@string/sih" />

                        </LinearLayout>

                        <ExpandableListView
                            android:id="@+id/expand_lvwplist"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/ListHeader"
                            android:cacheColorHint="@null"
                            android:childDivider="@android:color/white"
                            android:childIndicator="@null"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="1dp"
                            android:fitsSystemWindows="true"
                            android:groupIndicator="@null"
                            android:visibility="visible">

                        </ExpandableListView>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/right_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/background_noise" />

    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>