<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/material_tool_bar" />

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/root"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/filterscreenlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/list_margin"
                    android:layout_marginEnd="@dimen/list_margin"
                    android:layout_marginTop="@dimen/list_margin"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">


                    <ViewFlipper
                        android:id="@+id/view_flipper"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:padding="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white">

                            <TextView
                                android:id="@+id/productName"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/list_margin"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:maxLines="1"
                                android:textColor="?attr/primarycolor"
                                android:textSize="@dimen/font_nano_small"
                                android:layout_marginLeft="@dimen/list_margin" />

                            <Button
                                android:id="@+id/btn_search"
                                android:layout_width="@dimen/filter_icon"
                                android:layout_height="@dimen/filter_icon"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:background="@drawable/ic_vector_search" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white">

                            <Button
                                android:id="@+id/btn_filter_popup"
                                android:layout_width="@dimen/filter_icon"
                                android:layout_height="@dimen/filter_icon"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/btn_productfilter_" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/white"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edt_searchproductName"
                                    android:layout_width="0dip"
                                    android:layout_height="@dimen/filter_icon"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:gravity="start|center_vertical"
                                    android:maxLines="1"
                                    android:inputType="text"
                                    android:text=""
                                    android:textColor="@color/GRAY_TEXT"
                                    android:textSize="@dimen/font_nano_small" />

                                <Button
                                    android:id="@+id/btn_clear"
                                    android:layout_width="@dimen/filter_icon"
                                    android:layout_height="@dimen/filter_icon"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/ic_vector_action_clear_grey" />
                            </LinearLayout>
                        </LinearLayout>

                    </ViewFlipper>
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/list_margin"
                    card_view:cardBackgroundColor="@color/WHITE"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="5dp"
                    card_view:cardPreventCornerOverlap="true"
                    card_view:cardUseCompatPadding="true"
                    card_view:contentPadding="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ListHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/list_title_bg_color"
                            android:minHeight="@dimen/list_header_height"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/product_name"
                                style="?attr/customListTitle"
                                android:layout_width="@dimen/order_stock_list_product_name_width_xlarge"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center"
                                android:layout_marginLeft="@dimen/skuwise_right_margin"
                                android:layout_marginStart="@dimen/skuwise_right_margin"
                                android:layout_weight="1"
                                android:gravity="start|center"
                                android:padding="3dp"
                                android:text="@string/product_name"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/sihCaseTitle"
                                style="?attr/customListTitle"
                                android:layout_width="@dimen/list_item_width_medium"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="3dp"
                                android:tag="sih_case"
                                android:text="@string/sih_case"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/sihOuterTitle"
                                style="?attr/customListTitle"
                                android:layout_width="@dimen/list_item_width_medium"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="3dp"
                                android:tag="sih_outer"
                                android:text="@string/sih_outer"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/sihTitle"
                                style="?attr/customListTitle"
                                android:layout_width="@dimen/list_item_width_medium"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="3dp"
                                android:tag="sih_piece"
                                android:text="@string/sih" />

                        </LinearLayout>

                        <ExpandableListView
                            android:id="@+id/expand_lvwplist"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/ListHeader"
                            android:cacheColorHint="@null"
                            android:childDivider="@android:color/white"
                            android:childIndicator="@null"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="1dp"
                            android:fitsSystemWindows="true"
                            android:groupIndicator="@null"
                            android:visibility="visible">

                        </ExpandableListView>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/right_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/background_noise" />

    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>