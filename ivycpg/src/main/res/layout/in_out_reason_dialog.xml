<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleBar"
        style="?attr/dialogTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:padding="6dp"
        android:text="@string/in_out" />

    <TextView
        android:id="@+id/must_sell_message_tv"
        style="?attr/textFieldStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/in_out_reason" />

    <Spinner
        android:id="@+id/reason_spnr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@android:color/transparent"
        android:overlapAnchor="false"
        android:visibility="gone" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/remarkWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etRemarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="@dimen/text_size_primary"
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>

    <Button
        android:id="@+id/btn_ok"
        style="?attr/roundedCustomButtonSmall"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:text="@string/ok" />
</LinearLayout>