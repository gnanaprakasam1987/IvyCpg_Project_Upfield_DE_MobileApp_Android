<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    card_view:cardBackgroundColor="@color/WHITE"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="5dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/order_delivery_listview_orderid"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_4dp"
                    android:layout_marginEnd="@dimen/dimen_2dp"
                    android:layout_marginRight="@dimen/dimen_2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="" />

                <TextView
                    android:id="@+id/order_delivery_listview_id_heading"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_2dp"
                    android:layout_marginRight="@dimen/dimen_2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Order Id " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/order_delivery_listview_ordervalue"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_4dp"
                    android:layout_marginEnd="@dimen/dimen_2dp"
                    android:layout_marginRight="@dimen/dimen_2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0.0" />

                <TextView
                    android:id="@+id/order_delivery_listview_value_heading"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_2dp"
                    android:layout_marginRight="@dimen/dimen_2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Value" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/order_delivery_listview_orderdate"
                    style="?attr/customListItemPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_4dp"
                    android:layout_marginEnd="@dimen/dimen_2dp"
                    android:layout_marginRight="@dimen/dimen_2dp"
                    android:maxLines="1"
                    android:text="" />

                <TextView
                    android:id="@+id/order_delivery_listview_date_heading"
                    style="?attr/customListItemPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_2dp"
                    android:layout_marginRight="@dimen/dimen_2dp"
                    android:maxLines="1"
                    android:text="Date" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/order_delivery_listview_orderlines"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_4dp"
                    android:layout_marginEnd="@dimen/dimen_2dp"
                    android:layout_marginRight="@dimen/dimen_2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="0" />

                <TextView
                    android:id="@+id/order_delivery_listview_line_head"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_2dp"
                    android:layout_marginRight="@dimen/dimen_2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Lines " />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view_dotted_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@drawable/line_dotted" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/invoice_generated_text"
                style="?attr/customListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dimen_2dp"
                android:layout_marginRight="@dimen/dimen_2dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/RED"
                android:visibility="gone" />

            <Button
                android:id="@+id/edit_btn"
                style="?attr/roundedCustomButtonSmallTransparent"
                android:layout_marginBottom="@dimen/activity_margin1"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/activity_margin1"
                android:text="@string/edit"
                android:textColor="@color/Black"
                android:textAllCaps="false"
                android:layout_toLeftOf="@+id/accept_btn"/>

            <Button
                android:id="@+id/accept_btn"
                style="?attr/roundedCustomButtonSmall"
                android:layout_marginBottom="@dimen/activity_margin1"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/activity_margin1"
                android:text="@string/text_approve"
                android:textAllCaps="false"
                android:layout_toLeftOf="@+id/reject_btn"/>

            <Button
                android:id="@+id/reject_btn"
                style="@style/ButtonSmallRoundCornerOrange"
                android:layout_marginBottom="@dimen/activity_margin1"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/activity_margin1"
                android:text="@string/reject"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>