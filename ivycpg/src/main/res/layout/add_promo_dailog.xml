<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_noise"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="?textTitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/ic_back"
                android:text="" />

            <TextView
                android:id="@+id/tv_asset_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:gravity="left"
                android:padding="8dp"
                android:tag="asset"
                android:text="@string/addnewpromo"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_small"
                android:textStyle="bold" />

            <Button
                android:id="@+id/msave"
                style="?textTitleStyle"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_save"
                android:gravity="right"
                android:text="" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/tv_brand"
                style="?textFieldStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:tag="brand"
                android:textStyle="normal"
                android:text="@string/addassetbrand" />

            <Spinner
                android:id="@+id/spinner_brand"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/tv_promo"
                style="?textFieldStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:tag="asset"
                android:textStyle="normal"
                android:text="@string/choosepromo" />

            <Spinner
                android:id="@+id/spinner_promo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>