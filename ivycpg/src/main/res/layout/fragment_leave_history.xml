<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/lv_leaves_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lv_footer"
        android:cacheColorHint="@null"
        android:choiceMode="multipleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        android:padding="10dp"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/lv_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:id="@+id/reason_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/GRAY" />

        <LinearLayout
            android:id="@+id/lv_footer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_approve"
                style="?attr/roundedCustomButtonNormal"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="@dimen/profile_history_20dp"
                android:layout_marginEnd="@dimen/profile_history_20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/text_approve" />

            <TextView
                android:id="@+id/tv_pending"
                style="?attr/roundedCustomButtonNormal"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="@dimen/profile_history_20dp"
                android:layout_marginEnd="@dimen/profile_history_20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/text_pending" />

            <TextView
                android:id="@+id/tv_reject"
                style="?attr/roundedCustomButtonNormal"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="@dimen/profile_history_20dp"
                android:layout_marginEnd="@dimen/profile_history_20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/text_reject" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>