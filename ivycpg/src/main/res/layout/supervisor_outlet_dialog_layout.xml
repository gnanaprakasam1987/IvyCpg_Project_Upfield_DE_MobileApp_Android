<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="3dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="0dp"
    android:layout_marginLeft="@dimen/dimen_22dp"
    android:layout_marginRight="@dimen/dimen_22dp">

    <RelativeLayout
        android:id="@+id/dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white">

        <ImageView
            android:id="@+id/outlet_image"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:src="@drawable/unbilled_bg_gradient"
            android:layout_alignParentTop="true"/>

        <LinearLayout
            android:id="@+id/shop_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/outlet_image"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="@dimen/padding_l"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_store_name"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_2dp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Alagusamy Malligai"
                    android:textColor="#de000000"
                    android:textSize="@dimen/dimen_18dp" />

                <TextView
                    android:id="@+id/tv_address"
                    style="?attr/customListItemSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_2dp"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:maxLines="1"
                    android:text="103 Voc St Kb nagar"
                    android:textColor="#64000000"
                    android:textSize="@dimen/dimen_12dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:padding="@dimen/dimen_2dp">

                <TextView
                    android:id="@+id/tv_status_text"
                    style="?attr/customListItemPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dimen_2dp"
                    android:layout_toLeftOf="@+id/status_color_view"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Covered"
                    android:textColor="#de000000"
                    android:textSize="@dimen/dimen_12dp" />

                <View
                    android:id="@+id/status_color_view"
                    android:layout_width="@dimen/padding_l"
                    android:layout_height="@dimen/padding_l"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:background="@drawable/covered_green" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/shop_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/padding_l">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_intime_txt"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="In Time"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_14dp" />

                <TextView
                    android:id="@+id/tv_in_time_val"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_2dp"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:maxLines="1"
                    android:gravity="center"
                    android:text="10:45 PM"
                    android:textColor="#8b000000"
                    android:textSize="@dimen/dimen_12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_outtime_txt"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Out Time"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_14dp" />

                <TextView
                    android:id="@+id/tv_out_time_val"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_2dp"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:maxLines="1"
                    android:text="10:45 PM"
                    android:gravity="center"
                    android:textColor="#8b000000"
                    android:textSize="@dimen/dimen_12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_duration_txt"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Duration"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_14dp" />

                <TextView
                    android:id="@+id/tv_duration_val"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_2dp"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:maxLines="1"
                    android:text="1h 40m"
                    android:gravity="center"
                    android:textColor="#8b000000"
                    android:textSize="@dimen/dimen_12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.34"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_val_txt"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_2dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Order Value"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_14dp" />

                <TextView
                    android:id="@+id/tv_order_value"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_2dp"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:maxLines="1"
                    android:gravity="center"
                    android:text="R212538.14"
                    android:textColor="#d0021b"
                    android:textSize="@dimen/dimen_18dp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>