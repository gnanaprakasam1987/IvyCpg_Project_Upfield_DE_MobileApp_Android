<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_info_bubble"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_storename"
            style="?attr/customListItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:text="@string/retailername"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/iv_planned"/>
        <ImageView
            android:id="@+id/iv_planned"
            android:layout_width="@dimen/ret_image_size"
            android:layout_height="@dimen/ret_image_size"
            android:src="@drawable/ic_date_picker_blue"
            android:visibility="gone"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/iv_deviate"
            android:layout_width="@dimen/ret_image_size"
            android:layout_height="@dimen/ret_image_size"
            android:src="@drawable/ic_dashboard_deviated"
            android:visibility="gone"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/tv_loc_name"
            style="?attr/customListItemSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5px"
            android:maxLines="1"
            android:layout_below="@+id/tv_storename"
             />
        <TextView
            android:id="@+id/tv_address"
            style="?attr/customListItemSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5px"
            android:maxLines="1"
            android:layout_below="@+id/tv_loc_name"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view_dotted_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:background="@drawable/line_dotted" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/ll_time_in"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/lbl_time_in"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_in" />


            <TextView
                android:id="@+id/tv_time_in"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/zero"
                android:textColor="@color/black_bg1"
                android:textSize="@dimen/font_micro_small" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_time_out"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/lbl_time_out"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_out" />


            <TextView
                android:id="@+id/tv_time_out"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/zero"
                android:textColor="@color/black_bg1"
                android:textSize="@dimen/font_micro_small" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_sales_value"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_4dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/lbl_sales_value"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sales_value" />


            <TextView
                android:id="@+id/tv_sales_value"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/zero"
                android:textColor="@color/black_bg1"
                android:textSize="@dimen/font_micro_small" />
        </LinearLayout>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2dp"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:background="@drawable/line_dotted" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp"
            >
            <TextView
                android:id="@+id/tv_seller"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_bg1"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@+id/tv_sequence"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
