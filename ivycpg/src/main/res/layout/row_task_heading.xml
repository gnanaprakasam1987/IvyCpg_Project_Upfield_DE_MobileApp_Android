<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutTaskHeader"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_header_height"
    android:background="?attr/customListTitleBackgroundColor"
    android:orientation="horizontal"
    android:visibility="gone"
    android:padding="10dp">

    <TextView
        android:id="@+id/task_tv"
        style="@style/TextViewListTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="start|center"
        android:text="@string/task"
        android:textColor="@android:color/white" />


    <TextView
        android:id="@+id/task_created_on"
        style="@style/TextViewListTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/task_created_on"
        android:textColor="@android:color/white" />


    <TextView
        android:id="@+id/task_execution"
        style="@style/TextViewListTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:text="@string/taskexecution"
        android:textColor="@android:color/white" />

</LinearLayout>