<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtUser"
        style="@style/HeadingStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_title_height"
        android:background="@color/white"
        android:gravity="start|center"
        android:paddingLeft="@dimen/whats_on_item_padding"
        android:paddingRight="@dimen/whats_on_item_padding"
        android:paddingStart="@dimen/whats_on_item_padding"
        android:text="@string/call_details" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/acknowledgementDetailLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_6dp"
        android:layout_marginEnd="@dimen/dimen_6dp"
        android:layout_marginTop="@dimen/dimen_6dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>