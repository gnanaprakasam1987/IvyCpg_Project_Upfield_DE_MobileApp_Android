<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_ttl_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_2dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_5dp"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/linearlayout01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:padding="@dimen/dimen_6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_outlet_name"
                        style="@style/TextViewListItemPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_2dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="Retailer Name"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dimen_5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_outlet_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="3dp"
                            android:paddingStart="3dp"
                            android:tag="outlet_code"
                            android:text="Outlet Code"
                            android:textColor="@color/half_Black"
                            android:textSize="@dimen/text_size_caption" />

                        <TextView
                            android:id="@+id/tv_outlet_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="3dp"
                            android:paddingStart="3dp"
                            android:text=""
                            android:textColor="?attr/primarycolor"
                            android:textSize="@dimen/font_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line2"
                        android:layout_width="@dimen/dimens_1dp"
                        android:layout_height="@dimen/dimens_22dp"
                        android:layout_gravity="center"
                        android:background="@color/light_gray"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimens_4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingStart="@dimen/dimens_10dp">

                        <TextView
                            android:id="@+id/lbl_order_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="3dp"
                            android:paddingStart="3dp"
                            android:tag="order_date"
                            android:text="Order Date"
                            android:textColor="@color/half_Black"
                            android:textSize="@dimen/text_size_caption" />

                        <TextView
                            android:id="@+id/tv_order_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="3dp"
                            android:paddingStart="3dp"
                            android:text="0000.00"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_small"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dimen_5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lbl_order_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="3dp"
                            android:paddingStart="3dp"
                            android:tag="order_id"
                            android:text="Order ID"
                            android:textColor="@color/half_Black"
                            android:textSize="@dimen/text_size_caption" />

                        <TextView
                            android:id="@+id/tv_order_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="3dp"
                            android:paddingStart="3dp"
                            android:text=""
                            android:textColor="?attr/primarycolor"
                            android:textSize="@dimen/font_small" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line3"
                        android:layout_width="@dimen/dimens_1dp"
                        android:layout_height="@dimen/dimens_22dp"
                        android:layout_gravity="center"
                        android:background="@color/light_gray"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimens_4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:paddingStart="@dimen/dimens_10dp">

                        <TextView
                            android:id="@+id/lbl_order_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="3dp"
                            android:paddingStart="3dp"
                            android:tag="order_value"
                            android:text="Value"
                            android:textColor="@color/half_Black"
                            android:textSize="@dimen/text_size_caption" />

                        <TextView
                            android:id="@+id/tv_order_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="3dp"
                            android:paddingStart="3dp"
                            android:text=""
                            android:textColor="?attr/primarycolor"
                            android:textSize="@dimen/font_small"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbl_order_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="3dp"
                        android:paddingStart="3dp"
                        android:text="Status"
                        android:tag="order_status"
                        android:textColor="@color/half_Black"
                        android:textSize="@dimen/text_size_caption" />

                    <TextView
                        android:id="@+id/tv_order_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="3dp"
                        android:paddingStart="3dp"
                        android:text=""
                        android:textColor="?attr/accentcolor"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/top_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layerType="software"
            android:src="@drawable/dotted_line"
            android:visibility="gone" />


    </androidx.cardview.widget.CardView>

</LinearLayout>