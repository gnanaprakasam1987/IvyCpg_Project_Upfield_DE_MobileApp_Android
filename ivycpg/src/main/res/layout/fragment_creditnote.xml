<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimens_4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_amount_title"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Total - " />

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text=" 0 " />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/ll_cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_100dp"
        android:layout_margin="3dp"
        android:elevation="@dimen/dimens_4dp"
        android:padding="@dimen/dimens_6dp"
        app:cardCornerRadius="@dimen/dimens_4dp">

        <LinearLayout
            android:id="@+id/ll_enter_creditnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/WHITE"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimens_12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/Amount"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_sz_small"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_creditnoteamt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cheque_no_height"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ListView
        android:id="@+id/lv_creditnote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimens_4dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:padding="@dimen/dimens_2dp" />


    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_keypad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/keypad"
                layout="@layout/keypad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:background="@color/GRAY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dimens_10dp">

            <Button
                android:id="@+id/cancelbtn"
                style="?attr/roundedCustomButtonNormalTransparent"
                android:layout_width="@dimen/dimens_100dp"
                android:layout_height="@dimen/dimens_40dp"
                android:layout_marginRight="@dimen/dimens_6dp"
                android:text="@string/cancel"
                android:textColor="@color/Black"
                android:textSize="@dimen/font_micro_small"
                android:textStyle="bold" />

            <Button
                android:id="@+id/applybtn"
                style="?attr/roundedCustomButtonNormal"
                android:layout_width="@dimen/dimens_100dp"
                android:layout_height="@dimen/dimens_40dp"
                android:layout_marginLeft="@dimen/dimens_6dp"
                android:layout_marginRight="@dimen/dimens_6dp"
                android:text="@string/apply"
                android:textSize="@dimen/font_micro_small"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>