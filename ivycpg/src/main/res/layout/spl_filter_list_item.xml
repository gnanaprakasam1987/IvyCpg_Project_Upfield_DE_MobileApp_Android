<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridItem"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/filter_secondary_list_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/grid_item_text"
        style="?attr/customListItemPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/filter_secondary_list_height"
        android:layout_toStartOf="@+id/selectedfilters"
        android:layout_marginStart="@dimen/list_margin"
        android:gravity="start|center_vertical"
        android:text="@string/dummy_txt"
        android:layout_toLeftOf="@+id/selectedfilters"
        android:layout_marginLeft="@dimen/list_margin" />

    <RadioButton
        android:id="@+id/selectedfilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/list_margin"
        android:clickable="false"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:src="@drawable/ic_filter_selected"
        android:layout_alignParentRight="true" />

</RelativeLayout>