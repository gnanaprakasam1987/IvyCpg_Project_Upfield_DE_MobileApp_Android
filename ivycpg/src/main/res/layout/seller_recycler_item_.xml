<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/user_info_layout"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_marginRight="@dimen/dimen_10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_ttl_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_5dp">

                <com.ivy.cpg.view.supervisor.CircleImageView
                    android:layout_width="@dimen/list_item_height_double_line"
                    android:layout_height="@dimen/list_item_height_double_line"
                    android:src="@drawable/face"
                    android:layout_margin="@dimen/dimen_5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.7">

                        <TextView
                            android:id="@+id/tv_user_name"
                            style="?attr/customListItemPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_2dp"
                            android:maxLines="1"
                            android:text="Sandy"
                            android:gravity="center_vertical"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_outlet_covered"
                            style="?attr/customListItemSecondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_2dp"
                            android:maxLines="1"
                            android:visibility="visible"
                            android:text="Target/Covered : 103/100" />

                        <TextView
                            android:id="@+id/tv_address"
                            style="?attr/customListItemSecondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_2dp"
                            android:maxLines="1"
                            android:text="Current Route : ECR" />



                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="0.3">

                        <RelativeLayout
                            android:id="@+id/status_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/curved_green"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:paddingRight="@dimen/dimen_10dp"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:id="@+id/tv_status"
                                style="?attr/customListItemSecondary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|right"
                                android:maxLines="1"
                                android:text="In Market"
                                android:textColor="@color/white"
                                android:layout_centerVertical="true"
                                />

                            <ImageView
                                android:layout_width="@dimen/padding_l"
                                android:layout_height="@dimen/padding_l"
                                android:src="@drawable/ic_vector_about"
                                android:layout_marginLeft="5dp"
                                android:tint="@color/white"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/tv_status"/>

                        </RelativeLayout>



                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view_dotted_line_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_2dp"
                android:layout_marginBottom="@dimen/dimen_5dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@drawable/line_dotted" />

            <LinearLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="1"
                android:layout_marginBottom="@dimen/dimen_5dp">

                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="@dimen/dimen_20dp"
                        android:layout_height="@dimen/dimen_20dp"
                        android:layout_marginRight="@dimen/dimen_5dp"
                        android:src="@drawable/ic_email_dark" />

                    <TextView
                        android:id="@+id/tv_message"
                        style="?attr/customListItemValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLines="1"
                        android:text="Message"
                        android:textStyle="bold"
                        android:visibility="visible" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dimen_5dp"
                    android:paddingBottom="@dimen/dimen_5dp"
                    android:background="@color/white"
                    android:id="@+id/route_layout">

                    <ImageView
                        android:layout_width="@dimen/dimen_20dp"
                        android:layout_height="@dimen/dimen_20dp"
                        android:layout_marginRight="@dimen/dimen_5dp"
                        android:src="@drawable/ic_direction_light" />

                    <TextView
                        android:id="@+id/tv_route"
                        style="?attr/customListItemValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:maxLines="1"
                        android:text="Route"
                        android:textStyle="bold"
                        android:visibility="visible" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>