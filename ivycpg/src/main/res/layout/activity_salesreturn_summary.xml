    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?customLayoutBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/target_top_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/totalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textColor="?attr/accentcolor"
                android:textSize="@dimen/greyed_text_size" />

            <TextView
                android:id="@+id/totalValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/zero"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/font_small" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_lpc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/target_top_margin"
            android:layout_toEndOf="@+id/ll_value"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/ll_value">

            <TextView
                android:id="@+id/lpc_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lines"
                android:textColor="?attr/accentcolor"
                android:textSize="@dimen/greyed_text_size" />

            <TextView
                android:id="@+id/lcpValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/zero"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/font_small" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            style="?attr/roundedCustomButtonSmall"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/target_top_margin"
            android:text="@string/save"
            android:textAllCaps="false"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</RelativeLayout>