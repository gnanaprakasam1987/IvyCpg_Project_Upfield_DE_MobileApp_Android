<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/xlsExport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:drawableLeft="@drawable/xls"
            android:padding="4dp"
            android:text="@string/export"
            android:textColor="@android:color/white"></Button>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/resetbox_header_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/footer"
        android:background="@color/black_bg1"
        android:padding="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/lbl_total_qty"
                style="?textFieldStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/viewpger_padding"
                android:layout_marginRight="@dimen/viewpger_padding"
                android:layout_marginTop="@dimen/viewpger_padding"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:text="@string/tot_qty"
                android:textColor="?attr/accentcolor"
                android:textSize="@dimen/list_item_primary_text_size" />

            <TextView
                android:id="@+id/txttotalqty"
                style="?textFieldStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_total_qty"
                android:layout_marginLeft="@dimen/viewpger_padding"
                android:layout_marginRight="@dimen/viewpger_padding"
                android:layout_weight="4"
                android:text="@string/zero"
                android:textColor="@color/white"
                android:textSize="@dimen/login_edittext_text_size" />

            <View
                android:id="@+id/view00"
                android:layout_width="1dp"
                android:layout_height="@dimen/ret_card_image"
                android:layout_marginTop="@dimen/store_margin_top"
                android:layout_toRightOf="@+id/lbl_total_qty"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/lab_dist_pre_post"
                style="?textFieldStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/viewpger_padding"
                android:layout_marginRight="@dimen/viewpger_padding"
                android:layout_marginTop="@dimen/viewpger_padding"
                android:layout_toRightOf="@+id/view00"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:text="@string/order_report_avg_line"
                android:textColor="?attr/accentcolor"
                android:textSize="@dimen/list_item_primary_text_size"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_dist_pre_post"
                style="?textFieldStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lab_dist_pre_post"
                android:layout_marginLeft="@dimen/viewpger_padding"
                android:layout_marginRight="@dimen/viewpger_padding"
                android:layout_toRightOf="@+id/lbl_total_qty"
                android:layout_weight="4"
                android:adjustViewBounds="true"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/login_edittext_text_size"
                android:visibility="visible" />

            <View
                android:id="@+id/view0"
                android:layout_width="1dp"
                android:layout_height="@dimen/ret_card_image"
                android:layout_marginTop="@dimen/store_margin_top"
                android:layout_toRightOf="@+id/lab_dist_pre_post"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/totalvaluetitle"
                style="?textFieldStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/viewpger_padding"
                android:layout_marginTop="@dimen/viewpger_padding"
                android:layout_toRightOf="@+id/view0"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:tag="total_value_or_volume"
                android:text="@string/total_value"
                android:textColor="?attr/accentcolor"
                android:textSize="@dimen/list_item_primary_text_size" />

            <TextView
                android:id="@+id/txttotal"
                style="?textFieldStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalvaluetitle"
                android:layout_marginLeft="@dimen/viewpger_padding"
                android:layout_toRightOf="@+id/view0"
                android:adjustViewBounds="true"
                android:text="@string/zero"
                android:textColor="@color/white"
                android:textSize="@dimen/login_edittext_text_size" />

            <View
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="@dimen/ret_card_image"
                android:layout_marginLeft="@dimen/margin_height"
                android:layout_marginTop="@dimen/store_margin_top"
                android:layout_toRightOf="@+id/totalvaluetitle"
                android:background="@android:color/darker_gray"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lbl_avg_lines"
                style="?textFieldStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/store_margin_top"
                android:layout_marginRight="@dimen/viewpger_padding"
                android:layout_marginTop="@dimen/viewpger_padding"
                android:layout_toRightOf="@+id/view1"
                android:adjustViewBounds="true"
                android:text="@string/avg_lines"
                android:textColor="?attr/accentcolor"
                android:textSize="@dimen/list_item_primary_text_size" />

            <TextView
                android:id="@+id/txtavglines"
                style="?textFieldStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbl_avg_lines"
                android:layout_marginLeft="@dimen/store_margin_top"
                android:layout_marginRight="@dimen/viewpger_padding"
                android:layout_toRightOf="@+id/view1"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="@dimen/login_edittext_text_size" />
        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/widget73"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer"
        android:layout_marginBottom="@dimen/resetbox_header_height"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/screen_title_height"
                android:background="@color/black_bg1"
                android:orientation="horizontal"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="@dimen/list_product_name_width_tiny"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/outna"
                        style="?textFieldStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/store_margin_top"
                        android:text="@string/store_name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/list_item_primary_text_size" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/outid"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/list_item_width_large"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/value"
                    android:textColor="@color/white"
                    android:textSize="@dimen/list_item_primary_text_size" />

                <TextView
                    android:id="@+id/lpc"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/list_item_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/btn_round_corner_padding"
                    android:tag="lines"
                    android:text="@string/lines"
                    android:textColor="@color/white"
                    android:textSize="@dimen/list_item_primary_text_size" />

                <TextView
                    android:id="@+id/dist"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/list_item_width_double"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/pre_post" />

                <TextView
                    android:id="@+id/cancel"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/list_item_width"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/invoicenotitle"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/list_product_name_width_tiny"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/invoice_number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/list_item_primary_text_size" />

                <TextView
                    android:id="@+id/txtweight"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/list_item_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/weight" />

                <TextView
                    android:id="@+id/txttax"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/list_item_width_large"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/tax_value" />

                <TextView
                    android:id="@+id/txtpriceoff"
                    style="?attr/customListTitle"
                    android:layout_width="@dimen/list_item_width_large"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/discount" />

            </LinearLayout>

            <ListView
                android:id="@+id/lvwplist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="@null"
                android:divider="@android:color/white"
                android:dividerHeight="0dp"
                android:drawSelectorOnTop="false"
                android:fitsSystemWindows="true"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:scrollbarAlwaysDrawVerticalTrack="true"></ListView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>