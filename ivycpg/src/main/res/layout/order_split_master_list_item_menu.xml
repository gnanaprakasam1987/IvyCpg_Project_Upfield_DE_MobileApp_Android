<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/list_item_customer"
            android:textSize="@dimen/font_small"
            android:textColor="@android:color/black"
            android:layout_width="@dimen/ordersplit_heder_name_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="" />

        <TextView
            android:id="@+id/list_item_order_number"
            android:textSize="@dimen/font_small"
            android:textColor="@android:color/black"
            android:layout_width="@dimen/ordersplit_heder_qty_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/list_item_n_sku"
            android:textSize="@dimen/font_small"
            android:textColor="@android:color/black"
            android:layout_width="@dimen/ordersplit_heder_images_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/list_item_amount"
            android:textSize="@dimen/font_small"
            android:textColor="@android:color/black"
            android:layout_width="@dimen/ordersplit_heder_qty_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="" />
        <!--
        <Button
            android:id="@+id/list_item_edit_btn"
            style="@style/ButtonListMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
             android:gravity="center"
            android:text="@string/edit_label"
         
            />
        -->
        <!--
         <Button
            android:id="@+id/list_item_delete_btn"
            style="@style/ButtonListMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/delete_label"
            android:layout_weight="1"
            />
        -->

        <ImageView
            android:id="@+id/list_item_edit_btn"
            android:layout_width="@dimen/ordersplit_heder_images_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/ic_action_edit" />

        <ImageView
            android:id="@+id/list_item_order_edit_btn"
            android:layout_width="@dimen/ordersplit_heder_images_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/ic_action_edit" />

        <ImageView
            android:id="@+id/list_item_delete_btn"
            android:layout_width="@dimen/ordersplit_heder_images_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/ic_action_clear" />
    </LinearLayout>

</LinearLayout>