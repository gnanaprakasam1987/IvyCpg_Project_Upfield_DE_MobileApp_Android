<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        card_view:cardBackgroundColor="@color/WHITE"
        card_view:cardElevation="5dp"
        card_view:contentPadding="5dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="@dimen/dimen_5dp">

                <TextView
                    style="?attr/customListItemPrimary"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/scheme_name"
                    android:layout_weight=".4" />

                <TextView
                    android:id="@+id/text_scheme_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_micro_small"
                    android:layout_weight=".6" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_display_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_5dp">

                <TextView
                    android:id="@+id/label_display_period"
                    style="?attr/customListItemPrimary"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/display_period"
                    android:textSize="@dimen/list_item_primary_text_size"
                    android:layout_weight=".4" />

                <TextView
                    android:id="@+id/text_display_period"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_micro_small"
                    android:layout_weight=".6" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_booking_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="@dimen/dimen_5dp">

                <TextView
                    android:id="@+id/label_booking_period"
                    style="?attr/customListItemPrimary"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/booking_period"
                    android:textSize="@dimen/list_item_primary_text_size"
                    android:layout_weight=".4" />

                <TextView
                    android:id="@+id/text_booking_period"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_micro_small"
                    android:layout_weight=".6" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_qualifiers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_5dp">

                <TextView
                    android:id="@+id/label_qualifiers"
                    style="?attr/customListItemPrimary"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/qualifiers"
                    android:textSize="@dimen/list_item_primary_text_size"
                    android:layout_weight=".4" />

                <TextView
                    android:id="@+id/text_qualifiers"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_micro_small"
                    android:layout_weight=".6" />
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/card">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
