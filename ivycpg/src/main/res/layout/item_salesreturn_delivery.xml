<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/padding_small">

    <include
        android:id="@+id/lyt_itemSalesReturn"
        layout="@layout/salesreturn_deliverydetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/container_salesReturnItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/txt_dateReturn"
            android:padding="@dimen/padding_normal"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/txt_dateReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/padding_normal"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/txt_returnValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txt_uid"
            android:padding="@dimen/padding_normal"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/txt_lpc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_dateReturn"
            android:padding="@dimen/padding_normal"
            android:textSize="@dimen/font_small" />

    </RelativeLayout>

</android.support.v7.widget.CardView>