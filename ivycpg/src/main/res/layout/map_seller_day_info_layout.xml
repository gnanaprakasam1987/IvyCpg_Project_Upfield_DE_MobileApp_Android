<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_info_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:visibility="visible"
    app:behavior_hideable="false"
    app:behavior_peekHeight="180dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/user_info_layout"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dimen_2dp"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingRight="@dimen/dimen_5dp"
            android:paddingTop="@dimen/dimen_2dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_2dp">

                <View
                    android:id="@+id/planned_color_view"
                    android:layout_width="@dimen/dimen_14dp"
                    android:layout_height="@dimen/dimen_14dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/planned_gradient_grey" />

                <TextView
                    android:id="@+id/tv_planned_text"
                    style="?attr/customListItemPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_toRightOf="@+id/planned_color_view"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Planned"
                    android:textColor="#de000000"
                    android:textSize="@dimen/dimen_12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:padding="@dimen/dimen_2dp">

                <View
                    android:id="@+id/covered_color_view"
                    android:layout_width="@dimen/dimen_14dp"
                    android:layout_height="@dimen/dimen_14dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/covered_green" />

                <TextView
                    android:id="@+id/tv_covered_text"
                    style="?attr/customListItemPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_toRightOf="@+id/covered_color_view"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Covered"
                    android:textColor="#de000000"
                    android:textSize="@dimen/dimen_12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:padding="@dimen/dimen_2dp">

                <View
                    android:id="@+id/unbilled_color_view"
                    android:layout_width="@dimen/dimen_14dp"
                    android:layout_height="@dimen/dimen_14dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/unbilled_gradient_red" />

                <TextView
                    android:id="@+id/tv_unbilled_text"
                    style="?attr/customListItemPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_toRightOf="@+id/unbilled_color_view"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Unbilled"
                    android:textColor="#de000000"
                    android:textSize="@dimen/dimen_12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:padding="@dimen/dimen_2dp">

                <View
                    android:id="@+id/skipped_color_view"
                    android:layout_width="@dimen/dimen_14dp"
                    android:layout_height="@dimen/dimen_14dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/unbilled_gradient_red" />

                <TextView
                    android:id="@+id/tv_skipped_text"
                    style="?attr/customListItemPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_toRightOf="@+id/skipped_color_view"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Unbilled"
                    android:textColor="#de000000"
                    android:textSize="@dimen/dimen_12dp" />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_ttl_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="2dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:contentPadding="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_10dp">

                <LinearLayout
                    android:id="@+id/seller_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:orientation="horizontal">

                    <com.ivy.cpg.view.supervisor.helper.CircleImageView
                        android:layout_width="@dimen/dimens_100dp"
                        android:layout_height="@dimen/dimens_100dp"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_marginRight="@dimen/dimen_5dp"
                        android:layout_marginTop="@dimen/dimen_2dp"
                        android:src="@drawable/face" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_user_name"
                                style="?attr/customListItemPrimary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dimen_2dp"
                                android:layout_toLeftOf="@+id/message_img"
                                android:gravity="center_vertical|left"
                                android:maxLines="1"
                                android:text="Sandy"
                                android:textColor="#de000000"
                                android:textSize="@dimen/dimen_16dp" />

                            <ImageView
                                android:id="@+id/message_img"
                                android:layout_width="@dimen/dimen_22dp"
                                android:layout_height="@dimen/dimen_22dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dimen_5dp"
                                android:src="@drawable/ic_email_dark" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/tv_start_time"
                            style="?attr/customListItemSecondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_2dp"
                            android:layout_marginRight="@dimen/dimen_2dp"
                            android:maxLines="1"
                            android:text="Day start : 09:35 AM"
                            android:textColor="#8b000000"
                            android:textSize="@dimen/dimen_14dp" />

                        <TextView
                            android:id="@+id/tv_address"
                            style="?attr/customListItemSecondary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_2dp"
                            android:layout_marginRight="@dimen/dimen_2dp"
                            android:layout_marginTop="@dimen/dimen_1dp"
                            android:maxLines="1"
                            android:text="Last visit : ECR"
                            android:textColor="#8b000000"
                            android:textSize="@dimen/dimen_14dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_2dp"
                            android:layout_marginRight="@dimen/dimen_2dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_target_outlet"
                                style="?attr/customListItemSecondary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/target_bg_gradient"
                                android:maxLines="1"
                                android:paddingBottom="@dimen/dimen_5dp"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:paddingRight="@dimen/dimen_10dp"
                                android:paddingTop="@dimen/dimen_5dp"
                                android:text="Targeted 05"
                                android:textColor="@color/WHITE" />

                            <TextView
                                android:id="@+id/tv_outlet_covered"
                                style="?attr/customListItemSecondary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:background="@drawable/covered_bg_gradient"
                                android:maxLines="1"
                                android:paddingBottom="@dimen/dimen_5dp"
                                android:paddingLeft="@dimen/dimen_10dp"
                                android:paddingRight="@dimen/dimen_10dp"
                                android:paddingTop="@dimen/dimen_5dp"
                                android:text="Covered 05"
                                android:textColor="@color/WHITE" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/outlet_header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seller_info_layout"
                    android:background="#ded8db"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dimen_6dp"
                    android:paddingLeft="@dimen/dimen_4dp"
                    android:paddingRight="@dimen/dimen_4dp"
                    android:paddingTop="@dimen/dimen_6dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/number_text"
                        style="?attr/customListItemSecondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:maxLines="1"
                        android:text="#"
                        android:textColor="#de000000"
                        android:textSize="@dimen/dimen_14dp" />

                    <TextView
                        android:id="@+id/store_text"
                        style="?attr/customListItemSecondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:maxLines="1"
                        android:text="Store Name"
                        android:textColor="#de000000"
                        android:textSize="@dimen/dimen_14dp" />

                    <TextView
                        android:id="@+id/time_in_text"
                        style="?attr/customListItemSecondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="In time"
                        android:textColor="#de000000"
                        android:textSize="@dimen/dimen_14dp" />

                    <TextView
                        android:id="@+id/time_out_text"
                        style="?attr/customListItemSecondary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Out Time"
                        android:textColor="#de000000"
                        android:textSize="@dimen/dimen_14dp" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/outlet_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/seller_performance_btn"
                    android:layout_below="@+id/outlet_header_layout"
                    android:background="#FFFFFF"
                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/seller_performance_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/padding_l"
                    android:layout_marginRight="@dimen/padding_l"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:background="@drawable/total_seller_bg"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:paddingTop="@dimen/dimen_10dp"
                    android:text="View Seller Performance"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_medium" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>




</LinearLayout>