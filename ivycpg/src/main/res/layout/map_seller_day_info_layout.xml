<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_info_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible"
    app:behavior_hideable="false"
    app:behavior_peekHeight="130dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_ttl_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/seller_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp">

                <com.ivy.cpg.view.supervisor.CircleImageView
                    android:layout_width="@dimen/dimens_100dp"
                    android:layout_height="@dimen/dimens_100dp"
                    android:src="@drawable/face"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_5dp"
                    android:layout_marginTop="@dimen/dimen_2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_user_name"
                            style="?attr/customListItemPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_2dp"
                            android:gravity="center_vertical|left"
                            android:maxLines="1"
                            android:textColor="#de000000"
                            android:textSize="@dimen/dimen_16dp"
                            android:text="Sandy"
                            android:layout_toLeftOf="@+id/message_img"/>

                        <ImageView
                            android:id="@+id/message_img"
                            android:layout_width="@dimen/dimen_20dp"
                            android:layout_height="@dimen/dimen_20dp"
                            android:layout_marginRight="@dimen/dimen_5dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_email_dark" />

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tv_start_time"
                        style="?attr/customListItemSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_2dp"
                        android:layout_marginRight="@dimen/dimen_2dp"
                        android:maxLines="1"
                        android:textColor="#8b000000"
                        android:textSize="@dimen/dimen_14dp"
                        android:text="Day start : 09:35 AM" />

                    <TextView
                        android:id="@+id/tv_address"
                        style="?attr/customListItemSecondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_2dp"
                        android:layout_marginRight="@dimen/dimen_2dp"
                        android:layout_marginTop="@dimen/dimen_1dp"
                        android:maxLines="1"
                        android:textColor="#8b000000"
                        android:textSize="@dimen/dimen_14dp"
                        android:text="Last visit : ECR" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dimen_2dp"
                        android:layout_marginRight="@dimen/dimen_2dp"
                        android:layout_marginTop="@dimen/dimen_5dp">

                        <TextView
                            android:id="@+id/tv_target_outlet"
                            style="?attr/customListItemSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textColor="@color/WHITE"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:paddingRight="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:text="Targeted 05"
                            android:background="@drawable/target_bg_gradient"/>

                        <TextView
                            android:id="@+id/tv_outlet_covered"
                            style="?attr/customListItemSecondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textColor="@color/WHITE"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:paddingRight="@dimen/dimen_10dp"
                            android:paddingBottom="@dimen/dimen_5dp"
                            android:paddingTop="@dimen/dimen_5dp"
                            android:text="Covered 05"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:background="@drawable/covered_bg_gradient"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/outlet_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:background="#ded8db"
                android:paddingBottom="@dimen/dimen_6dp"
                android:paddingTop="@dimen/dimen_6dp"
                android:paddingLeft="@dimen/dimen_4dp"
                android:paddingRight="@dimen/dimen_4dp"
                android:layout_below="@+id/seller_info_layout">

                <TextView
                    android:id="@+id/number_text"
                    style="?attr/customListItemSecondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_14dp"
                    android:text="#"
                    android:layout_weight="0.1"/>

                <TextView
                    android:id="@+id/store_text"
                    style="?attr/customListItemSecondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_14dp"
                    android:text="Store Name"
                    android:layout_weight="0.5"/>

                <TextView
                    android:id="@+id/time_in_text"
                    style="?attr/customListItemSecondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_14dp"
                    android:text="In time"
                    android:layout_weight="0.2"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/time_out_text"
                    style="?attr/customListItemSecondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="@dimen/dimen_14dp"
                    android:text="Out Time"
                    android:gravity="center"
                    android:layout_weight="0.2"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/outlet_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:background="#FFFFFF"
                android:layout_below="@+id/outlet_header_layout"
                android:layout_above="@+id/seller_performance_btn"/>

            <TextView
                android:id="@+id/seller_performance_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Seller Performance"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/font_medium"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:background="@drawable/total_seller_bg"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_10dp"
                android:paddingTop="@dimen/dimen_10dp"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>