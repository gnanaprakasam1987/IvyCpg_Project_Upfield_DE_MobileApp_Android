<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9F9F9"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/menu_name"
        style="?attr/customListItemValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/profile_custom_label_txt"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/profile_custom_label_txt"
        android:text="Channel"
        android:textSize="@dimen/font_micro_small" />


    <TextView
        android:id="@+id/value_name"
        style="?attr/customListItemValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_name"
        android:layout_gravity="start|bottom"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/profile_margin_top_minus"
        android:gravity="start|bottom"
        android:text="Retailer Shop"
        android:textSize="@dimen/font_micro_small" />


    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="@dimen/list_vertical_seperator"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center|end"
        android:background="@color/profile_devider_color" />

</RelativeLayout>