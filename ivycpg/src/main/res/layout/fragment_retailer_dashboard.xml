<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/factortv"
                        style="?attr/customListTitle"
                        android:layout_width="@dimen/list_item_width_dashboard_medium"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:tag="factor_day"
                        android:text="@string/factor" />

                    <TextView
                        android:id="@+id/targettv"
                        style="?attr/customListTitle"
                        android:layout_width="@dimen/list_item_width_dashboard_small"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:tag="target_day"
                        android:text="@string/target" />

                    <TextView
                        android:id="@+id/achievedtv"
                        style="?attr/customListTitle"
                        android:layout_width="@dimen/list_item_width_dashboard_small"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:tag="achieved_day"
                        android:text="@string/achieved" />
                    <TextView
                        android:id="@+id/balancetv"
                        style="?attr/customListTitle"
                        android:layout_width="@dimen/list_item_width_dashboard_small"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:tag="balance_day"
                        android:text="@string/balance" />
                    <TextView
                        android:id="@+id/indextv"
                        style="?attr/customListTitle"
                        android:layout_width="@dimen/list_item_width_dashboard_small"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:tag="index_day"
                        android:text="@string/index" />

                    <TextView
                        android:id="@+id/scoretv"
                        style="?attr/customListTitle"
                        android:layout_width="@dimen/list_item_width_dashboard_small"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:tag="score"
                        android:text="@string/score" />

                    <TextView
                        android:id="@+id/incentivetv"
                        style="?attr/customListTitle"
                        android:layout_width="@dimen/list_item_width_dashboard_small"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:tag="incentive_day"
                        android:text="@string/incentive" />
                </LinearLayout>

                <ListView
                    android:id="@+id/dashboardlv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chartLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@color/white_box_start"
        android:padding="5dp">


        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:id="@+id/buttonlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:overScrollMode="always"
            >

            <Button
                android:id="@+id/prev"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_back_arrow" />

            <Button
                android:id="@+id/next"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_right_arrow" />


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>