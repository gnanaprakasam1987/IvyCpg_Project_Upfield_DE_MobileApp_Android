<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ivy.sd.png.view.asset.AssetMovementActivity">
    <LinearLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include
            android:id="@+id/toolbar"
            layout="@layout/material_tool_bar" />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_toolbar"
        android:layout_margin="@dimen/list_margin">

        <LinearLayout
            android:id="@+id/ll_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/list_header_height"
                android:background="@color/list_title_bg_color"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="9"
                android:paddingLeft="@dimen/list_padding_left_n_right"
                android:paddingRight="@dimen/list_padding_left_n_right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/customListTitle"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:id="@+id/txt_move_assetName"
                    android:padding="@dimen/dimen_4dp"
                    android:text="@string/asset_name"
                    android:maxLines="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?attr/customListTitle"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:id="@+id/txt_move_serialNumber"
                    android:padding="@dimen/dimen_4dp"
                    android:text="@string/serial_no"
                    android:maxLines="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="?attr/customListTitle"
                    android:id="@+id/iv_move_icon"
                    android:text="Movement"
                    android:padding="@dimen/dimen_4dp" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_move_asset"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@null"
                android:divider="@null"
                android:fitsSystemWindows="true"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
