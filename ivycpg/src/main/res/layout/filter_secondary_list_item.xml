<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridItem"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/filter_secondary_list_height"
    android:orientation="horizontal"
    android:weightSum="10"
    android:gravity="center_vertical">


    <TextView
        android:id="@+id/grid_item_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/dummy_txt"
        android:textColor="@color/filer_level_text_color"
        android:textSize="@dimen/filter_list_secondary_text_size"
        android:textAllCaps="false"/>

    <ImageView
        android:id="@+id/selectedfilters"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_8dp"
        android:layout_weight="2"
        android:src="@drawable/ic_filter_selected"
        />

</LinearLayout>