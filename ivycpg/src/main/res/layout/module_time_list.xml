<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/list_item_padding_top_nd_bottom"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/list_item_padding_top_nd_bottom"
    android:paddingEnd="@dimen/list_item_padding_top_nd_bottom">

    <TextView
        android:id="@+id/menunametxt"
        style="@style/TextViewListItemPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:layout_alignParentLeft="true"
        android:text=""
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_time_spent"
        style="@style/TextViewListItemCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_5dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:layout_toLeftOf="@+id/iv_done"
        android:text=""
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/iv_done" />

    <ImageView
        android:id="@+id/iv_done"
        android:layout_width="@dimen/info_icon"
        android:layout_height="@dimen/info_icon"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dimen_5dp"
        android:layout_marginRight="@dimen/dimen_5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_tick_enable"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1dp"
        android:layout_below="@+id/iv_done"
        android:layout_marginTop="@dimen/list_item_padding_top_nd_bottom"
        android:background="@color/grey_odd"/>

</RelativeLayout>