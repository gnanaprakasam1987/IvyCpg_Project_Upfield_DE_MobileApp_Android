<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cust_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/pdt_name_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/padding_rb"
            android:paddingBottom="@dimen/padding_rb"
            android:paddingTop="@dimen/padding_rb"
            android:paddingStart="@dimen/padding_l"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/font_medium"
            tools:text="dfg dfgdf"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="@dimen/pdt_kb_margin"
            android:layout_marginBottom="@dimen/pdt_kb_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/padding_l">

            <TextView
                android:id="@+id/sih_keyboard"
                android:layout_width="@dimen/sih_so_w"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/padding_rb"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/font_small"
                android:gravity="start|center_vertical"
                tools:text="SIH"
                android:fontFamily="sans-serif"
                android:visibility="visible" />

            <TextView
                android:id="@+id/so_keyboard"
                android:layout_width="@dimen/sih_so_w"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_rb"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/font_small"
                android:gravity="start|center_vertical"
                android:fontFamily="sans-serif"
                android:visibility="visible"
                tools:text="SO" />

            <TextView
                android:id="@+id/value_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_rb"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/font_small"
                android:gravity="center"
                tools:text="Value : 0"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/typed_value"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_txt_h"
                android:layout_weight="5"
                android:paddingStart="@dimen/padding_l"
                android:paddingTop="@dimen/padding_rb"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/highlight_large"
                tools:text="99999999"
                android:gravity="center_vertical" />

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_txt_h"
                android:layout_alignParentEnd="true"
                android:paddingStart="@dimen/padding_l"
                android:paddingEnd="@dimen/padding_l"
                android:background="@null"
                android:src="@drawable/ic_backspace_delete" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num_one"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="1"
            android:text="1"
            android:textColor="@color/Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_two"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="2"
            android:text="2"
            android:textColor="@color/Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_three"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="3"
            android:text="3"
            android:textColor="@color/Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num_four"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="4"
            android:text="4"
            android:textColor="@color/Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_five"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="5"
            android:text="5"
            android:textColor="@color/Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_six"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="6"
            android:text="6"
            android:textColor="@color/Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num_seven"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="7"
            android:text="7"
            android:textColor="@color/Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_eight"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="8"
            android:text="8"
            android:textColor="@color/Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_nine"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="9"
            android:text="9"
            android:textColor="@color/Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_btn_h"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/WHITE"
            android:clickable="false" />

        <Button
            android:id="@+id/num_zero"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="0"
            android:text="0"
            android:textColor="@color/Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />

        <Button
            android:id="@+id/dec_dot"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="."
            tools:text="."
            android:textColor="@color/Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif"
            android:clickable="false"
            android:visibility="visible" />
        <!--<LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/dec_dot"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:background="@drawable/ripple_effect_keyboard"
                android:tag="."
                android:text="."
                android:textColor="@color/Black"
                android:textSize="@dimen/no_btn_ts"
                android:typeface="serif"
                android:visibility="visible"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:clickable="false"
                />
        </LinearLayout>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/can_ok_btn_h"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:text="@string/cancel"
            android:textColor="@color/Black" />

        <Button
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/can_ok_btn_h"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:text="@string/ok"
            android:textColor="@color/Black" />

    </LinearLayout>

</LinearLayout>
