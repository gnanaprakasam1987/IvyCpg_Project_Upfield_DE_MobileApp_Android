<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cust_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/pdt_name_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pdt_kb_margin"
            android:layout_marginTop="@dimen/pdt_kb_margin"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="@dimen/padding_rb"
            android:paddingEnd="@dimen/padding_rb"
            android:paddingLeft="@dimen/padding_l"
            android:paddingRight="@dimen/padding_rb"
            android:paddingStart="@dimen/padding_l"
            android:paddingTop="@dimen/padding_rb"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small"
            tools:text="dfg dfgdf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_l"
            android:paddingStart="@dimen/padding_l"
            android:paddingEnd="@dimen/padding_l"
            android:paddingRight="@dimen/padding_l">

            <TextView
                android:id="@+id/sih_keyboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="sans-serif"
                android:gravity="start|center_vertical"
                android:paddingEnd="@dimen/padding_rb"
                android:paddingRight="@dimen/padding_rb"
                android:paddingLeft="@dimen/padding_rb"
                android:paddingStart="@dimen/padding_rb"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small"
                android:visibility="visible"
                tools:text="SIH" />

            <TextView
                android:id="@+id/so_keyboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="sans-serif"
                android:gravity="start|center_vertical"
                android:paddingEnd="@dimen/padding_rb"
                android:paddingRight="@dimen/padding_rb"
                android:paddingLeft="@dimen/padding_rb"
                android:paddingStart="@dimen/padding_rb"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small"
                android:visibility="visible"
                tools:text="SO" />

            <TextView
                android:id="@+id/psq_keyboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="sans-serif"
                android:gravity="start|center_vertical"
                android:paddingEnd="@dimen/padding_rb"
                android:paddingRight="@dimen/padding_rb"
                android:paddingLeft="@dimen/padding_rb"
                android:paddingStart="@dimen/padding_rb"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small"
                android:visibility="visible"
                android:tag="psq"
                tools:text="PSQ" />

            <TextView
                android:id="@+id/value_keyboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingEnd="@dimen/padding_rb"
                android:paddingRight="@dimen/padding_rb"
                android:paddingLeft="@dimen/padding_rb"
                android:paddingStart="@dimen/padding_rb"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small"
                tools:text="Value : 0" />

            <TextView
                android:id="@+id/total_stock_keyboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:paddingEnd="@dimen/padding_rb"
                android:paddingRight="@dimen/padding_rb"
                android:paddingLeft="@dimen/padding_rb"
                android:paddingStart="@dimen/padding_rb"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small"
                android:tag="item_sr_piece"
                tools:text="@string/zero" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingBottom="@dimen/padding_l"
                android:paddingLeft="@dimen/padding_l"
                android:paddingStart="@dimen/padding_l"
                android:paddingTop="@dimen/padding_l">

                <LinearLayout
                    android:id="@+id/llCase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/caseTitle"
                        style="@style/TextViewListItemCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_rb"
                        android:tag="item_case"
                        android:text="@string/item_case"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/case_typed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical|right"
                        android:maxLength="5"
                        android:padding="@dimen/padding_rb"
                        android:textColor="@color/white"
                        android:textSize="@dimen/highlight_small"
                        tools:text="99999999" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llOuter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_l"
                    android:paddingStart="@dimen/padding_l">

                    <TextView
                        android:id="@+id/outercaseTitle"
                        style="@style/TextViewListItemCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_rb"
                        android:tag="item_outer"
                        android:text="@string/item_outer"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/outer_case_typed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical|right"
                        android:maxLength="5"
                        android:padding="@dimen/padding_rb"
                        android:textColor="@color/white"
                        android:textSize="@dimen/highlight_small"
                        tools:text="99999999" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPcs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_l"
                    android:paddingStart="@dimen/padding_l">

                    <TextView
                        android:id="@+id/pcsTitle"
                        style="@style/TextViewListItemCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_rb"
                        android:tag="item_piece"
                        android:text="@string/item_piece"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/pcs_typed_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical|right"
                        android:maxLength="5"
                        android:padding="@dimen/padding_rb"
                        android:textColor="@color/white"
                        android:textSize="@dimen/highlight_small"
                        tools:text="99999999" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_srp_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/padding_l"
                    android:paddingStart="@dimen/padding_l">

                    <TextView
                        android:id="@+id/srp_edit_title"
                        style="@style/TextViewListItemCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_rb"
                        android:tag="srp"
                        android:text="@string/srp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/srp_edit_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical|end"
                        android:maxLength="5"
                        android:padding="@dimen/padding_rb"
                        android:textColor="@color/white"
                        android:textSize="@dimen/highlight_small"
                        tools:text="@string/zero" />

                </LinearLayout>


            </LinearLayout>

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_txt_h"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:paddingEnd="@dimen/padding_l"
                android:paddingStart="@dimen/padding_l"
                android:src="@drawable/ic_backspace_delete"
                android:tint="?textColor" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num_one"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="1"
            android:text="1"
            android:textColor="@color/half_Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_two"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="2"
            android:text="2"
            android:textColor="@color/half_Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_three"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="3"
            android:text="3"
            android:textColor="@color/half_Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num_four"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="4"
            android:text="4"
            android:textColor="@color/half_Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_five"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="5"
            android:text="5"
            android:textColor="@color/half_Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_six"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="6"
            android:text="6"
            android:textColor="@color/half_Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num_seven"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="7"
            android:text="7"
            android:textColor="@color/half_Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_eight"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="8"
            android:text="8"
            android:textColor="@color/half_Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_nine"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="9"
            android:text="9"
            android:textColor="@color/half_Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/no_btn_h"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="false" />

        <Button
            android:id="@+id/num_zero"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="0"
            android:text="0"
            android:textColor="@color/half_Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif" />

        <Button
            android:id="@+id/dec_dot"
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:clickable="false"
            android:tag="."
            android:textColor="@color/half_Black"
            android:textSize="@dimen/highlight_normal"
            android:typeface="serif"
            android:visibility="visible"
            tools:text="." />
        <!--<LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/no_btn_h"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/dec_dot"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:background="@drawable/ripple_effect_keyboard"
                android:tag="."
                android:text="."
                android:textColor="@color/half_Black"
                android:textSize="@dimen/no_btn_ts"
                android:typeface="serif"
                android:visibility="visible"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:clickable="false"
                />
        </LinearLayout>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/can_ok_btn_h"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:text="@string/cancel"
            android:textColor="@color/half_Black" />

        <Button
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="@dimen/can_ok_btn_h"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:text="@string/ok"
            android:textColor="@color/half_Black" />

    </LinearLayout>

</LinearLayout>
