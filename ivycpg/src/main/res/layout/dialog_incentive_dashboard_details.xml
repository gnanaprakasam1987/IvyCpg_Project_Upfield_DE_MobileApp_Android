<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_header_height"
                android:background="?customLayoutBackground"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/kpi_spinner_title_size" />
            <ImageView
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/list_header_height"
                android:background="@drawable/ic_incentive_close"
                android:layout_alignParentRight="true"
                android:padding="@dimen/margin_5px"/>
        </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_parent"
        android:layout_width="match_parent"
        android:layout_height='@dimen/height_list_row'
        android:background="@color/colorPrimaryDarkNBlue"
        android:orientation="horizontal"
        android:weightSum="4">


            <TextView
                android:id="@+id/tv_sales_parameter"
                style="?attr/customListTitle"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/sales_parameter"
                android:textColor="?accentcolor"
                android:textSize="@dimen/footer_label_size" />


            <TextView
                android:id="@+id/tv_sfactor"
                style="?attr/customListTitle"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/factor_InscDash"
                android:textColor="?accentcolor"
                android:textSize="@dimen/footer_label_size" />





            <TextView
                android:id="@+id/tv_sachper"
                style="?attr/customListTitle"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/ach"
                android:textColor="?accentcolor"
                android:textSize="@dimen/footer_label_size" />


            <TextView
                android:id="@+id/tv_smax_possible"
                style="?attr/customListTitle"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/max_opportunity"
                android:textColor="?accentcolor"
                android:textSize="@dimen/footer_label_size" />


    </LinearLayout>


    <ListView
        android:id="@+id/lv_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="-1dp"
        android:layout_below="@+id/ll_parent"></ListView>
    </LinearLayout>

</RelativeLayout>
