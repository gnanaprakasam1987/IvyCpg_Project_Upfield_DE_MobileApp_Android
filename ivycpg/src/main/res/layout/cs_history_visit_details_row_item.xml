<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9F9F9"
    android:orientation="horizontal"
    android:weightSum="1.01">

    <LinearLayout
        android:id="@+id/custom_list_profilelyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:background="@color/history_list_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/first_listlyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginBottom="@dimen/profile_custom_label_txt"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/profile_custom_label_txt"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menu_name"
                style="?attr/customListItemValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:gravity="left|top"
                android:text="Channel"
                android:textSize="@dimen/text_sz_small" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/first_listlyt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/profile_margin_top_minus"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/value_name"
                style="?attr/customListItemValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:gravity="bottom|left"
                android:text="Retailer Shop"
                android:textSize="@dimen/font_micro_small" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_vertical_seperator"
        android:layout_gravity="center|right"
        android:layout_weight="0.02"
        android:background="@color/profile_devider_color" />

</LinearLayout>