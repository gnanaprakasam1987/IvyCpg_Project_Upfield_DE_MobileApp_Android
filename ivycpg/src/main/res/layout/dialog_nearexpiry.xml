<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corners"
    android:orientation="vertical"
    android:windowSoftInputMode="stateAlwaysHidden">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nearexpirybutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:textColor="?attr/primarycolor"
            android:textSize="@dimen/list_primary" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/activity_divider_height"
            android:layout_marginLeft="@dimen/near_expiry_dialog_divider_padding"
            android:layout_marginRight="@dimen/near_expiry_dialog_divider_padding"
            android:layout_marginTop="4dp"
            android:background="@color/divider_view_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_skuname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvskuname"
            style="?attr/customListItemPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/total"></TextView>
    </LinearLayout>

    <View
        android:id="@+id/view_divider1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_divider_height"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/near_expiry_dialog_divider_padding"
        android:layout_marginTop="4dp"
        android:background="@color/divider_view_color" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:cacheColorHint="@null"
        android:fitsSystemWindows="true"></ListView>

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="@dimen/near_expiry_dialog_divider_padding"
        android:layout_marginTop="4dp"
        android:background="@drawable/dashed_line" />

    <LinearLayout
        android:id="@+id/ll_keypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/near_expiry_dialog_divider_padding"
        android:layout_marginRight="@dimen/near_expiry_dialog_divider_padding"
        android:layout_marginTop="@dimen/dimen_20dp">

        <include layout="@layout/keypad" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_divider_height"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginLeft="@dimen/near_expiry_dialog_divider_padding"
            android:layout_marginRight="@dimen/near_expiry_dialog_divider_padding"
            android:background="@color/divider_view_color" />

        <Button
            android:id="@+id/btn_ok"
            style="?attr/roundedCustomButtonNormal"
            android:layout_marginBottom="@dimen/activity_margin1"
            android:layout_marginTop="@dimen/activity_margin1"
            android:text="@string/ok" />

    </LinearLayout>
</LinearLayout>