<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ivy.cpg.view.collection.NoCollectionReasonActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/material_tool_bar" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/topic_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/screen_title_height"
            android:layout_marginEnd="@dimen/list_margin"
            android:layout_marginStart="@dimen/list_margin"
            android:background="?customLayoutBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/invoice_no"
                style="?attr/customListTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="0.35"
                android:gravity="start|center_vertical"
                android:text="@string/invoice_no"
                android:textColor="@color/white"
                android:textSize="@dimen/list_item_primary_text_size" />

            <TextView
                android:id="@+id/invoice_date"
                style="?attr/customListTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="0.15"
                android:gravity="start|center_vertical"
                android:text="@string/inv_date"
                android:textColor="@color/white"
                android:textSize="@dimen/list_item_primary_text_size" />

            <TextView
                android:id="@+id/invoice_amount"
                style="?attr/customListTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="0.15"
                android:gravity="end|center_vertical"
                android:text="@string/inv_amt"
                android:textColor="@color/white"
                android:textSize="@dimen/list_item_primary_text_size" />

            <TextView
                android:id="@+id/invoice_reason"
                style="?attr/customListTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="0.35"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/reason"
                android:textColor="@color/white"
                android:textSize="@dimen/list_item_primary_text_size" />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/invoice_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/done_btn"
            android:layout_below="@+id/topic_layout"
            android:layout_marginEnd="@dimen/list_margin"
            android:layout_marginStart="@dimen/list_margin"
            android:scrollbars="none" />

        <Button
            android:id="@+id/done_btn"
            style="?attr/roundedCustomButtonSmall"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="@string/done"
            android:textAllCaps="false"
            android:textSize="@dimen/font_micro_small" />

    </RelativeLayout>

</RelativeLayout>
