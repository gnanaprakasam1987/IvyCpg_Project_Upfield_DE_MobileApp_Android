<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_header_height"
        android:background="@color/list_title_bg_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_retailername"
            style="?attr/customListTitle"
            android:layout_width="@dimen/list_product_name_width_tiny"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/retailer_name" />

        <TextView
            android:id="@+id/tv_purchase_values"
            style="?attr/customListTitle"
            android:layout_width="@dimen/list_item_width_double"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/purchase_value_avg" />

        <TextView
            android:id="@+id/tv_lines_value"
            style="?attr/customListTitle"
            android:layout_width="@dimen/list_item_width_double"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/lines" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@null"
            android:divider="@android:color/white"
            android:dividerHeight="1dp"
            android:drawSelectorOnTop="false"
            android:fitsSystemWindows="true"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbarAlwaysDrawVerticalTrack="true">

        </ListView>
    </LinearLayout>

</LinearLayout>