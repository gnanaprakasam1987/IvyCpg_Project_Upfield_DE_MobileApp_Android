<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orderScreenListRow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:paddingLeft="@dimen/list_padding_left_n_right"
    android:paddingRight="@dimen/list_padding_left_n_right"
    android:paddingTop="@dimen/list_item_padding_top_nd_bottom">

    <LinearLayout
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5">

        <TextView
            android:id="@+id/orderPRODNAME"
            android:textSize="@dimen/font_small"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/product_name" />

        <TextView
            android:id="@+id/batchnumber"
            style="?textFieldStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/stock_screen_txtview_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="normal"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/sih_cs"
            android:textSize="@dimen/font_small"
            android:textColor="@android:color/black"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/stock_screen_txtview_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/zero"
            android:visibility="gone"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/sih_ou"
            android:textSize="@dimen/font_small"
            android:textColor="@android:color/black"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/stock_screen_txtview_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/zero"
            android:visibility="gone"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/sih"
            android:textSize="@dimen/font_small"
            android:textColor="@android:color/black"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="@dimen/stock_screen_txtview_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/zero"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>