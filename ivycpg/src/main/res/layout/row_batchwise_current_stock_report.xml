<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orderScreenListRow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:orientation="vertical" >
    <TextView
        android:id="@+id/orderPRODNAME"
        android:textSize="@dimen/font_small"
        android:textColor="@android:color/black"
        android:layout_width="@dimen/order_stock_list_product_name_width_xlarge"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/product_name" />
    
    <TextView
        android:id="@+id/batchnumber"
        style="?textFieldStyle"
        android:layout_width="@dimen/order_stock_list_product_name_width_xlarge"
        android:layout_height="@dimen/stock_screen_txtview_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="normal"
        android:text="" />
</LinearLayout>
    <TextView
        android:id="@+id/sih_cs"
        android:textSize="@dimen/font_small"
        android:textColor="@android:color/black"
        android:layout_width="@dimen/list_item_width_medium"
        android:layout_height="@dimen/stock_screen_txtview_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/zero"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/sih_ou"
        android:textSize="@dimen/font_small"
        android:textColor="@android:color/black"
        android:layout_width="@dimen/list_item_width_medium"
        android:layout_height="@dimen/stock_screen_txtview_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/zero"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/sih"
        android:textSize="@dimen/font_small"
        android:textColor="@android:color/black"
        android:layout_width="@dimen/list_item_width_medium"
        android:layout_height="@dimen/stock_screen_txtview_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/zero" />

</LinearLayout>