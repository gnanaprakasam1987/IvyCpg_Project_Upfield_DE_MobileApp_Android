<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orderScreenListRow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/list_item_padding_top_nd_bottom"
    android:paddingLeft="@dimen/list_padding_left_n_right"
    android:paddingRight="@dimen/list_padding_left_n_right"
    android:paddingTop="@dimen/list_item_padding_top_nd_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sku"
            style="?attr/customListItemPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/product_name" />

        <TextView
            android:id="@+id/server_qty"
            style="?attr/customListItemPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Server.Qty"
            android:gravity="center"/>

        <EditText
            android:id="@+id/server_qty_et"
            style="@style/EditText_ListItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Server.Qty"
            android:gravity="center"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/damaged_qty"
            style="@style/EditText_ListItem"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:tag="compliance"
            android:text="Damaged.Qty"
            android:gravity="center"/>

        <TextView
            android:id="@+id/balance"
            style="?attr/customListItemPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:tag="compliance"
            android:text="Balance"
            android:gravity="center"/>
        <TextView
            android:id="@+id/mrp"
            style="?attr/customListItemPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:tag="compliance"
            android:text="0"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>