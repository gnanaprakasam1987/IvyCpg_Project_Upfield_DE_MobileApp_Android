<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="?attr/customListTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"

            android:singleLine="true"
            android:text="@string/scheme_name" />

        <TextView
            style="?attr/customListTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"

            android:singleLine="true"
            android:text="@string/buy_qty" />

        <TextView
            style="?attr/customListTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"

            android:singleLine="true"
            android:text="@string/max_free_qty" />

        <TextView
            style="?attr/customListTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"

            android:singleLine="true"
            android:text="@string/max_disc" />
    </LinearLayout>

    <ListView
        android:id="@+id/schemePromoLv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/tv_max"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:cacheColorHint="@null"
        android:divider="#DCDCDC"
        android:dividerHeight="1dp" >
    </ListView>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:background="#DCDCDC"
        android:padding="4dp" >

        <Button
            android:id="@+id/btn_done"
           
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/done" />
    </LinearLayout>

</LinearLayout>