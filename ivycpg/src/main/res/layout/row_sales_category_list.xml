<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_5dp"
    android:id="@+id/list_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_2dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_categoryLabel"
                android:text="@string/category"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/text_size_secondary"/>
            <TextView
                android:id="@+id/txt_categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="?attr/primarycolor"
                android:textSize="@dimen/text_size_primary" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/invoice_no"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/text_size_secondary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invoice_no"
                android:id="@+id/txt_invoice_no"
                android:textColor="@color/FullBlack"
                android:textSize="@dimen/text_size_primary" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inv_amt"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/text_size_secondary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inv_amt"
                android:id="@+id/txt_invoice_value"
                android:textColor="@color/FullBlack"
                android:textSize="@dimen/text_size_primary" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/invoice_qty"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/text_size_secondary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invoice_qty"
                android:id="@+id/txt_invoice_qty"
                android:textColor="@color/FullBlack"
                android:textSize="@dimen/text_size_primary" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_lines"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/text_size_secondary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lines_sold"
                android:id="@+id/txt_invoice_lpc"
                android:textColor="@color/FullBlack"
                android:textSize="@dimen/text_size_primary" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>