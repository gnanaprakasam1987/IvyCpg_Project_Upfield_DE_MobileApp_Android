<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/WHITE">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SORT BY"
        android:layout_gravity="left"
        android:textSize="@dimen/font_small"
        android:layout_marginLeft="@dimen/profile_history_20dp"
        android:padding="@dimen/profile_header_txt_layout_marginleft"
        android:textColor="#175fab"
        android:gravity="center"
        android:minHeight="@dimen/competitor_heder_width"
        android:id="@+id/textView9" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@drawable/downloadsuccess"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/profile_history_20dp"
        android:layout_marginRight="@dimen/profile_history_20dp"
        android:background="@color/GRAY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/profile_history_25dp"
        android:layout_marginRight="@dimen/profile_history_25dp"
        android:layout_marginTop="@dimen/profile_history_10dp"
        android:layout_marginBottom="@dimen/profile_history_20dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/reason_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:layout_marginBottom="@dimen/profile_floatingbtn_marginright"></android.support.v7.widget.RecyclerView>

    </RelativeLayout>


</LinearLayout>
