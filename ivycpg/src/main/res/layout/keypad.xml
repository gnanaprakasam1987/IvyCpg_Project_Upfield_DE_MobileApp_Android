<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_keyboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/keypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/calcone"
            style="?attr/keypad_style"
            android:layout_weight="1"
            android:onClick="numberPressed"
            android:text="1" />

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_12dp"
            android:layout_gravity="center_vertical"
            android:background="@color/keypad_betwn_color"
            android:visibility="gone" />

        <Button
            android:id="@+id/calctwo"
            style="?attr/keypad_style"
            android:layout_weight="1"
            android:onClick="numberPressed"
            android:text="2" />

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_12dp"
            android:layout_gravity="center_vertical"
            android:background="@color/keypad_betwn_color"
            android:visibility="gone" />

        <Button
            android:id="@+id/calcthree"
            style="?attr/keypad_style"
            android:layout_weight="1"
            android:onClick="numberPressed"
            android:text="3" />

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_12dp"
            android:layout_gravity="center_vertical"
            android:background="@color/keypad_betwn_color"
            android:visibility="gone" />

        <Button
            android:id="@+id/calcfour"
            style="?attr/keypad_style"
            android:layout_weight="1"
            android:onClick="numberPressed"
            android:text="4" />

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_12dp"
            android:layout_gravity="center_vertical"
            android:background="@color/keypad_betwn_color"
            android:visibility="gone" />

        <Button
            android:id="@+id/calcfive"
            style="?attr/keypad_style"
            android:layout_weight="1"
            android:onClick="numberPressed"
            android:text="5" />

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_12dp"
            android:layout_gravity="center_vertical"
            android:background="@color/keypad_betwn_color"
            android:visibility="gone" />

        <Button
            android:id="@+id/calcsix"
            style="?attr/keypad_style"
            android:layout_weight="1"
            android:onClick="numberPressed"
            android:text="6" />

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_12dp"
            android:layout_gravity="center_vertical"
            android:background="@color/keypad_betwn_color"
            android:visibility="gone" />

        <Button
            android:id="@+id/calcseven"
            style="?attr/keypad_style"
            android:layout_weight="1"
            android:onClick="numberPressed"
            android:text="7" />

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_12dp"
            android:layout_gravity="center_vertical"
            android:background="@color/keypad_betwn_color"
            android:visibility="gone" />

        <Button
            android:id="@+id/calceight"
            style="?attr/keypad_style"
            android:layout_weight="1"
            android:onClick="numberPressed"
            android:text="8" />

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_12dp"
            android:layout_gravity="center_vertical"
            android:background="@color/keypad_betwn_color"
            android:visibility="gone" />

        <Button
            android:id="@+id/calcnine"
            style="?attr/keypad_style"
            android:layout_weight="1"
            android:onClick="numberPressed"
            android:text="9" />

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_12dp"
            android:layout_gravity="center_vertical"
            android:background="@color/keypad_betwn_color"
            android:visibility="gone" />

        <Button
            android:id="@+id/calczero"
            style="?attr/keypad_style"
            android:layout_weight="1"
            android:onClick="numberPressed"
            android:text="0" />

        <View
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="@dimen/dimen_12dp"
            android:layout_gravity="center_vertical"
            android:background="@color/keypad_betwn_color"
            android:visibility="gone" />

        <Button
            android:id="@+id/calcdot"
            style="?attr/keypad_style"
            android:layout_weight="1"
            android:onClick="numberPressed"
            android:text="."
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/calcdel"
            style="?attr/keypad_style"
            android:layout_weight="1"
            android:onClick="numberPressed"
            android:text="&#x2190;" />
    </LinearLayout>

</androidx.cardview.widget.CardView>