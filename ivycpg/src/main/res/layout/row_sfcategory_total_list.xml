<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/ic_camera_right_margin"
    android:layout_marginStart="@dimen/ic_camera_right_margin"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|start"
        android:text="@string/total"
        android:textColor="@color/task_title"
        android:textSize="@dimen/font_small" />


    <LinearLayout
        android:id="@+id/ll_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/right_margin"
        android:layout_marginTop="@dimen/target_top_margin"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_total_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:textColor="@color/GRAY_TEXT"
            android:textSize="@dimen/greyed_text_size" />

        <EditText
            android:id="@+id/et_total"
            style="@style/EditText_ListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:maxLength="4"
            android:text="0"
            android:textSize="@dimen/font_small" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_actual"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/right_margin"
        android:layout_marginTop="@dimen/target_top_margin"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_actual_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/actual"
            android:textColor="@color/GRAY_TEXT"
            android:textSize="@dimen/greyed_text_size" />

        <EditText
            android:id="@+id/et_actual"
            style="@style/EditText_ListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:maxLength="4"
            android:text="0"
            android:textSize="@dimen/font_small" />

    </LinearLayout>

</LinearLayout>