<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.design.widget.TabLayout
            android:id="@+id/dummy_tab_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.design.widget.TabLayout>

        <HorizontalScrollView
            android:id="@+id/hscrl_spl_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="?attr/primarycolor"
            android:fillViewport="true"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_spl_filter"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/special_filter_height"

                    android:orientation="horizontal" />
                <!--android:gravity="center_vertical"-->
                <LinearLayout
                    android:id="@+id/ll_tab_selection"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tab_indicator_height"
                    android:orientation="horizontal">
                    <!--android:layout_height="@dimen/tab_selection_identifier_height"-->
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/footer"
            android:layout_below="@+id/hscrl_spl_filter"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/filterscreenlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/search_edt_margin_bottom"
                android:layout_marginStart="@dimen/search_edt_margin_left_n_right"
                android:layout_marginEnd="@dimen/search_edt_margin_left_n_right"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="vertical">

                <ViewFlipper
                    android:id="@+id/view_flipper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white">

                        <TextView
                            android:id="@+id/productName"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/list_margin"
                            android:gravity="start"
                            android:maxLines="1"
                            android:textColor="?attr/primarycolor"
                            android:textSize="@dimen/font_nano_small"
                            android:layout_marginLeft="@dimen/list_margin" />

                        <Button
                            android:id="@+id/btn_search"
                            android:layout_width="@dimen/filter_icon"
                            android:layout_height="@dimen/filter_icon"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="2dp"
                            android:background="@drawable/ic_vector_search" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white">

                        <Button
                            android:id="@+id/btn_filter_popup"
                            android:layout_width="@dimen/filter_icon"
                            android:layout_height="@dimen/filter_icon"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/btn_productfilter_" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_searchproductName"
                                android:layout_width="0dip"
                                android:layout_height="@dimen/filter_icon"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:gravity="start|center_vertical"
                                android:maxLines="1"
                                android:inputType="text"
                                android:text=""
                                android:textColor="@color/GRAY_TEXT"
                                android:textSize="@dimen/font_nano_small" />

                            <Button
                                android:id="@+id/btn_clear"
                                android:layout_width="@dimen/filter_icon"
                                android:layout_height="@dimen/filter_icon"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:background="@drawable/ic_vector_action_clear_grey" />
                        </LinearLayout>
                    </LinearLayout>

                </ViewFlipper>
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/list_margin"
                app:cardBackgroundColor="@android:color/transparent">

                <RelativeLayout
                    android:id="@+id/prod"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_list_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/ll_keypad"
                        android:layout_alignParentTop="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ListHeader"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/list_header_height"
                            android:background="@color/list_title_bg_color"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:paddingStart="@dimen/list_padding_left_n_right"
                            android:paddingEnd="@dimen/list_padding_left_n_right">


                            <TextView
                                android:id="@+id/tvProductNameTitle"
                                style="?attr/customListTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="start|center_vertical"
                                android:text="@string/product_name" />

                            <TextView
                                android:id="@+id/totalTitle"
                                style="?attr/customListTitle"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/list_header_height"
                                android:layout_weight="1"
                                android:padding="3dp"
                                android:tag="sales_return_total"
                                android:text="@string/total"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <ListView
                            android:id="@+id/list"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:cacheColorHint="@null"
                            android:divider="@android:color/transparent"
                            android:dividerHeight="0dp"
                            android:padding="@dimen/dimen_1dp"
                            android:fitsSystemWindows="true" />
                    </LinearLayout>


                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/footer_height"
            android:layout_alignParentBottom="true"
            android:background="@color/footer_bg"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/target_top_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/order_volume"
                        android:textColor="?attr/accentcolor"
                        android:textSize="@dimen/greyed_text_size" />

                    <TextView
                        android:id="@+id/totalValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:text="@string/zero"
                        android:textColor="@color/WHITE"
                        android:textSize="@dimen/footer_lbl_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_lpc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/target_top_margin"
                    android:layout_toEndOf="@+id/ll_value"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/ll_value">

                    <TextView
                        android:id="@+id/lpc_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lines"
                        android:textColor="?attr/accentcolor"
                        android:textSize="@dimen/greyed_text_size" />

                    <TextView
                        android:id="@+id/lcp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:text="@string/zero"
                        android:textColor="@color/WHITE"
                        android:textSize="@dimen/footer_lbl_text_size" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                style="?attr/roundedCustomButtonSmall"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/next"
                android:textAllCaps="false"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/right_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/background_noise" />

</android.support.v4.widget.DrawerLayout>