<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/footer"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/filterscreenlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/search_edt_margin_left_n_right"
                android:layout_marginTop="@dimen/search_edt_margin_bottom"
                android:layout_marginEnd="@dimen/search_edt_margin_left_n_right"
                android:layout_marginBottom="@dimen/search_edt_margin_bottom"
                android:orientation="vertical">

                <ViewFlipper
                    android:id="@+id/view_flipper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white">

                        <TextView
                            android:id="@+id/productName"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/list_margin"
                            android:layout_marginLeft="@dimen/list_margin"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="start"
                            android:maxLines="1"
                            android:textColor="?attr/primarycolor"
                            android:textSize="@dimen/text_size_secondary" />

                        <Button
                            android:id="@+id/btn_search"
                            android:layout_width="@dimen/filter_icon"
                            android:layout_height="@dimen/filter_icon"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="2dp"
                            android:background="@drawable/ic_vector_search" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white">

                        <Button
                            android:id="@+id/btn_filter_popup"
                            android:layout_width="@dimen/filter_icon"
                            android:layout_height="@dimen/filter_icon"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/btn_productfilter_" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_searchproductName"
                                android:layout_width="0dip"
                                android:layout_height="@dimen/filter_icon"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:gravity="start|center_vertical"
                                android:inputType="text"
                                android:maxLines="1"
                                android:text=""
                                android:textColor="@color/gray_text"
                                android:textSize="@dimen/text_size_secondary" />

                            <Button
                                android:id="@+id/btn_clear"
                                android:layout_width="@dimen/filter_icon"
                                android:layout_height="@dimen/filter_icon"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:background="@drawable/ic_vector_action_clear_grey" />
                        </LinearLayout>
                    </LinearLayout>

                </ViewFlipper>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/prod"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_list_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ListHeader"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/list_header_height"
                        android:background="?attr/customListTitleBackgroundColor"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/list_padding_left_n_right"
                        android:paddingEnd="@dimen/list_padding_left_n_right">


                        <TextView
                            android:id="@+id/tvProductNameTitle"
                            style="@style/TextViewListTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="start|center"
                            android:text="@string/product_name" />

                        <TextView
                            android:id="@+id/totalTitle"
                            style="@style/TextViewListTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:tag="sales_return_total"
                            android:text="@string/total" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:cacheColorHint="@null"
                        android:divider="@color/light_gray"
                        android:dividerHeight="0.5dp"
                        android:fitsSystemWindows="true" />
                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/footer_height"
            android:layout_alignParentBottom="true"
            android:background="?attr/customFooterBackgroundColor"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/target_top_margin"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalText"
                        style="@style/TextViewFooterLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/order_volume" />

                    <TextView
                        android:id="@+id/totalValue"
                        style="@style/TextViewFooterValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:text="@string/zero" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_lpc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/target_top_margin"
                    android:layout_toEndOf="@+id/ll_value"
                    android:layout_toRightOf="@+id/ll_value"
                    android:orientation="vertical"
                    tools:ignore="ObsoleteLayoutParam">

                    <TextView
                        android:id="@+id/lpc_title"
                        style="@style/TextViewFooterLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lines" />

                    <TextView
                        android:id="@+id/lcp"
                        style="@style/TextViewFooterValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:text="@string/zero" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                style="?attr/roundedCustomButtonSmall"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/next"
                android:textAllCaps="false" />
        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/right_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/background_noise" />

</androidx.drawerlayout.widget.DrawerLayout>