<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <View
        android:layout_width="@dimen/dimen_4dp"
        android:layout_height="match_parent"
        android:background="?attr/primarycolor"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimens_10dp">

        <TextView
            style="@style/TextViewListItemPrimary"
            android:id="@+id/retailerNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="3dp"
            android:singleLine="true"
            android:text=""
            android:paddingLeft="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                style="@style/TextViewListItemCaption"
                android:id="@+id/advTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="3dp"
                android:text="@string/advance_payment"
                android:paddingLeft="3dp" />

            <TextView
                style="@style/TextViewListItemValues"
                android:id="@+id/cashMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="3dp"
                android:text=""
                android:paddingLeft="3dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimens_1dp"
            android:layout_height="@dimen/dimens_22dp"
            android:layout_gravity="center"
            android:background="@color/light_gray"
            android:gravity="center"
            android:padding="@dimen/dimens_4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:paddingStart="@dimen/dimens_10dp"
            android:paddingLeft="@dimen/dimens_10dp">

            <TextView
                style="@style/TextViewListItemCaption"
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:text="@string/date"
                android:paddingLeft="4dp" />

            <TextView
                style="@style/TextViewListItemValues"
                android:id="@+id/invDateTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:text=""
                android:paddingLeft="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimens_1dp"
            android:layout_height="@dimen/dimens_22dp"
            android:layout_gravity="center"
            android:background="@color/light_gray"
            android:gravity="center"
            android:padding="@dimen/dimens_4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:paddingStart="@dimen/dimens_10dp"
            android:paddingLeft="@dimen/dimens_10dp">

            <TextView
                style="@style/TextViewListItemCaption"
                android:id="@+id/invoiceAmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/amount"/>

            <TextView
                style="@style/TextViewListItemValues"
                android:id="@+id/adv_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingEnd="4dp"
                android:text="0000"
                android:paddingRight="4dp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5dp"
        android:background="@color/grey_odd" />
</LinearLayout>

</LinearLayout>