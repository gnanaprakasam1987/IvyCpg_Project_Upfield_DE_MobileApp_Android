<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_info_bubble"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical" >

        <TextView
            style="@style/TextViewListItemValuesHighLight"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true" />

        <TextView
            style="@style/TextViewListItemCaption"
            android:id="@+id/snippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/distance_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/FullBlack"
            android:visibility="gone"
            android:textSize="@dimen/font_small"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/start_visit_lty"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_deviate"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="end|center"
            android:text="@string/add_plan"
            style="@style/ButtonSmallRoundCornerTransparent_enabled"
            android:textColor="@color/FullBlack"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/btn_profile"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="end|center"
            android:text="@string/profile"
            style="@style/ButtonSmallRoundCornerTransparent_enabled"
            android:textColor="@color/FullBlack"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

</LinearLayout>