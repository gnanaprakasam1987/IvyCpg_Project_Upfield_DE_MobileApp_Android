<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <include
        android:id="@id/toolbar"
        layout="@layout/material_tool_bar" />
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/root"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@id/footer"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/filterscreenlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/search_edt_margin_bottom"
                    android:layout_marginLeft="@dimen/search_edt_margin_left_n_right"
                    android:layout_marginRight="@dimen/search_edt_margin_left_n_right"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:orientation="vertical">

                    <ViewFlipper
                        android:id="@+id/view_flipper"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:padding="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white">

                            <TextView
                                android:id="@+id/productName"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/list_margin"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:maxLines="1"
                                android:textColor="?attr/primarycolor"
                                android:textSize="@dimen/font_nano_small" />

                            <Button
                                android:id="@+id/btn_search"
                                android:layout_width="@dimen/filter_icon"
                                android:layout_height="@dimen/filter_icon"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:background="@drawable/ic_vector_search" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white">

                            <Button
                                android:id="@+id/btn_filter_popup"
                                android:layout_width="@dimen/filter_icon"
                                android:layout_height="@dimen/filter_icon"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/btn_productfilter_" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/white"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/edt_searchproductName"
                                    android:layout_width="0dip"
                                    android:layout_height="@dimen/filter_icon"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:gravity="left|center_vertical"
                                    android:imeOptions="actionSearch"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:text=""
                                    android:textColor="@color/GRAY_TEXT"
                                    android:textSize="@dimen/font_nano_small" />

                                <Button
                                    android:id="@+id/btn_clear"
                                    android:layout_width="@dimen/filter_icon"
                                    android:layout_height="@dimen/filter_icon"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="2dp"
                                    android:background="@drawable/ic_vector_action_clear_grey" />
                            </LinearLayout>
                        </LinearLayout>

                    </ViewFlipper>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_navigation"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/search_edt_margin_bottom"
                    android:layout_marginLeft="@dimen/search_edt_margin_left_n_right"
                    android:layout_marginRight="@dimen/search_edt_margin_left_n_right"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:visibility="gone">
                    <Button
                        android:id="@+id/btn_nav_prev"
                        android:layout_width="@dimen/filter_icon"
                        android:layout_height="@dimen/filter_icon"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_vector_nav_back_black"
                        android:layout_alignParentLeft="true"
                        android:visibility="invisible"/>
                    <TextView
                        style="?attr/customListItemPrimary"
                        android:id="@+id/tv_product_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:text="@string/normal_product"
                        android:layout_centerHorizontal="true"
                        android:textColor="?attr/colorPrimary"
                        />

                    <Button
                        android:id="@+id/btn_nav_next"
                        android:layout_width="@dimen/filter_icon"
                        android:layout_height="@dimen/filter_icon"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_vector_nav_forward_black"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/list_margin"
                    app:cardBackgroundColor="@android:color/transparent">

                    <RelativeLayout
                        android:id="@+id/prod"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/ll_keypad"
                            android:layout_alignParentTop="true"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ListHeader"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/list_title_height"
                                android:background="@color/list_title_bg_color"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/list_padding_left_n_right"
                                android:paddingRight="@dimen/list_padding_left_n_right"
                                >
                                <!--android:weightSum="10"-->
                                <TextView
                                    android:id="@+id/audit"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/dimens_10dp"
                                    android:layout_height="match_parent"
                                    android:text="@string/audit"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/tv_prodname_title"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="match_parent"
                                    android:gravity="left|center"
                                    android:text="@string/product_name"
                                    android:layout_weight="4"/>

                                <TextView
                                    android:id="@+id/total"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:tag="item_total"
                                    android:text="@string/total"
                                    android:visibility="gone"
                                    android:layout_weight="2"/>



                                <TextView
                                    android:id="@+id/pcsTitle"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:tag="item_piece"
                                    android:text="@string/item_piece"
                                    android:layout_weight="2"/>

                                <TextView
                                    android:id="@+id/freePcsTitle"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/order_stock_list_item_width"
                                    android:layout_height="wrap_content"
                                    android:tag="fi"
                                    android:text="@string/free_issued"
                                    android:layout_weight="2"/>

                                <TextView
                                    android:id="@+id/sihTitle"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:tag="sih"
                                    android:text="@string/sih"
                                    android:layout_weight="2"
                                    />
                                <TextView
                                    android:id="@+id/free_sihTitle"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:tag="sih"
                                    android:text="@string/free_sih"
                                    android:layout_weight="2"/>
                                <TextView
                                    android:id="@+id/mrpTitle"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:tag="sih"
                                    android:text="@string/mrp"
                                    android:layout_weight="2"
                                    android:visibility="gone"
                                    />
                                <TextView
                                    android:id="@+id/totalValTitle"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/dimen_0dp"
                                    android:layout_height="wrap_content"
                                    android:tag="@string/total_value"
                                    android:text="@string/total_value"
                                    android:layout_weight="2"

                                    />

                            </LinearLayout>

                            <ListView
                                android:id="@+id/list"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:cacheColorHint="@null"
                                android:divider="@android:color/white"
                                android:dividerHeight="1dp"
                                android:fitsSystemWindows="true" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_keypad"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical">

                            <include
                                android:id="@+id/keypad"
                                layout="@layout/keypad"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_60dp"
                android:layout_alignParentBottom="true"
                android:background="@color/list_title_bg_color"
                android:gravity="center"
                android:paddingLeft="@dimen/list_margin"
                android:paddingRight="@dimen/list_margin">

                <LinearLayout
                    android:id="@+id/ll_total_lines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/tv_total_lines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/tot_line"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/greyed_text_size"/>


                    <TextView
                        android:id="@+id/txt_total_lines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/WHITE"
                        android:textSize="@dimen/footer_lbl_text_size"
                        />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_total_values"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/ll_total_lines"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_10dp">


                    <TextView
                        android:id="@+id/tv_total_values"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/total_value"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/greyed_text_size"
                        />

                    <TextView
                        android:id="@+id/txt_total_values"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/WHITE"
                        android:textSize="@dimen/footer_lbl_text_size"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_save"
                    style="?attr/roundedCustomButtonSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimens_40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/done"
                    android:textAllCaps="false" />
            </RelativeLayout>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/right_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/background_noise" />

    </android.support.v4.widget.DrawerLayout>
</RelativeLayout>