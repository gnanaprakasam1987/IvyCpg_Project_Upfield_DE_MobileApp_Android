<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height_reports"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_retailername"
        style="@style/TextViewListItem"
        android:layout_width="@dimen/list_product_name_width_tiny"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_purchase_values"
        style="@style/TextViewListItem"
        android:layout_width="@dimen/list_item_width_double"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_lines_value"
        style="@style/TextViewListItem"
        android:layout_width="@dimen/list_item_width_double"
        android:layout_height="wrap_content"
        android:gravity="center" />


</LinearLayout>