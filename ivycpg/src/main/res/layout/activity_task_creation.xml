<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/closeTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/close"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar_ll">
        <include
            android:id="@+id/toolbar"
            layout="@layout/material_tool_bar"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_footer"
        android:layout_above="@id/footer"
        android:layout_below="@id/toolbar_ll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dimen_18dp"
                android:layout_marginRight="@dimen/dimen_18dp"
                android:layout_marginTop="@dimen/dimen_30dp">

                <TextView
                    android:id="@+id/task_title_tv"
                    android:textColor="?colorPrimary"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="8dp"
                    android:paddingBottom="0dp"
                    android:text="@string/plan_task"
                    android:textSize="@dimen/font_nano_small"/>

                <EditText
                    android:id="@+id/tv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:maxLength="25"
                    android:layout_gravity="left|center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/highlight_small"/>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/WHITE"
                card_view:cardUseCompatPadding="true"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_18dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp">

                    <EditText
                        android:id="@+id/taskView"
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/dimen_6dp"
                        android:paddingTop="@dimen/dimen_6dp"
                        android:gravity="left|top"
                        android:background="@drawable/feedback_edit_selector"
                        android:hint="@string/enter_task_description"
                        android:textColorHint="@color/new_grey"
                        android:maxLines="4"
                        android:textSize="@dimen/font_micro_small"
                        style="@style/EditText_ListItem"
                        android:textColor="@color/task_description_color"
                        android:layout_marginLeft="@dimen/list_margin"
                        android:maxLength="250"
                        android:inputType="textMultiLine"
                        android:layout_marginBottom="@dimen/list_margin"
                        android:paddingRight="@dimen/dimen_6dp"
                        android:cursorVisible="true"
                        />

                    <TextView
                        style="?textFieldStyle"
                        android:id="@+id/applicable_tv"
                        android:paddingTop="10dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:textColor="@android:color/black"
                        android:text="@string/applyto"
                        android:textSize="@dimen/font_micro_small"/>

                    <RadioGroup
                        android:id="@+id/rg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/seller"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/Seller"
                            android:textSize="@dimen/font_small"
                            android:paddingRight="@dimen/radio_button_gap"
                            android:textColor="@color/task_description_color" />

                        <RadioButton
                            android:id="@+id/Channelwise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Channelwise"
                            android:paddingRight="@dimen/radio_button_gap"
                            android:textSize="@dimen/font_small"
                            android:textColor="@color/task_description_color" />
                        <RadioButton
                            android:id="@+id/Retailerwise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/Retailerwise"
                            android:textSize="@dimen/font_small"
                            android:textColor="@color/task_description_color" />
                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/allchannel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:layout_marginBottom="@dimen/dimen_22dp"
                        android:visibility="gone" >

                        <CheckBox
                            android:id="@+id/allcheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:paddingRight="@dimen/dimen_20dp"
                            android:text="@string/all_channel"
                            android:textSize="@dimen/font_medium"
                            android:textColor="@color/task_description_color"
                            android:visibility="gone"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <Spinner
                                android:id="@+id/channel"
                                android:layout_centerHorizontal="true"
                                android:background="@android:color/transparent"
                                android:layout_width="@dimen/spinner_width"
                                android:layout_height="@dimen/spinner_height"
                                android:popupTheme="@android:style/ThemeOverlay.Material.Light"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/allretailer"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="6dp"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/dimen_22dp">

                        <CheckBox
                            android:id="@+id/allretaicheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:visibility="gone"
                            android:paddingRight="@dimen/dimen_20dp"
                            android:text="@string/all_retailer"
                            android:textSize="@dimen/font_medium"
                            android:textColor="@color/task_description_color" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:id="@+id/retailer"
                                android:layout_centerHorizontal="true"
                                android:background="@android:color/transparent"
                                android:layout_width="@dimen/spinner_width"
                                android:layout_height="@dimen/spinner_height"
                                android:popupTheme="@android:style/ThemeOverlay.Material.Light">
                            </Spinner>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/save_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_divider_height"
            android:background="@color/divider_view_color" />

        <Button
            android:id="@+id/saveTask"
            style="?attr/roundedCustomButtonNormal"
            android:layout_marginBottom="@dimen/activity_margin1"
            android:layout_marginTop="@dimen/activity_margin1"
            android:text="@string/save"
            android:textAllCaps="false"/>

    </LinearLayout>

</RelativeLayout>