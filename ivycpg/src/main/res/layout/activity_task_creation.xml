<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/material_tool_bar" />


    <ScrollView
        android:id="@+id/scroll_footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_2dp">

                <TextView
                    android:id="@+id/task_title_tv"
                    style="@style/TextViewNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="8dp"
                    android:paddingBottom="0dp"
                    android:text="@string/plan_task" />

                <EditText
                    android:id="@+id/tv"
                    style="@style/EditTextNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:maxLength="25"
                    tools:ignore="Autofill" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_6dp"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/taskView"
                        style="@style/EditTextNormal"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dimens_4dp"
                        android:layout_marginStart="@dimen/list_margin"
                        android:layout_marginLeft="@dimen/list_margin"
                        android:layout_marginBottom="@dimen/list_margin"
                        android:background="@drawable/feedback_edit_selector"
                        android:cursorVisible="true"
                        android:gravity="start|top"
                        android:hint="@string/enter_task_description"
                        android:inputType="textMultiLine"
                        android:maxLength="250"
                        android:maxLines="4"
                        android:padding="@dimen/dimen_6dp"
                        tools:ignore="Autofill" />

                    <TextView
                        android:id="@+id/applicable_tv"
                        style="@style/TextViewNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:paddingTop="10dp"
                        android:text="@string/applyto"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_size_primary" />

                    <RadioGroup
                        android:id="@+id/rg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:weightSum="9">

                        <RadioButton
                            android:id="@+id/seller"
                            style="@style/TextViewNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="3"
                            android:checked="true"
                            android:text="@string/Seller" />

                        <RadioButton
                            android:id="@+id/Channelwise"
                            style="@style/TextViewNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="3"
                            android:text="@string/Channelwise" />

                        <RadioButton
                            android:id="@+id/Retailerwise"
                            style="@style/TextViewNormal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="3"
                            android:text="@string/Retailerwise" />
                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/spinner_layouts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:weightSum="9">


                        <Spinner
                            android:id="@+id/spinner_seller"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/spinner_height"
                            android:layout_weight="3"
                            android:background="@android:color/transparent"
                            android:paddingStart="@dimen/dimen_20dp"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:paddingEnd="@dimen/dimen_10dp"
                            android:paddingRight="@dimen/dimen_10dp"
                            android:popupTheme="@android:style/ThemeOverlay.Material.Light"
                            tools:ignore="UnusedAttribute" />


                        <Spinner
                            android:id="@+id/channel"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/spinner_height"
                            android:layout_weight="3"
                            android:background="@android:color/transparent"
                            android:paddingStart="@dimen/dimen_20dp"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:paddingEnd="@dimen/dimen_10dp"
                            android:paddingRight="@dimen/dimen_10dp"
                            android:popupTheme="@android:style/ThemeOverlay.Material.Light"
                            tools:ignore="UnusedAttribute" />


                        <Spinner
                            android:id="@+id/retailer"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/spinner_height"
                            android:layout_weight="3"
                            android:background="@android:color/transparent"
                            android:paddingStart="@dimen/dimen_20dp"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:paddingEnd="@dimen/dimen_10dp"
                            android:paddingRight="@dimen/dimen_10dp"
                            android:popupTheme="@android:style/ThemeOverlay.Material.Light"
                            tools:ignore="UnusedAttribute">

                        </Spinner>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_divider_height"
        android:layout_above="@+id/save_ll"
        android:background="@color/divider_view_color" />

    <LinearLayout
        android:id="@+id/save_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="?attr/customFooterBackgroundColor"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/saveTask"
            style="?attr/roundedCustomButtonNormal"
            android:layout_gravity="center"
            android:text="@string/save"
            android:textAllCaps="false" />

    </LinearLayout>

</RelativeLayout>