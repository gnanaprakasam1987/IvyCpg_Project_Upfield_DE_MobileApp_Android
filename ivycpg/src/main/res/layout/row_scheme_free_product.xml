<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">


    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/tv_name"
            style="?attr/customListItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignWithParentIfMissing="true"
            android:text="@string/dummy_txt"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tv_sih"
            style="?attr/customListItemSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/dummy_txt"
            android:textSize="@dimen/greyed_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:padding="4dp">

        <EditText
            android:id="@+id/et_qty_pieces"
            style="@style/EditText_ListItem"
            android:layout_width="@dimen/target_plan_editbox_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/tv_sih"
            android:ems="10"
            android:inputType="number"
            android:keepScreenOn="true"
            android:maxLength="6"
            android:selectAllOnFocus="true"
            android:textSize="@dimen/font_micro_small"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_min_actualvalue"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/greyed_text_size" />

            <TextView
                android:id="@+id/tv_maxvalue"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/tv_min_actualvalue"
                android:textSize="@dimen/greyed_text_size" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_group_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll2"
        android:layout_marginLeft="@dimen/list_margin"
        android:textColor="?attr/primarycolor"
        android:text="Type"
        android:textSize="@dimen/font_micro_small" />
</RelativeLayout>