<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/WHITE"
        card_view:cardUseCompatPadding="true"
        android:layout_alignParentTop="true"
        card_view:contentPadding="3dp"
        android:visibility="gone"
        >
    <RelativeLayout
        android:id="@+id/layout_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_30dp"
       >
        <TextView
            android:id="@+id/text_group"
            style="?attr/customListItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_small"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_group"
       >
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/tv_name"
            style="?attr/customListItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignWithParentIfMissing="true"
            android:text="@string/dummy_txt"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tv_sih"
            style="?attr/customListItemSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/dummy_txt"
            android:textSize="@dimen/greyed_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:padding="4dp">

        <EditText
            android:id="@+id/et_qty_pieces"
            style="@style/EditText_ListItem"
            android:layout_width="@dimen/target_plan_editbox_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/tv_sih"
            android:ems="10"
            android:inputType="number"
            android:keepScreenOn="true"
            android:maxLength="6"
            android:selectAllOnFocus="true"
            android:textSize="@dimen/font_micro_small"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_min_actualvalue"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/greyed_text_size" />

            <TextView
                android:id="@+id/tv_maxvalue"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/tv_min_actualvalue"
                android:textSize="@dimen/greyed_text_size" />
        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>