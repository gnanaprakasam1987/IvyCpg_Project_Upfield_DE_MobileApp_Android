<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@id/toolbar"
        layout="@layout/material_tool_bar" />

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:padding="@dimen/dimens_6dp">

            <TextView
                android:id="@+id/lbl_cust_name"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="wrap_content"
                android:text="@string/Name"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_micro_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/val_cust_name"
                style="?attr/customListItemPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/font_micro_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:padding="@dimen/dimens_6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_cust_mob"
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ph_no"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_micro_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/val_cust_mob"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/font_micro_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_cust_date"
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_micro_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/val_cust_date"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/font_micro_small" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:padding="@dimen/dimens_6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_cust_counter"
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/counter"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_micro_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/val_cust_counter"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/font_micro_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_cust_store"
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/store_name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_micro_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/val_cust_store"
                    style="?attr/customListItemPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/font_micro_small" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_sales_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_header"
        android:layout_above="@+id/footer"
        android:layout_margin="@dimen/list_margin"
        app:cardBackgroundColor="@android:color/transparent">

        <RelativeLayout
            android:id="@+id/prod"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/ll_footer"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ListHeader"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_title_height"
                    android:background="@color/list_title_bg_color"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/list_padding_left_n_right"
                    android:paddingRight="@dimen/list_padding_left_n_right"
                    android:weightSum="10">


                    <TextView
                        style="?attr/customListTitle"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="left|center"
                        android:text="@string/product_name" />

                    <TextView
                        android:id="@+id/qtyTitle"
                        style="?attr/customListTitle"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:tag="item_qty"
                        android:text="@string/qty" />

                    <TextView
                        android:id="@+id/freeQtyTitle"
                        style="?attr/customListTitle"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:tag="free_qty"
                        android:text="@string/free" />

                    <TextView
                        android:id="@+id/mrpTitle"
                        style="?attr/customListTitle"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:tag="item_mrp"
                        android:text="@string/mrp" />

                    <TextView
                        android:id="@+id/valueTitle"
                        style="?attr/customListTitle"
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:tag="value"
                        android:text="@string/value" />


                </LinearLayout>

                <ExpandableListView
                    android:id="@+id/elv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:cacheColorHint="@null"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0dp"
                    android:groupIndicator="@null" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <View
                    android:id="@+id/vw_dotted_line_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_2dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:background="@drawable/line_dotted" />

                <LinearLayout
                    android:id="@+id/ll_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/vw_dotted_line_one"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimens_6dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5">

                        <TextView
                            android:id="@+id/lbl_cust_total"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/total"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_micro_small"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/val_cust_total"
                            style="?attr/customListItemPrimary"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="@dimen/font_micro_small" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/vw_dotted_line_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_2dp"
                    android:layout_below="@+id/ll_total"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:background="@drawable/line_dotted" />

                <LinearLayout
                    android:id="@+id/ll_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vw_dotted_line_two"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimens_6dp">

                    <LinearLayout
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/discount_type"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_micro_small"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spn_discount_type"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="@dimen/cheque_no_height"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:overlapAnchor="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/value"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/font_micro_small"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edt_value"
                                style="@style/EditTextDoubleLine"
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_weight="1"
                                android:focusableInTouchMode="true"
                                android:cursorVisible="true"
                                android:inputType="number"
                                android:text="@string/zero" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/amount"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/font_micro_small"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txt_discounted_amt"
                                style="?attr/customListItemPrimary"
                                android:layout_width="@dimen/dimen_0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/zero" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/vw_dotted_line_three"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_2dp"
                    android:layout_below="@+id/ll_discount"
                    android:layout_marginTop="@dimen/dimen_2dp"
                    android:background="@drawable/line_dotted" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vw_dotted_line_three"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="@dimen/dimen_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5">

                        <TextView
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/bill_value"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/font_micro_small"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_bill_amt"
                            style="@style/TextViewListItem"
                            android:layout_width="@dimen/dimen_0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/zero" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/list_title_bg_color"
        android:paddingLeft="@dimen/list_margin"
        android:paddingRight="@dimen/list_margin">

        <Button
            android:id="@+id/btn_save"
            style="?attr/roundedCustomButtonSmall"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/save"
            android:textAllCaps="false"
            android:layout_toLeftOf="@+id/btn_done"/>

        <Button
            android:id="@+id/btn_done"
            style="?attr/roundedCustomButtonSmall"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/done"
            android:textAllCaps="false"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>
