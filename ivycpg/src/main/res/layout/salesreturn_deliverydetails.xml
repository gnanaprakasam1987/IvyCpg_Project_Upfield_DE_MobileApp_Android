<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="6">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/txt_productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="left"
                android:padding="@dimen/padding_small"
                android:textSize="@dimen/font_micro_small" />

            <TextView
                android:id="@+id/txt_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_productName"
                android:gravity="left"
                android:padding="@dimen/padding_small"
                android:textSize="@dimen/font_micro_small" />

        </RelativeLayout>


        <TextView
            android:id="@+id/txt_returnCaseQuantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical" />

        <TextView
            android:id="@+id/txt_returnPieceQuantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="0" />

        <EditText
            android:id="@+id/txt_actualCaseQuantity"
            style="@style/EditText_ListItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="number"
            android:maxLength="4"
            android:text="0" />


        <EditText
            android:id="@+id/txt_actualPieceQuantity"
            style="@style/EditText_ListItem"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:inputType="number"
            android:maxLength="4"
            android:text="0" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>