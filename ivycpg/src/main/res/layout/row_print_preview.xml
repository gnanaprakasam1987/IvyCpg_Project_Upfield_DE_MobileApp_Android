<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/productcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/no"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_micro_small" />

        <TextView
            android:id="@+id/product_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_micro_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/upc"
            android:layout_width="@dimen/pp_row_upc"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/pp_row_upc_padding"
            android:text="@string/hiffen"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_micro_small" />

        <TextView
            android:id="@+id/qty"
            android:layout_width="@dimen/pp_row_case_unit"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp"
            android:text="@string/hiffen"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_micro_small" />

        <TextView
            android:id="@+id/price"
            android:layout_width="@dimen/pp_row_outer_price"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/hiffen"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_micro_small" />

        <TextView
            android:id="@+id/outerprice"
            android:layout_width="@dimen/pp_row_outer_price"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/hiffen"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_micro_small" />

        <TextView
            android:id="@+id/unitprice"
            android:layout_width="@dimen/pp_row_outer_price"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:paddingRight="5dp"
            android:text="@string/hiffen"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_micro_small" />

        <TextView
            android:id="@+id/discount"
            android:layout_width="@dimen/pp_row_discount"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/hiffen"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_micro_small" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="@dimen/pp_row_amount"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp"
            android:text="@string/hiffen"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_micro_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/batchlist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/schemelist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>