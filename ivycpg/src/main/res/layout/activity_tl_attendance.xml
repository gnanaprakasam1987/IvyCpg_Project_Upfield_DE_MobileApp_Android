<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <include
        android:id="@+id/toolbar"
        layout="@layout/material_tool_bar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/GRAY"
            android:padding="4dp" >



            <TextView
                android:layout_width="@dimen/header_merch_name_width"
                android:layout_height="@dimen/attendance_header_height"
                android:gravity="center_vertical"
                android:text="@string/username"
                android:textColor="@color/Black"
                android:textSize="@dimen/font_large"
                android:layout_marginStart="@dimen/dimen_80dp"
                android:layout_marginLeft="@dimen/dimen_80dp" />


        </LinearLayout>

        <ListView
            android:id="@+id/lv_attendance"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </ListView>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/GRAY" />
    </LinearLayout>

</LinearLayout>