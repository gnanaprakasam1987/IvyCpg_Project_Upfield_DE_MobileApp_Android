<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_info_bubble"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_usr_name"
        style="?attr/customListItemPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:textStyle="bold"
        android:gravity="center"
        android:text="" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                style="?attr/customListItemPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/user" />

            <LinearLayout
                android:id="@+id/btn_layout"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:clickable="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/user_in_work"
                    android:layout_width="@dimen/ret_image_size"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_battery"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_user_name"
                android:layout_marginLeft="@dimen/margin_5px"
                android:layout_marginStart="@dimen/margin_5px"
                android:maxLines="1"
                android:text="dasddd" />

            <TextView
                android:id="@+id/tv_activity"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_battery"
                android:layout_marginLeft="@dimen/margin_5px"
                android:layout_marginStart="@dimen/margin_5px"
                android:maxLines="1"
                android:text="ZAsffafsf" />
            <TextView
                android:id="@+id/tv_last_sync"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_activity"
                android:layout_marginLeft="@dimen/margin_5px"
                android:layout_marginStart="@dimen/margin_5px"
                android:maxLines="1"
                android:text="ZAsffafsf" />

            <TextView
                android:id="@+id/tv_address"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_last_sync"
                android:layout_marginLeft="@dimen/margin_5px"
                android:layout_marginStart="@dimen/margin_5px"
                android:maxLines="1"
                android:text="ZAsffafsf" />
        </RelativeLayout>

        <View
            android:id="@+id/view_dotted_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2dp"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:background="@drawable/line_dotted" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center_horizontal"
            android:id="@+id/time_layout">

            <LinearLayout
                android:id="@+id/ll_time_in"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:layout_marginStart="@dimen/dimen_4dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_time_in"
                    style="?attr/customListItemSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_in" />


                <TextView
                    android:id="@+id/tv_time_in"
                    style="?attr/customListItemSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/zero"
                    android:textColor="@color/black_bg1"
                    android:textSize="@dimen/font_micro_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_time_out"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:layout_marginStart="@dimen/dimen_4dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbl_time_out"
                    style="?attr/customListItemSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_out" />


                <TextView
                    android:id="@+id/tv_time_out"
                    style="?attr/customListItemSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/zero"
                    android:textColor="@color/black_bg1"
                    android:textSize="@dimen/font_micro_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sales_value"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_4dp"
                android:layout_marginStart="@dimen/dimen_4dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/lbl_sales_value"
                    style="?attr/customListItemSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_value" />


                <TextView
                    android:id="@+id/tv_sales_value"
                    style="?attr/customListItemSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/zero"
                    android:textColor="@color/black_bg1"
                    android:textSize="@dimen/font_micro_small" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_dotted_line_end"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_2dp"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:background="@drawable/line_dotted" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5dp">

            <TextView
                android:id="@+id/tv_seller"
                style="?attr/customListItemSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black_bg1" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
