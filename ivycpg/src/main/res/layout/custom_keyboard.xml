<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/WHITE"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/typed_value"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="5"
            android:background="@color/WHITE"
            android:paddingStart="25dp"
            android:paddingTop="10dp"
            android:textColor="@color/Black"
            android:textSize="40sp" />

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ripple_effect_keyboard"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:src="@drawable/ic_backspace_delete" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num_one"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="1"
            android:text="1"
            android:textColor="@color/Black"
            android:textSize="50sp"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_two"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="2"
            android:text="2"
            android:textColor="@color/Black"
            android:textSize="50sp"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_three"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="3"
            android:text="3"
            android:textColor="@color/Black"
            android:textSize="50sp"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num_four"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="4"
            android:text="4"
            android:textColor="@color/Black"
            android:textSize="50sp"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_five"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="5"
            android:text="5"
            android:textColor="@color/Black"
            android:textSize="50sp"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_six"
            android:layout_width="0dp"
            android:layout_height="60sp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="6"
            android:text="6"
            android:textColor="@color/Black"
            android:textSize="50sp"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num_seven"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="7"
            android:text="7"
            android:textColor="@color/Black"
            android:textSize="50sp"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_eight"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="8"
            android:text="8"
            android:textColor="@color/Black"
            android:textSize="50sp"
            android:typeface="serif" />

        <Button
            android:id="@+id/num_nine"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="9"
            android:text="9"
            android:textColor="@color/Black"
            android:textSize="50sp"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/WHITE"
            android:clickable="false" />

        <Button
            android:id="@+id/num_zero"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:tag="0"
            android:text="0"
            android:textColor="@color/Black"
            android:textSize="50sp"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/dec_dot"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:background="@drawable/ripple_effect_keyboard"
                android:tag="."
                android:text="."
                android:textColor="@color/Black"
                android:textSize="50sp"
                android:typeface="serif"
                android:visibility="gone"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:clickable="false" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:text="@string/cancel"
            android:textColor="@color/Black" />

        <Button
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_effect_keyboard"
            android:text="@string/ok"
            android:textColor="@color/Black" />

    </LinearLayout>

</LinearLayout>
