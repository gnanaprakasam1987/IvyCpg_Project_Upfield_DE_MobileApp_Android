<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/list_item_padding_top_nd_bottom"
    android:paddingTop="@dimen/list_item_padding_top_nd_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/list_padding_left_n_right"
        android:paddingRight="@dimen/list_padding_left_n_right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvProductName"
            style="?attr/customListItemPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:gravity="left|center_vertical"
            android:text="@string/product_name" />

        <TextView
            android:id="@+id/tvtimeTaken"
            style="?attr/customListItemPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:text="@string/time_taken" />

        <TextView
            android:id="@+id/tvresult"
            style="?attr/customListItemPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:text="@string/result" />

        <TextView
            android:id="@+id/tvfeedback"
            style="?attr/customListItemPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="left|center_vertical"
            android:text="@string/feedback" />


    </LinearLayout>
</LinearLayout>