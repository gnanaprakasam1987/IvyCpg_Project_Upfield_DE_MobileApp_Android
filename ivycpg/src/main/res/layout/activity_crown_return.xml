<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <include
                layout="@layout/keypad"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/meter_and_navigation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/footer"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/material_tool_bar" />

            <RelativeLayout
                android:id="@+id/filterscreenlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/search_edt_margin_bottom"
                android:layout_marginStart="@dimen/search_edt_margin_left_n_right"
                android:layout_marginEnd="@dimen/search_edt_margin_left_n_right"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titlebar"
                    style="?textTitleStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="8dp"
                    android:text="@string/order_entry"
                    android:visibility="gone" />

                <ViewFlipper
                    android:id="@+id/view_flipper"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white">

                        <TextView
                            android:id="@+id/productName"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/list_margin"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:maxLines="1"
                            android:textColor="?attr/primarycolor"
                            android:textSize="@dimen/font_nano_small" />

                        <Button
                            android:id="@+id/btn_search"
                            android:layout_width="@dimen/filter_icon"
                            android:layout_height="@dimen/filter_icon"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="2dp"
                            android:background="@drawable/ic_vector_search" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white">

                        <Button
                            android:id="@+id/btn_filter_popup"
                            android:layout_width="@dimen/filter_icon"
                            android:layout_height="@dimen/filter_icon"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/btn_productfilter_" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_searchproductName"
                                android:layout_width="0dip"
                                android:layout_height="@dimen/filter_icon"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:gravity="start|center_vertical"
                                android:inputType="text"
                                android:maxLines="1"
                                android:text=""
                                android:textColor="@color/GRAY_TEXT"
                                android:textSize="@dimen/font_nano_small" />

                            <Button
                                android:id="@+id/btn_clear"
                                android:layout_width="@dimen/filter_icon"
                                android:layout_height="@dimen/filter_icon"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:background="@drawable/ic_vector_action_clear_grey" />
                        </LinearLayout>
                    </LinearLayout>

                </ViewFlipper>
            </RelativeLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/list_margin"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/crown_list_title_height"
                                android:background="@color/list_title_bg_color"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/productBarcodetitle"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/order_stock_list_barcode"
                                    android:layout_height="match_parent"
                                    android:tag="barcode"
                                    android:text="@string/barcode" />

                                <TextView
                                    android:id="@+id/productnametitle"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/order_stock_list_product_name_width_xlarge"
                                    android:layout_height="match_parent"
                                    android:text="@string/product_name" />

                                <LinearLayout
                                    android:id="@+id/ll_crown_product"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/crownTitle"
                                            style="?attr/customListTitle"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/crown_header_height"
                                            android:text="@string/crown_product" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_crown_caseTitle"
                                            style="?attr/customListTitle"
                                            android:layout_width="@dimen/order_stock_list_item_width_xlarge"
                                            android:layout_height="match_parent"
                                            android:tag="item_case"
                                            android:text="@string/item_case" />

                                        <TextView
                                            android:id="@+id/tv_crown_outercaseTitle"
                                            style="?attr/customListTitle"
                                            android:layout_width="@dimen/order_stock_list_item_width_xlarge"
                                            android:layout_height="match_parent"
                                            android:tag="item_outer"
                                            android:text="@string/item_outer" />

                                        <TextView
                                            android:id="@+id/tv_crown_pcsTitle"
                                            style="?attr/customListTitle"
                                            android:layout_width="@dimen/order_stock_list_item_width_xlarge"
                                            android:layout_height="match_parent"
                                            android:tag="item_piece"
                                            android:text="@string/item_piece" />
                                    </LinearLayout>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_crown_total"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/meter_value_width_large"
                                    android:layout_height="match_parent"
                                    android:tag="totaltitle"
                                    android:text="@string/total" />

                                <LinearLayout
                                    android:id="@+id/ll_free_product"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_freeTitle"
                                            style="?attr/customListTitle"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/crown_header_height"
                                            android:text="@string/free_goods" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_free_caseTitle"
                                            style="?attr/customListTitle"
                                            android:layout_width="@dimen/order_stock_list_item_width_xlarge"
                                            android:layout_height="match_parent"
                                            android:tag="item_case"
                                            android:text="@string/item_case" />

                                        <TextView
                                            android:id="@+id/tv_free_outercaseTitle"
                                            style="?attr/customListTitle"
                                            android:layout_width="@dimen/order_stock_list_item_width_xlarge"
                                            android:layout_height="match_parent"
                                            android:tag="item_outer"
                                            android:text="@string/item_outer" />

                                        <TextView
                                            android:id="@+id/tv_free_pcsTitle"
                                            style="?attr/customListTitle"
                                            android:layout_width="@dimen/order_stock_list_item_width_xlarge"
                                            android:layout_height="match_parent"
                                            android:tag="item_piece"
                                            android:text="@string/item_piece" />
                                    </LinearLayout>
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tv_freeTotal"
                                    style="?attr/customListTitle"
                                    android:layout_width="@dimen/meter_value_width_large"
                                    android:layout_height="match_parent"
                                    android:tag="totaltitle"
                                    android:text="@string/total" />
                            </LinearLayout>

                            <ListView
                                android:id="@+id/list"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:cacheColorHint="@null"
                                android:divider="@android:color/white"
                                android:dividerHeight="1dp"
                                android:fitsSystemWindows="true"></ListView>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/right_drawer"
        android:layout_width="@dimen/filter_slider_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/background_noise" />

</android.support.v4.widget.DrawerLayout>