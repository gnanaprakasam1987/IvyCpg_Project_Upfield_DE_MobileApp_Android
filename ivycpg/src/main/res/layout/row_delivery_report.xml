<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_40dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/product_name_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dimen_2dp"
        android:paddingStart="@dimen/dimen_2dp"
        android:text="@string/product_name"
        android:textColor="@color/FullBlack"
        android:textSize="@dimen/font_micro_small" />

    <TextView
        android:id="@+id/case_qty"
        android:layout_width="@dimen/list_item_width_medium"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/item_case"
        android:textColor="@color/FullBlack"
        android:textSize="@dimen/font_micro_small" />

    <TextView
        android:id="@+id/piece_qty"
        android:layout_width="@dimen/list_item_width_medium"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/item_piece"
        android:textColor="@color/FullBlack"
        android:textSize="@dimen/font_micro_small" />

    <TextView
        android:id="@+id/outer_qty"
        android:layout_width="@dimen/list_item_width_medium"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/item_outer"
        android:textColor="@color/FullBlack"
        android:textSize="@dimen/font_micro_small" />

</LinearLayout>
