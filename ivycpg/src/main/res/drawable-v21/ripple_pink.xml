<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">
    <!-- Pressed -->
    <item
        android:drawable="@color/colorPinkripple_pressed"
        android:state_pressed="true" />
    <!-- Selected -->
    <item
        android:drawable="@color/colorPinkripple_selected"
        android:state_selected="true" />
    <!-- Focus -->
    <item
        android:drawable="@color/colorPinkripple_focused"
        android:state_focused="true" />
    <!-- Default -->
    <item android:drawable="@color/colorPrimaryDarkPink" />
</ripple>